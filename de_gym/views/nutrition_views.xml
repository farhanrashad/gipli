<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Nutrition -->
        <record id="nutrition_tree_view" model="ir.ui.view">
			<field name="name">nutrition.tree.view</field>
			<field name="model">gym.nutrients</field>
			<field name="arch" type="xml">
				<tree string="Nutrition" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>
        
        <record id="nutrition_search_view" model="ir.ui.view">
            <field name="name">nutrition.search.view</field>
            <field name="model">gym.nutrients</field>
            <field name="arch" type="xml">
                <search string="Nutrtition">
                    <field name="name" string="Nutrition"/>
                </search>
             </field>
        </record>
        
        <record id="action_nutrition" model="ir.actions.act_window">
            <field name="name">Nutrients</field>
            <field name="res_model">gym.nutrients</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="nutrition_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new nutrition
                </p>
            </field>
        </record>
        
        <menuitem name="Nutrients" id="menu_gym_subscription_nutrition_nutrition"
            parent="menu_gym_subscription_config_nutr" 
            action="action_nutrition"
            groups="de_gym.group_gym_manager" 
            sequence="10"
        />
        
    </data>
</odoo>