<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="sale_order_form_view_inherit_gym_subscription" model="ir.ui.view">
      <field name="name">sale.order.form.view.inherit.gym.subscription</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <field name="subscription_order" invisible="1"/>
            <field name="gym_order" invisible="1"/>
        <field name="subscription_status" invisible="1"/>
        </xpath>
        
      </field>
  </record>
    
</odoo>
