<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        <record id="class_planning_line_tree_view" model="ir.ui.view">
			<field name="name">gym.class.planning.line.tree.view</field>
			<field name="model">gym.class.planning.line</field>
			<field name="arch" type="xml">
				<tree string="Class Planning">
                    <field name="class_type_id"/>
					<field name="trainer_id"/>
                    <field name="date"/>
                    <field name="day_of_week"/>
                    <field name="status" decoration-success="status == 'completed'" decoration-info="status == 'session'" decoration-primary="status == 'upcoming'" widget="badge"/>

				</tree>
			</field>
		</record>

        <record id="class_planning_line_calendar_view" model="ir.ui.view">
        <field name="name">class.planning.line.calendar.view</field>
        <field name="model">gym.class.planning.line</field>
        <field name="arch" type="xml">
            <calendar string="Class Planning" create="0" mode="month" date_start="date" color="status"  quick_create="0">
                <field name="class_type_id"/>
                <field name="date"/>
                <field name="status" filters="1" invisible="1"/>
                <field name="trainer_id" filters="2" invisible="1" />
            </calendar>
        </field>
    </record>
        
        <record id="class_planning_line_search_view" model="ir.ui.view">
            <field name="name">gym.class.planning.search.view</field>
            <field name="model">gym.class.planning.line</field>
            <field name="arch" type="xml">
                <search string="Class Planning">
                    <field name="trainer_id" />
                    <field name="class_type_id" />
                    <field name="date" />
                    <field name="day_of_week" />
                    <field name="status" />

                    <filter string="Today Classes" name="today_classes"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all session which has date is today"/>

                    <filter string="Upcoming" name="upcoming_classes"
                        domain="[('date', '&gt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all session which has date is after today"/>
                    
                    <separator/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Class" name="groupby_class_type" context="{'group_by': 'class_type_id'}"/>
                        <filter string="Trainer" name="groupby_trainer" context="{'group_by': 'trainer_id'}"/>
                        <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                    <separator/>
                    </group>
                </search>
             </field>
        </record>
        
        <record id="action_class_planning_line" model="ir.actions.act_window">
            <field name="name">Class Schedules</field>
            <field name="res_model">gym.class.planning.line</field>
            <field name="view_mode">calendar,tree</field>
            <field name="search_view_id" ref="class_planning_line_search_view"/>
            <field name="context">{
                'create': False,
                'edit': False,
                'search_default_upcoming_classes': 1,
                }
            </field>
        </record>
        
        <menuitem name="Class Schedules" id="menu_gym_subscription_classes_planning_line"
            parent="menu_gym_subscription_classes" 
            action="action_class_planning_line"
            sequence="20"
        />
        
    </data>
</odoo>