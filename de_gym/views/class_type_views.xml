<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Class Type -->
        <record id="class_type_tree_view" model="ir.ui.view">
			<field name="name">class.type.tree.view</field>
			<field name="model">gym.class.type</field>
			<field name="arch" type="xml">
				<tree string="Meal Type" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>
        
        <record id="class_type_search_view" model="ir.ui.view">
            <field name="name">class.type.search.view</field>
            <field name="model">gym.class.type</field>
            <field name="arch" type="xml">
                <search string="Meal Type">
                    <field name="name" string="Meal Type"/>
                </search>
             </field>
        </record>
        
        <record id="action_class_type" model="ir.actions.act_window">
            <field name="name">Class Type</field>
            <field name="res_model">gym.class.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="meal_type_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new class type
                </p>
            </field>
        </record>
        
        <menuitem name="Class Type" id="menu_gym_subscription_config_class_type"
            parent="menu_gym_subscription_config_class" 
            action="action_class_type"
            groups="de_gym.group_gym_manager" 
            sequence="10"
        />
        
    </data>
</odoo>