<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Workout Activity -->
        <record id="workout_activity_tree_view" model="ir.ui.view">
			<field name="name">activity.type.tree.view</field>
			<field name="model">gym.workout.activity</field>
			<field name="arch" type="xml">
				<tree string="Workout Activity" editable="bottom">
					<field name="name"/>
                    <field name="wo_activity_type_id" 
                        options="{'no_create':True,'no_edit':True,'no_open':True}"
                    />
				</tree>
			</field>
		</record>
        
        <record id="workout_activity_search_view" model="ir.ui.view">
            <field name="name">workout.activity.search.view</field>
            <field name="model">gym.workout.activity</field>
            <field name="arch" type="xml">
                <search string="Workout Activity">
                    <field name="name" />
                    <field name="wo_activity_type_id" string="Type"/>
                </search>
             </field>
        </record>
        
        <record id="action_workout_activity" model="ir.actions.act_window">
            <field name="name">Workout Activity</field>
            <field name="res_model">gym.workout.activity</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="workout_activity_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a workout activity
                </p>
            </field>
        </record>
        
        <menuitem name="Activities" id="menu_gym_subscription_workout_activity"
            parent="menu_gym_subscription_workout" 
            action="action_workout_activity"
            groups="de_gym.group_gym_manager" 
            sequence="10"
        />
        
    </data>
</odoo>