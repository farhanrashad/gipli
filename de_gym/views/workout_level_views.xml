<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Wrokout Levels -->
        <record id="workout_level_tree_view" model="ir.ui.view">
			<field name="name">workout.level.tree.view</field>
			<field name="model">gym.workout.level</field>
			<field name="arch" type="xml">
				<tree string="Wrokout Level" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>
        
        <record id="workout_level_search_view" model="ir.ui.view">
            <field name="name">workout.level.search.view</field>
            <field name="model">gym.workout.level</field>
            <field name="arch" type="xml">
                <search string="Wrokout Level">
                    <field name="name" string="Workout Level"/>
                </search>
             </field>
        </record>
        
        <record id="action_workout_level" model="ir.actions.act_window">
            <field name="name">Workout Level</field>
            <field name="res_model">gym.workout.level</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="workout_level_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a workout level
                </p>
            </field>
        </record>
        
        <menuitem name="Level" id="menu_gym_subscription_config_workout_level"
            parent="menu_gym_subscription_config_workout" 
            action="action_workout_level"
            groups="de_gym.group_gym_manager" 
            sequence="20"
        />
        
    </data>
</odoo>