<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        <record id="nutr_planning_line_weekly_tree_view" model="ir.ui.view">
			<field name="name">gym.nutr.planning.line.weekly.tree.view</field>
			<field name="model">gym.nutr.planning.line</field>
			<field name="arch" type="xml">
				<tree string="Nuitrition Planning" editable="bottom">
                    <field name="day_of_week"/>
					<field name="nutr_meal_type_id" options="{'no_create':True,'no_edit':True,'no_open':True}" />
                    <field name="nutr_meal_note" />
				</tree>
			</field>
		</record>

        <record id="nutr_planning_line_daily_tree_view" model="ir.ui.view">
			<field name="name">gym.nutr.planning.line.daily.tree.view</field>
			<field name="model">gym.nutr.planning.line</field>
			<field name="arch" type="xml">
				<tree string="Nuitrition Planning" editable="bottom">
                    <field name="date"/>
                    <field name="day_of_week"/>
					<field name="nutr_meal_type_id" options="{'no_create':True,'no_edit':True,'no_open':True}" />
                    <field name="nutr_meal_note" />
                    <field name="status" decoration-success="status == 'completed'" decoration-info="status == 'session'" decoration-primary="status == 'upcoming'" widget="badge"/>

				</tree>
			</field>
		</record>

        <record id="nutr_planning_line_calendar_view" model="ir.ui.view">
        <field name="name">nutr.planning.line.calendar.view</field>
        <field name="model">gym.nutr.planning.line</field>
        <field name="arch" type="xml">
            <calendar string="Nuitrition Planning" create="0" mode="month" date_start="date" color="status"  quick_create="0">
                <field name="nutr_planning_id"  />
                <field name="day_of_week"/>
                <field name="date"/>
                <field name="status" filters="1" invisible="1"/>
                <field name="member_id" filters="2" invisible="1" />
            </calendar>
        </field>
    </record>
        
        <record id="nutr_planning_line_search_view" model="ir.ui.view">
            <field name="name">gym.nutr.planning.search.view</field>
            <field name="model">gym.nutr.planning.line</field>
            <field name="arch" type="xml">
                <search string="Nuitrition Planning">
                    <field name="member_id" />
                    <field name="nutr_meal_type_id"  />
                    <field name="date" />
                    <field name="day_of_week" />
                    <field name="status" />

                    <filter string="Today Classes" name="today_classes"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all session which has date is today"/>

                    <filter string="Upcoming" name="upcoming_classes"
                        domain="[('date', '&gt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all session which has date is after today"/>
                    
                    <separator/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Day of Week" name="groupby_day_of_week" domain="[]" context="{'group_by': 'day_of_week'}"/>
                        <filter string="Meal Type" name="groupby_meal_type" context="{'group_by': 'nutr_meal_type_id'}"/>
                        <filter string="Member" name="groupby_member" context="{'group_by': 'member_id'}"/>
                        <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                        
                    <separator/>
                    </group>
                </search>
             </field>
        </record>
        
        <record id="action_nutr_planning_line_daily" model="ir.actions.act_window">
            <field name="name">Nuitrition Schedules</field>
            <field name="res_model">gym.nutr.planning.line</field>
            <field name="view_mode">calendar,tree</field>
            <field name="search_view_id" ref="nutr_planning_line_search_view"/>
            <field name="view_id" ref="nutr_planning_line_daily_tree_view"/>
        </record>

        <record id="action_nutr_planning_line_weekly" model="ir.actions.act_window">
            <field name="name">Nuitrition Schedules</field>
            <field name="res_model">gym.nutr.planning.line</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="nutr_planning_line_search_view"/>
            <field name="view_id" ref="nutr_planning_line_weekly_tree_view"/>
        </record>
        
        
    </data>
</odoo>