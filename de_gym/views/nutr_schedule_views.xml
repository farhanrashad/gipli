<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Schedule Nuitrition -->
        
        <record id="nutr_schedule_form_view" model="ir.ui.view">
            <field name="name">nutr.schedule.form.view</field>
            <field name="model">gym.schedule.nutr</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Nuitrition Schedule">
                    <header>
                        
                    </header>
                    <sheet>
                         <field name="company_id" invisible="1" />
                        <div class="oe_title">
                            <label for="member_id"/>
                            <h1>
                                <field name="member_id" options="{'no_create_edit':False}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" />
                                <field name="day_of_week" />
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nuitrition" name="nuitrition" >
                                <field name="nutr_schedule_line">
                                    <tree editable="bottom">
                                        <field name="nutr_meal_type_id" options="{'no_create':True,'no_edit':True}" />
                                        <field name="nutr_meal_note" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="nutr_schedule_tree_view" model="ir.ui.view">
			<field name="name">nutr_schedule.tree.view</field>
			<field name="model">gym.schedule.nutr</field>
			<field name="arch" type="xml">
				<tree string="Schedule Nuitrition">
					<field name="member_id"/>
                    <field name="date"/>
                    <field name="day_of_week"/>
                    <field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

        <record id="nutr_schedule_calendar_view" model="ir.ui.view">
            <field name="name">nutr.schedule.calendar.view</field>
            <field name="model">gym.schedule.nutr</field>
            <field name="arch" type="xml">
                <calendar string="Schedule Nuitrition" date_start="date" color="member_id" quick_create="0" mode="month">
                    <field name="member_id" filters="1" color="color" />
                    <field name="day_of_week" />
                    <field name="date" />
                </calendar>
            </field>
        </record>
        
        <record id="nutr_schedule_search_view" model="ir.ui.view">
            <field name="name">gym.schedule.nutr.search.view</field>
            <field name="model">gym.schedule.nutr</field>
            <field name="arch" type="xml">
                <search string="Schedule Nuitrition">
                    <field name="member_id" />
                    <field name="date" />
                    <field name="day_of_week" />
                </search>
             </field>
        </record>
        
        <record id="action_schedule_nuitrition" model="ir.actions.act_window">
            <field name="name">Schedule Nuitrition</field>
            <field name="res_model">gym.schedule.nutr</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="search_view_id" ref="nutr_schedule_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    define a nuitrition schedule
                </p>
            </field>
        </record>
        
        <menuitem name="Nuitrition" id="menu_gym_subscription_schedule_nuitrition"
            parent="menu_gym_subscription_nutrition" 
            action="action_schedule_nuitrition"
            sequence="10"
        />
        
    </data>
</odoo>