<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Schedule Nuitrition -->
        
        <record id="nutr_planning_form_view" model="ir.ui.view">
            <field name="name">nutr.schedule.form.view</field>
            <field name="model">gym.nutr.planning</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Nuitrition Schedule">
                    <header>
                        <button name="button_plan" 
                            string="Plan" 
                            type="object" 
                            class="oe_highlight" 
                            data-hotkey="o"
                            invisible="state != 'draft'"
                        />
                        <button name="button_plan" 
                            string="Plan" 
                            type="object" 
                            data-hotkey="o"
                            invisible="state != 'review'"
                        />
                        <button name="button_draft" 
                            string="Set to Draft" 
                            type="object" 
                            invisible="state not in ('draft','review')"
                        />
                        <button name="button_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="oe_highlight" 
                            data-hotkey="C"
                            invisible="state != 'review'"
                        />
                        <button name="button_cancel" 
                            string="Cancel" 
                            type="object" 
                            invisible="state in ('cancel','close')"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,progress,close"/>
                    </header>
                    <sheet>
                        <field name="company_id" invisible="1" />
                        <field name="date_start" invisible="1" />
                        <field name="date_end" invisible="1" />
                        <div class="oe_button_box" name="button_box">
                            <button
                                name="open_weekly_plan"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                type="object"
                                invisible="week_plan_count == 0"
                            >
                                <field name="week_plan_count" widget="statinfo" string="Weekly Plan"/>
                            </button>
                            <button
                                name="open_daily_plan"
                                class="oe_stat_button"
                                icon="fa-calendar-o"
                                type="object"
                                invisible="day_plan_count == 0"
                            >
                                <field name="day_plan_count" widget="statinfo" string="Daily Plan"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="member_id"/>
                            <h1>
                                <field name="member_id" options="{'no_create_edit':False}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_start" 
                                    string="Planned Date" 
                                    widget="daterange" 
                                    options="{&quot;end_date_field&quot;: &quot;date_end&quot;, &quot;always_range&quot;: &quot;1&quot;}" 
                                    required="date_start or date_end"
                                    readonly="state not in ('draft','review')"
                                />
                            </group>
                            <group>
                                <field name="date" />
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="nutr_planning_tree_view" model="ir.ui.view">
			<field name="name">nutr.planning.tree.view</field>
			<field name="model">gym.nutr.planning</field>
			<field name="arch" type="xml">
				<tree string="Nuitrition Planning">
					<field name="member_id"/>
                    <field name="date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

        <record id="nutr_planning_calendar_view" model="ir.ui.view">
            <field name="name">nutr.planning.calendar.view</field>
            <field name="model">gym.nutr.planning</field>
            <field name="arch" type="xml">
                <calendar string="Nuitrition Planning" date_start="date" color="member_id" quick_create="0" mode="month">
                    <field name="member_id" filters="1" color="color" />
                    <field name="date" />
                </calendar>
            </field>
        </record>
        
        <record id="nutr_planning_search_view" model="ir.ui.view">
            <field name="name">gym.nutr.planning.search.view</field>
            <field name="model">gym.nutr.planning</field>
            <field name="arch" type="xml">
                <search string="Nuitrition Planning">
                    <field name="member_id" />
                    <field name="date" />
                </search>
             </field>
        </record>
        
        <record id="action_nutr_planning" model="ir.actions.act_window">
            <field name="name">Nuitrition Planning</field>
            <field name="res_model">gym.nutr.planning</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="search_view_id" ref="nutr_planning_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    define a nuitrition planning
                </p>
            </field>
        </record>
        
        <menuitem name="Planning" id="menu_gym_subscription_nutrition_planning"
            parent="menu_gym_subscription_nutrition" 
            action="action_nutr_planning"
            sequence="10"
        />
        
    </data>
</odoo>