<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="admission_register_search" model="ir.ui.view">
        <field name="name">Food Item - Search</field>
        <field name="model">gym.food.item</field>
        <field name="arch" type="xml">
            <search string="Food Item Search">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Food Item Tree View -->
    <record id="food_item_tree_view" model="ir.ui.view">
        <field name="name">food.item.tree.view</field>
        <field name="model">gym.food.item</field>
        <field name="arch" type="xml">
            <tree string="Food Item" >
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="food_item_form_view" model="ir.ui.view">
        <field name="name">food.item.form.view</field>
        <field name="model">gym.food.item</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Food Item">
                <header>
                    
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Butter"/>
                        </h1>
                    </div>
                    <separator string="Description"/>
                    <field name="description" type="html" options="{'collaborative': true, 'resizable': false}" placeholder="Food Item detail..."/>
                    <notebook>
                        <page string="Nutrients" name="nutrients" >
                            <field name="food_item_line">
                                <tree editable="bottom">
                                    <field name="nutrient_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="quantity"/>
                                    <field name="uom_id" options='{"no_open": True, "no_create": True}'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_food_item" model="ir.actions.act_window">
        <field name="name">Food Item</field>
        <field name="res_model">gym.food.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="food_item_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Define food item!
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_gym_subscription_nutrition_food_item"
        name="Food Item"
        parent="menu_gym_subscription_nutrition"
        action="action_food_item"
        sequence="20"/>
    
</odoo>
