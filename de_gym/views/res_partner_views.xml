<?xml version="1.0" encoding="utf-8"?>
<odoo>
    

    <record id="action_gym_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_customer': 1,
            'res_partner_search_mode': 'customer', 
            'default_is_company': False,
            'default_company_type': 'person',
            'default_customer_rank': 1,
            'default_is_gym_member': 1,
            }
        </field>
        <field name="domain">[
            ('is_gym_member', '=', True),
            ]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new member in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a member.
            </p>
        </field>
    </record>
    
    <menuitem name="Members" 
        id="menu_gym_subscription_main_members"
        parent="menu_gym_subscription_main" 
        action="action_gym_member"
        sequence="100"
    />
    
</odoo>