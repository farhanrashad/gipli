<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Class form view -->
        
        <record id="gym_class_planning_form_view" model="ir.ui.view">
            <field name="name">gym.class.planning.form.view</field>
            <field name="model">gym.class.planning</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="GYM Class Planning">
                    <header>
                        <button name="button_plan" 
                            string="Plan" 
                            type="object" 
                            class="oe_highlight" 
                            data-hotkey="o"
                            invisible="state != 'draft'"
                        />
                        <button name="button_draft" 
                            string="Set to Draft" 
                            type="object" 
                            invisible="state in ('draft')"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,review,progress,close"/>
                    </header>
                    <sheet>
                        <field name="company_id" invisible="1" />
                        <field name="date_start" invisible="1" />
                        <field name="date_end" invisible="1" />
                        <div class="oe_title">
                            <label for="class_type_id"/>
                            <h1>
                                <field name="class_type_id" options="{'no_create':True,'no_edit':True,'no_open':True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="trainer_id" options="{'no_create':True,'no_edit':True}" />
                                <field name="sub_trainer_id" options="{'no_create':True,'no_edit':True}" />

                                <field name="date_start" string="Planned Date" widget="daterange" options="{&quot;end_date_field&quot;: &quot;date_end&quot;, &quot;always_range&quot;: &quot;1&quot;}" required="date_start or date_end"/>
                                
                                <label for="time_from" string="Timing"/>
                                <div>
                                    <field name="time_from" style="width: 5rem;" widget="float_time"/>
                                    <span> - </span>
                                    <field name="time_to" style="width: 5rem;" widget="float_time"/>
                                </div>
                            </group>
                            <group>
                                <field name="location" />
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <div>
                                <field name="day_mon" nolabel="1" class="oe_inline" style="padding-left:0px;padding-right:2px;" />
                                <span class="oe_inline" >Monday</span>
                                
                                <field name="day_tue" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Tuesday</span>
                                
                                <field name="day_wed" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Wednesday</span>

                                <field name="day_thu" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Thursday</span>

                                <field name="day_fri" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Friday</span>

                                <field name="day_sat" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Saturday</span>

                                <field name="day_sun" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Sunday</span>
                        </div>
                       
                        <notebook>
                            <page string="Schedule" name="schedule" >
                                <field name="class_line">
                                    <tree editable="bottom">
                                        <field name="date" />
                                        <field name="day_of_week" />
                                        <field name="time_from" widget="float_time"/>
                                        <field name="time_to" widget="float_time"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="gym_class_planning_tree_view" model="ir.ui.view">
			<field name="name">gym.class.planning.tree.view</field>
			<field name="model">gym.class.planning</field>
			<field name="arch" type="xml">
				<tree string="Class Planning">
					<field name="trainer_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>
        
        <record id="gym_class_planning_search_view" model="ir.ui.view">
            <field name="name">gym.class.planning.search.view</field>
            <field name="model">gym.class.planning</field>
            <field name="arch" type="xml">
                <search string="Class Planning">
                    <field name="trainer_id" />
                </search>
             </field>
        </record>
        
        <record id="action_class_planning" model="ir.actions.act_window">
            <field name="name">Class Planning</field>
            <field name="res_model">gym.class.planning</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="gym_class_planning_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Plan a new class.
                </p>
            </field>
        </record>
        
        <menuitem name="Planning" id="menu_gym_subscription_classes_planning"
            parent="menu_gym_subscription_classes" 
            action="action_class_planning"
            sequence="10"
        />
        
    </data>
</odoo>