<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Activity Type -->
        <record id="activity_type_tree_view" model="ir.ui.view">
			<field name="name">activity.type.tree.view</field>
			<field name="model">gym.activity.type</field>
			<field name="arch" type="xml">
				<tree string="Activity Type" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>
        
        <record id="activity_type_search_view" model="ir.ui.view">
            <field name="name">activity.type.search.view</field>
            <field name="model">gym.activity.type</field>
            <field name="arch" type="xml">
                <search string="Activity Type">
                    <field name="name" string="Acitity Type"/>
                </search>
             </field>
        </record>
        
        <record id="action_activity_type" model="ir.actions.act_window">
            <field name="name">Activity Type</field>
            <field name="res_model">gym.activity.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="activity_type_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a activity type
                </p>
            </field>
        </record>
        
        <menuitem name="Activity Type" id="menu_gym_subscription_config_workout_activity_type"
            parent="menu_gym_subscription_config_workout" 
            action="action_activity_type"
            groups="de_gym.group_gym_manager" 
            sequence="10"
        />
        
    </data>
</odoo>