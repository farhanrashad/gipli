<odoo>
    <data>
        <!-- Define a form view for Schedule Wizard -->
        <record id="nutr_schedule_wizard_form_view" model="ir.ui.view">
            <field name="name">nutr.schedule.wizard.wizard.form</field>
            <field name="model">gym.nutr.schedule.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="member_id"/>
                            <h1>
                                <field name="member_id" options="{'no_create':True,'no_edit':True}" />
                            </h1>
                        </div>
                        <group>
                            <group>
                               <field name="date_start"/>
                            </group>
                            <group>
                                <field name="date_end"/>
                            </group>
                        </group>
                            <div>
                                <field name="day_mon" nolabel="1" class="oe_inline" style="padding-left:0px;padding-right:2px;" />
                                <span class="oe_inline" >Monday</span>
                                
                                <field name="day_tue" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Tuesday</span>
                                
                                <field name="day_wed" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Wednesday</span>

                                <field name="day_thu" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Thursday</span>

                                <field name="day_fri" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Friday</span>

                                <field name="day_sat" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Saturday</span>

                                <field name="day_sun" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Sunday</span>
                            </div>
                        <notebook>
                            <page string="Nuitrition" name="nuitrition" >
                                <field name="schedule_wizard_line">
                                    <tree editable="bottom">
                                        <field name="schedule_wizard_id" column_invisible="1" />
                                        <field name="nutr_meal_type_id" options="{'no_create':True,'no_edit':True}" />
                                        <field name="nutr_meal_note" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <button name="action_create_schedule" string="Schedule" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define an action to open the form view -->
        <record id="action_nutr_schedule_wizard" model="ir.actions.act_window">
            <field name="name">Schedule</field>
            <field name="res_model">gym.nutr.schedule.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="nutr_schedule_wizard_form_view"/>
        </record>

        <menuitem name="Nuitrition" id="menu_gym_subscription_schedule_nuitrition_wizard"
            parent="menu_gym_subscription_schedule" 
            action="action_nutr_schedule_wizard"
            sequence="1"
        />

    </data>
</odoo>
