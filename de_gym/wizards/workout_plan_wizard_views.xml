<odoo>
    <data>
        <!-- Define a form view for workout plan Wizard -->
        <record id="workout_plan_wizard_form_view" model="ir.ui.view">
            <field name="name">workout.plan.wizard.form</field>
            <field name="model">gym.workout.plan.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        
                        <div class="oe_title">
                            <label for="workout_planning_id" string="Workout plan for"/>
                            <h1>
                                <field name="workout_planning_id" />
                            </h1>
                        </div>
                        <group>
                            <group>
                               
                            </group>
                            <group>
                                
                            </group>
                        </group>
                            <div>
                                <field name="day_mon" nolabel="1" class="oe_inline" style="padding-left:0px;padding-right:2px;" />
                                <span class="oe_inline" >Monday</span>
                                
                                <field name="day_tue" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Tuesday</span>
                                
                                <field name="day_wed" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Wednesday</span>

                                <field name="day_thu" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Thursday</span>

                                <field name="day_fri" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Friday</span>

                                <field name="day_sat" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Saturday</span>

                                <field name="day_sun" nolabel="1" class="oe_inline" style="padding-left:30px;padding-right:2px;" />
                                <span class="oe_inline" >Sunday</span>
                            </div>
                            <group>
                               <group>
                                   <field name="wo_activity_type_id" />
                                   <field name="workout_sets" />
                                   <field name="workout_reps" />
                                   
                               </group>
                               <group>
                                   <field name="workout_activity_id" 
                                       options="{'no_create':True,'no_edit':True}"
                                    />
                                   <field name="workout_weight" />
                                   <field name="workout_rest" />
                               </group>
                            </group>
                        <footer>
                            <button name="action_create_schedule" string="Schedule" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define an action to open the form view -->
        <record id="action_workout_plan_wizard" model="ir.actions.act_window">
            <field name="name">Workout Plan</field>
            <field name="res_model">gym.workout.plan.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="workout_plan_wizard_form_view"/>
        </record>
    </data>
</odoo>
