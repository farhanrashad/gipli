<odoo>
<data>
<!-- Display form view of wizard -->
<record id="view_employee_statement_form" model="ir.ui.view">
    <field name="name">hr.employee.statement.form</field>
    <field name="model">employee.statement.wizard</field>
    <field name="arch" type="xml">
        <form string="Employee Statement Report:">
            <group>
                <group>
                    <field name="on_date"/>
                </group>
                <group>
                    <field name="date_to"/>
                </group>
            </group>
            <footer>
                <button string="Print" name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn-default" special="cancel"/>
            </footer>
        </form>
    </field>
</record>
<!-- Open the wizard on click of menu -->
    <record id="open_employee_statement_action" model="ir.actions.act_window">
        <field name="name">Employee Statement Report</field>
        <field name="res_model">employee.statement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_employee_statement_form"/>
    </record>
    <menuitem action="open_employee_statement_action" id="employee_statement_report" name="Employee Statement Report" parent="hr_attendance.menu_hr_attendance_report" sequence="1"/>
</data>
</odoo>