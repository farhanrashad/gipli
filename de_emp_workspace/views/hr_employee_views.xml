<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="server_action_get_current_user_id" model="ir.actions.server">
        <field name="name">Get Current User ID</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="code">model.get_current_user_id()</field>
    </record>


    <record id="view_employee_profile_form" model="ir.ui.view">
        <field name="name">employee.profile.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form string="Employee Profile">
                <header>
                    
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="mobile_phone"/>
                            <field name="work_email"/>
                            <field name="work_phone"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="company_country_id" invisible="1"/>
                            <field name="company_country_code" invisible="1"/>
                        </group>
                        <group>
                            <field name="department_id" domain="[]"/>
                            <field name="job_id" domain="[]"/>
                            <field name="parent_id" domain="[]" />
                            <field name="coach_id" domain="[]" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define the action to open the form view -->
    <record id="action_my_profile" model="ir.actions.act_window">
        <field name="name">My Profile</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_employee_profile_form"/>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="context">{'default_user_id': 'server_action_get_current_user_id'}</field>
        <field name="domain">[('user_id', '=', 'server_action_get_current_user_id')]</field>
    </record>

    <menuitem id="menu_my_profile" name="My Profile" parent="menu_employee" action="action_my_profile" sequence="10"/>
    <menuitem
            id="menu_hr_employee"
            name="Directory"
            action="hr.hr_employee_public_action"
            parent="hr.menu_hr_root"
            sequence="4"/>
</odoo>
