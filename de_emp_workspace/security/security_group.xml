<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define the security group -->
        <record id="group_employee_workspace" model="res.groups">
            <field name="name">Employee Workspace Group</field>
        </record>

        <record id="group_employee_allow_manul_attendance" model="res.groups">
            <field name="name">Allow to mark manual attendance</field>
        </record>


        <!-- Assign access rights to the menu items -->
        <record model="ir.module.category" id="module_category_employee_workspace">
            <field name="name">Employee Workspace</field>
        </record>
        
        <record id="menu_workspace" model="ir.ui.menu">
            <field name="name">Workspace</field> <!-- Specify a name for the menu item -->
            <field name="groups_id" eval="[(6, 0, [ref('group_employee_workspace')])]"/>
        </record>

        
    </data>
</odoo>
