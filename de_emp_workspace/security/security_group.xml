<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define the security group -->
        <record id="group_employee_workspace" model="res.groups">
            <field name="name">Employee Workspace Group</field>
        </record>


        <!-- Assign access rights to the menu items -->
        <record model="ir.module.category" id="module_category_employee_workspace">
            <field name="name">Employee Workspace</field>
        </record>
        
        <record id="menu_workspace" model="ir.ui.menu">
            <field name="name">Workspace</field> <!-- Specify a name for the menu item -->
            <field name="groups_id" eval="[(6, 0, [ref('group_employee_workspace')])]"/>
        </record>

        <!-- Define the record rules for employee profiles -->
        <record id="access_employee_profile_own" model="ir.rule">
            <field name="name">Employee Profile Own</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_employee_workspace'))]"/>
            <field name="perm_read" eval="1"/>
        </record>

        <!-- Define the record rules for contracts -->
        <record id="access_contract_own" model="ir.rule">
            <field name="name">Contract Own</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_employee_workspace'))]"/>
            <field name="perm_read" eval="1"/>
        </record>
        
    </data>
</odoo>
