<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="book_type_form_view">
            <field name="name">Book Type Form</field>
            <field name="model">oe.school.library.book.type</field>
            <field name="arch" type="xml">
                <form string="Book Type Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="book_category_id"/>

<!--                                <field name="author_id"/>-->
                            </group>
                            <group>
                                <field name="code"/>
<!--                                <field name="publisher_id"/>-->
                                <field name="price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="book_type_list_view">
            <field name="name">Book Type List</field>
            <field name="model">oe.school.library.book.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="book_type_action">
            <field name="name">Book Types</field>
            <field name="res_model">oe.school.library.book.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
