<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_book_category_form" model="ir.ui.view">
        <field name="name">os.school.library.book.category.form</field>
        <field name="model">os.school.library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_book_category_list" model="ir.ui.view">
        <field name="name">os.school.library.book.category.list</field>
        <field name="model">os.school.library.book.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="action_book_category" model="ir.actions.act_window">
        <field name="name">Book Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">os.school.library.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
