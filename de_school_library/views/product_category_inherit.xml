<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_product_category_form_inherit" model="ir.ui.view">
            <field name="name">product.category.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="is_book"/>
                </field>
            </field>
        </record>
        <record id="view_product_inherit_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="invoice_policy" position="after">
                    <field name="author_id"/>
                    <field name="publisher_id"/>
                    <field name="book_type_id"/>
                    <field name="isbn_no"/>
                    <field name="book_tag_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="stock_production_lot_form_view_inherit">
            <field name="name">stock.production.lot.form.inherit</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="isbn_no"/>
                    <field name="edition_no"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>