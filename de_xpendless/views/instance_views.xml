<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the CRM Configuration menu -->

        <!-- Define the form view for Xpendless Instance -->
        <record id="view_xpendless_instance_form" model="ir.ui.view">
            <field name="name">xpendless.instance.form</field>
            <field name="model">xpl.instance</field>
            <field name="arch" type="xml">
                <form string="Xpendless Instance">
                    <header>
                        <!-- Add a button in the header -->
                        <button name="connection_test" type="object" string="Test Connection" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="button_draft" type="object" string="Set to Draft" invisible="state not in ('verified','active')"/>
                        <button name="button_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'verified'"/> 


                        <field name="state" widget="statusbar" statusbar_visible="draft,verified,active" force_save="1"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Xpendless Connection" 
                                    force_save="1"
                                    readonly="state != 'draft'"
                                />
                            </h1>
                        </div>
                        <group>
                            <field name="url" readonly="state != 'draft'"/>
                            <field name="url_sample" class="text-muted" nolabel="1" readonly="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="api_key" password="True" readonly="state != 'draft'" />
                                <field name="access_token" password="True" readonly="state != 'draft'" />
                            </group>
                            <group>
                                <field name="api_secret" readonly="state != 'draft'" password="True" />
                                <field name="company_id" />
                            </group>
                        </group>

                        <notebook>    
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the tree view for Xpendless Instance -->
        <record id="view_xpendless_instance_tree" model="ir.ui.view">
            <field name="name">xpendless.instance.tree</field>
            <field name="model">xpl.instance</field>
            <field name="arch" type="xml">
                <tree string="Xpendless Instances">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Define the action for the Expendless Instance -->
        <record id="action_xpendless_instance" model="ir.actions.act_window">
            <field name="name">Xpendless Instances</field>
            <field name="res_model">xpl.instance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Create a menu item for xpendless Instance -->
        <menuitem id="menu_xpendless_instance_list" name="Instances" parent="menu_xpendless_config" action="action_xpendless_instance" sequence="20"/>

    </data>
</odoo>
