<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- form view -->
    <record id="res_partner_inherit_xpendless" model="ir.ui.view">
        <field name="name">res.partner.inherit.xpendless</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="is_xpendless" invisible="not is_xpendless" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="xpendless" string="Xpendless" invisible="not is_xpendless">
                    <group>
                        <group>
                            <field name="xpl_id" />
                            <field name="xpl_owner" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_xpendless_customers" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_customer': 1,
            'res_partner_search_mode': 'customer', 
            'default_is_company': False,
            'default_company_type': 'person',
            'default_customer_rank': 1,
            'default_is_xpendless': 1,
            }
        </field>
        <field name="domain">[
            ('is_xpendless', '=', True),
            ]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new member in your address book
            </p>
            <p>
                Odoo helps you easily track all activities related to a member.
            </p>
        </field>
    </record>
    
    <menuitem name="Customers" 
        id="menu_xpendless_customers_customers"
        parent="menu_xpendless_customers" 
        action="action_xpendless_customers"
        sequence="100"
    />
    
</odoo>