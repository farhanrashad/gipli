<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_xpl_logs_wizard_form" model="ir.ui.view">
        <field name="name">xpl.logs.wizard.form</field>
        <field name="model">xpl.logs.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    
                </group>
                
                <group>
                    
                </group>
                <footer>
                    <button name="run_process" string="Process" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Define an action to open the form view -->
        <record id="action_logs_wizard" model="ir.actions.act_window">
            <field name="name">Logs</field>
            <field name="res_model">xpl.logs.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_xpl_logs_wizard_form"/>
        </record>

    <menuitem name="Logs" 
        id="menu_xpendless_main_logs"
        parent="menu_xpendless_main" 
        action="action_logs_wizard"
        sequence="2"
    />
    
</odoo>
