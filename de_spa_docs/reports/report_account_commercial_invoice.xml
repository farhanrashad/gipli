<odoo>
    <data>
        <template id="account_move_com_template_report_view">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <div class="mb-4 mt-3">
                        <div id="basic_info" class="row mt-4 mb32">
                            <div t-if="o.invoice_date" class="col-6 bm-2">
                                <div class="mr8 mr-8" style="display:table-cell;width:30%;"><strong >Request On</strong></div>
                                <span t-field="o.invoice_date" class="m-0"/>
                            </div>
                            <div t-if="o.name" class="col-6 bm-2">
                                <strong>From Date</strong>
                                <p t-field="o.name" class="m-0"/>
                            </div>
                        </div>
                    </div>

                    <div class="row m-0 mt-0 mb0">
                        <div id="basic_info" class="col-6 mt-4 mb32">
                            <span style="width:25%;"><strong>Date</strong></span>
                            <div t-if="o.invoice_date" class="">
                                <span t-field="o.invoice_date" class="m-0"/>
                            </div>
                            <span style="width:25%;"><strong>Invoice #</strong></span>
                            <div t-if="o.name" class="">
                                <span t-field="o.name" class="m-0"/>
                            </div>
                        </div>
                        
                    </div>
                    <br/><br/>
                    <table class="table table-borderless mt-4" >
                        <tbody>
                            <tr class="row m-0 mt-0 mb0">
                                <div id="basic_info" class="col-6 mt-4 mb32">
                                    <td style="width:25%;"><strong>Date</strong></td>
                                    <td style="width:40%;">
                                        <div t-if="o.invoice_date" class="">
                                            <span t-field="o.invoice_date" class="m-0"/>
                                        </div>
                                    </td>
                                    <td style="width:10%;"><strong>Invoice #</strong></td>
                                    <td >
                                        <div t-if="o.name" class="">
                                            <span t-field="o.name" class="m-0"/>
                                        </div>
                                    </td>
                                </div>
                                <div id="basic_info" class="col-6 mt-4 mb32">
                                    <td style="width:10%;"><strong>Date1</strong></td>
                                    <td style="width:40%;">
                                        <div t-if="o.invoice_date" class="">
                                            <span t-field="o.invoice_date" class="m-0"/>
                                        </div>
                                    </td>
                                    <td style="width:10%;"><strong>Invoice #1</strong></td>
                                    <td >
                                        <div t-if="o.name" class="">
                                            <span t-field="o.name" class="m-0"/>
                                        </div>
                                    </td>
                                </div>
                            </tr>
                            <tr class="m-0 mt-0 mb0">
                                <td style="width:10%;"><strong>Seller Name</strong></td>
                                <td style="width:40%;">
                                    <div t-if="o.company_id" class="">
                                        <span t-field="o.company_id.name" class="m-0"/>
                                    </div>
                                </td>
                                <td style="width:10%;"><strong>Buyer Name</strong></td>
                                <td >
                                    <div t-if="o.partner_id" class="">
                                        <span t-field="o.partner_id.name" class="m-0"/>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Partner Detail -->
                    <table class="table table-bordered  mt-4" >
                        <tbody>
                            <tr>
                                <td style="width:20%;">Shop Name</td>
                                <td><h1><span t-field="o.partner_id.name"/></h1></td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td><span t-field="o.partner_id.street"/>,<span t-field="o.partner_id.city"/>,<span t-field="o.partner_id.country_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Contact Person</td>
                                <td>0</td>
                            </tr>
                            <tr>
                                <td>Contact Name</td>
                                <td></td>
                            </tr>
                           
                        </tbody>
                    </table>

                    <!-- Product Details -->
                    <table class="table table-bordered table-striped">
                        <thead style="display: table-row-group">
                            <tr>
                                <th class="text-center" colspan="6">Product Details</th>
                            </tr>
                            <tr>
                                <th class="text-center">Sr. #</th>
                                <th class="text-center">Product</th>
                                <th class="text-center">Barcode</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Qty</th>
                                <th class="text-center">Amount</th>
                            </tr>
                        </thead>
                        <tbody class="consumed_tbody">
                            <t t-set="index" t-value="0"/>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <t t-set="index" t-value="index + 1"/>
                                <tr>
                                    <td class="text-center"><t t-esc="index"/></td>
                                    <td class="text-center"><span t-field="line.product_id"/></td>
                                    <td class="text-center"><span t-field="line.product_id.barcode"/></td>
                                    <td class="text-center"><span t-field="line.price_unit"/></td>
                                    <td class="text-center"><span t-field="line.quantity"/></td>
                                    <td class="text-center"><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <table class="table table-bordered table-striped" style="width:70%;float:right;">
                        <tbody class="">
                            <tr>
                                <td class="text-center" colspan="2"><strong>Summary</strong></td>
                            </tr>
                            <tr>
                                <td class="text-center">Gross</td>
                                <td class="text-center"><span t-field="o.amount_total_signed"/></td>
                            </tr>
                            <tr>
                                <td class="text-center">Discount</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td class="text-center">Total Units</td>
                                <td class="text-center"><span t-esc="sum(o.invoice_line_ids.mapped('quantity'))"/></td>
                            </tr>
                        </tbody>
                    </table>
                    

                    <table class="table table-bordered table-striped" style="height:100px;">
                        <tbody class="">
                            <tr>
                                <td class="text-center">Customer Signature</td>
                                <td class="text-center">Account Signature</td>
                            </tr>
                        </tbody>
                    </table>
                    
                </div>
            </t>
        </template>
        
        <template id="account_move_com_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="de_spa_docs.account_move_com_template_report_view" />
                </t>
            </t>
        </template>
        <!--  account invoice Report  -->
        <record id="account_invoice_com_report" model="ir.actions.report">
            <field name="name">Commercial Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_spa_docs.account_move_com_report_template</field>
            <field name="report_file">de_spa_docs.account_move_com_report_template</field>
            <field name="print_report_name">'Commercial Invoice'</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>