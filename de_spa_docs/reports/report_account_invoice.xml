<odoo>
    <data>
        <template id="account_move_template_report_view">
            <t t-call="web.external_layout">
                <div class="page">
                    <br/>
                    <div class="oe_structure"/>
                    
                    <table class="table table-bordered  mt-4" style="width:50%;text-align:right;float:right;">
                        <tbody>
                            <tr>
                                <td>Date</td>
                                <td><span t-field="o.date"/></td>
                            </tr>
                            <tr>
                                <td>Invoice #</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td>Discount</td>
                                <td>0</td>
                            </tr>
                            <tr>
                                <td>PO #</td>
                                <td><span t-field="o.ref"/></td>
                            </tr>
                            <tr>
                                <td>PO Date</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Partner Detail -->
                    <table class="table table-bordered  mt-4" >
                        <tbody>
                            <tr>
                                <td style="width:20%;">Shop Name</td>
                                <td><h1><span t-field="o.partner_id.name"/></h1></td>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <td><span t-field="o.partner_id.street"/>,<span t-field="o.partner_id.city"/>,<span t-field="o.partner_id.country_id.name"/></td>
                            </tr>
                            <tr>
                                <td>Contact Person</td>
                                <td>0</td>
                            </tr>
                            <tr>
                                <td>Contact Name</td>
                                <td></td>
                            </tr>
                           
                        </tbody>
                    </table>

                    <!-- Product Details -->
                    <table class="table table-bordered table-striped">
                        <thead style="display: table-row-group">
                            <tr>
                                <th class="text-center" colspan="6">Product Details</th>
                            </tr>
                            <tr>
                                <th class="text-center">Sr. #</th>
                                <th class="text-center">Product</th>
                                <th class="text-center">Barcode</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Qty</th>
                                <th class="text-center">Amount</th>
                            </tr>
                        </thead>
                        <tbody class="consumed_tbody">
                            <t t-set="index" t-value="0"/>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <t t-set="index" t-value="index + 1"/>
                                <tr>
                                    <td class="text-center"><t t-esc="index"/></td>
                                    <td class="text-center"><span t-field="line.product_id"/></td>
                                    <td class="text-center"><span t-field="line.product_id.barcode"/></td>
                                    <td class="text-center"><span t-field="line.price_unit"/></td>
                                    <td class="text-center"><span t-field="line.quantity"/></td>
                                    <td class="text-center"><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    

                    
                </div>
            </t>
        </template>
        
        <template id="account_move_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="de_spa_docs.account_move_template_report_view" />
                </t>
            </t>
        </template>
        <!--  account invoice Report  -->
        <record id="account_invoice_report" model="ir.actions.report">
            <field name="name">Print Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_spa_docs.account_move_report_template</field>
            <field name="report_file">de_spa_docs.account_move_report_template</field>
            <field name="print_report_name">'Invoice'</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>