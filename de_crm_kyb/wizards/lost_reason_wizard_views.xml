<?xml version="1.0"?>
<odoo>
        <record id="crm_lead_kyb_lost_form_view" model="ir.ui.view">
            <field name="name">crm.lead.kyb.lost.form</field>
            <field name="model">crm.lead.lost</field>
            <field name="arch" type="xml">
                <form string="Reject Verification">
                    <field name="lead_ids" invisible="1"></field>
                    <group>
                        <field name="lost_reason_id" options="{'no_create_edit': True}" />
                        <field name="lost_feedback" placeholder="What went wrong?"/>
                    </group>
                    <footer>
                        <button name="action_lead_kyb_lost" 
                            string="Reject" type="object" 
                            class="btn-primary" 
                            confirm="Are you sure you want to reject the verification?"
                        />
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_crm_kyb_lead_lost" model="ir.actions.act_window">
            <field name="name">Mark Lost</field>
            <field name="res_model">crm.lead.lost</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="crm_lead_kyb_lost_form_view"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="crm.model_crm_lead"/>
            <field name="context">{
                'dialog_size' : 'medium',
                'default_lead_ids': active_ids,
            }</field>
        </record>
</odoo>
