<odoo>
    <menuitem
        id="crm_menu_kyb"
        name="KYB"
        parent="crm.crm_menu_root"
        sequence="2"/>

    <record id="sale_crm_case_form_inherit_kyb" model="ir.ui.view">
        <field name="name">sale.crm.case.form.inherit.kyb</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="is_kyb" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_view_sale_quotation']" position="attributes">
                <attribute name="invisible">type == "lead" or is_kyb == True</attribute>
            </xpath>
        </field>
    </record>

    <!-- form view -->
    <record id="crm_lead_view_form_inherit_kyb" model="ir.ui.view">
        <field name="name">crm.lead.inherit.kyb</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            
            <xpath expr="//sheet" position="inside">
                <field name="is_kyb" invisible="1"/>
                <field name="allow_verify" invisible="1"/>
            </xpath>

            <xpath expr="//header" position="attributes">
                <attribute name="invisible">is_kyb</attribute>
            </xpath>

             <xpath expr="//sheet" position="before">
                     <header invisible="not is_kyb">
                          <button name="action_accept_kyb_lead" string="Accept"
                                type="object" class="oe_highlight" data-hotkey="w" title="Accept"
                                invisible="not is_kyb or stage_category != 'draft'"/>

                         <button name="action_kyb_verification" string="Verify"
                                type="object" class="oe_highlight" data-hotkey="w" title="Verify"
                                invisible="not is_kyb or stage_id != allow_verification_stage_id"/>
    
                    <button name="%(de_crm_kyb.action_crm_kyb_lead_lost)d" string="Reject" title="Reject"
                                type="action" invisible="not is_kyb or stage_category == 'cancel'"/>

                    <button name="%(de_crm_kyb.action_crm_kyb_message)d" string="Request Changes" title="Request Changes"
                                type="action" invisible="not is_kyb or stage_category == 'cancel'"/>
                         
                     <field name="stage_id" widget="statusbar_duration"
                            options="{'clickable': '1', 'fold_field': 'fold'}"
                            domain="[('id', 'in', stage_ids)]"
                            invisible="not active or type == 'lead'"/>
                 </header>
             </xpath>
            

            <!--
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="attributes">
                <attribute name="invisible">not active or probability == 100 or type == 'lead' or is_kyb</attribute>
            </xpath>

            <xpath expr="//form[1]/header[1]/button[2]" position="attributes">
                <attribute name="invisible">type == "lead" or ( not active and probability &lt; 100 ) or is_kyb</attribute>
          </xpath>
            
            <xpath expr="//header" position="inside">
                <button name="action_accept_kyb_lead" string="Accept"
                            type="object" class="oe_highlight" data-hotkey="w" title="Accept"
                            invisible="not is_kyb"/>

                <button name="%(crm.crm_lead_lost_action)d" string="Reject" data-hotkey="l" title="Reject"
                            type="action" invisible="not is_kyb"/>
                
            </xpath>
            -->
            <xpath expr="//div[hasclass('oe_button_box')]/button[1]" position="before">
                <!--
                    <button name="action_open_employees" 
                        type="object" 
                        icon="fa-users" 
                        class="oe_stat_button"
                        invisible="not partner_id"
                    >
                            <field string="Employees" name="count_contacts" widget="statinfo"/>
                    </button>
                -->
                    <button name="action_get_owners" 
                        type="object" 
                        icon="fa-user" 
                        class="oe_stat_button"
                        
                    >
                        <span>Owners</span>
                    </button>

                    <button name="action_get_employees" 
                        type="object" 
                        icon="fa-users" 
                        class="oe_stat_button"
                        
                    >
                        <span>Employees</span>
                    </button>

                    <button name="action_get_documents" 
                        type="object" 
                        icon="fa-file" 
                        class="oe_stat_button"
                        
                    >
                        <span>Documents</span>
                    </button>

                    <button name="action_get_questions" 
                        type="object" 
                        icon="fa-question-circle" 
                        class="oe_stat_button"
                        
                    >
                        <span>Questions</span>
                    </button>
                
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page name="xpendless" string="Xpendless" invisible="not is_kyb">
                    <group>
                        <group>
                            <field name="xpl_id" />
                            <field name="allow_verification_stage_id" invisible="1" />
                        </group>
                    </group>
                </page>
            </xpath>
            
            <xpath expr="//header" position="inside">
                <button name="action_verification" string="Verify"
                            type="object" class="oe_highlight" data-hotkey="w" title="Verify"
                            invisible="not allow_verify"/>
            </xpath>
            
            <xpath expr="//group[@name='opportunity_partner']" position="attributes">
                <attribute name="invisible">type == "lead" or is_kyb == True</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[not(@name)][1]" position="attributes">
                <attribute name="invisible">type == "lead" or is_kyb == True</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
                <group name="kyb">
                    <group name="company_details" string="Company Details" invisible="is_kyb != True">
                        <field name="partner_name" readonly="stage_category != 'draft' and is_kyb == True"/>
                        <field name="partner_id" invisible="not partner_id"
                            readonly="stage_category != 'draft' and is_kyb == True"
                            />
                        <field name="reg_no" readonly="stage_category != 'draft' and is_kyb == True"/>
                        <label for="street" string="Address"/>
                        <div class="o_address_format" name="studio_div_95e972">
                          <field name="street" readonly="stage_category != 'draft' and is_kyb == True" placeholder="Street..." class="o_address_street"/>
                          <field name="street2" readonly="stage_category != 'draft' and is_kyb == True" placeholder="Street 2..." class="o_address_street"/>
                          <field name="city" readonly="stage_category != 'draft' and is_kyb == True" placeholder="City" class="o_address_city"/>
                          <field name="state_id" readonly="stage_category != 'draft' and is_kyb == True" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                          <field name="zip" readonly="stage_category != 'draft' and is_kyb == True" placeholder="ZIP" class="o_address_zip"/>
                          <field name="country_id" readonly="stage_category != 'draft' and is_kyb == True" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </div>

                        <field name="date_company_creation" readonly="stage_category != 'draft' and is_kyb == True" />
                        <field name="date_company_expiry" readonly="stage_category != 'draft' and is_kyb == True" />

                          
                    </group>
                    
                    <group name="kyb_details" string="Contact Details" invisible="is_kyb != True">
                        <field name="stage_ids" widget="many2many_tags" invisible="1"/>
                        <field name="stage_category" invisible="1"/>
                        <!--
                        <field name="usage_est_users" />
                        <field name="usage_est_spending" />
                        <field name="usage_card" />
                        <separator string="Sales Detail" />
                        -->
                        <label for="date_deadline">Expected Closing</label>
                        <div class="o_lead_opportunity_form_inline_fields">
                            <field name="date_deadline" nolabel="1" class="oe_inline"/>
                            <field name="priority" widget="priority" nolabel="1" class="oe_inline align-top"/>
                        </div>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        <field name="user_id" context="{'default_sales_team_id': team_id}" widget="many2one_avatar_user"/>
                        <field name="website" readonly="stage_category != 'draft' and is_kyb == True" widget="url" placeholder="e.g. https://www.odoo.com"/>
                          <label for="email_from" class="oe_inline"/>
                                        <div class="o_row o_row_readonly">
                                            <button name="mail_action_blacklist_remove" class="fa fa-ban text-danger" title="This email is blacklisted for mass mailings. Click to unblacklist." type="object" context="{'default_email': email_from}" groups="base.group_user" invisible="not is_blacklisted"/>
                                            <field name="email_from" readonly="stage_category != 'draft' and is_kyb == True" string="Email" widget="email"/>
                                            <span class="fa fa-exclamation-triangle text-warning oe_edit_only" title="By saving this change, the customer email will also be updated." invisible="not partner_email_update"/>
                                        </div>
                                        <label for="phone" class="oe_inline"/>
                                        <div class="o_row o_row_readonly">
                                            <button name="phone_action_blacklist_remove" class="fa fa-ban text-danger" title="This phone number is blacklisted for SMS Marketing. Click to unblacklist." type="object" context="{'default_phone': phone}" groups="base.group_user" invisible="not phone_blacklisted"/>
                                            <field name="phone" readonly="stage_category != 'draft' and is_kyb == True" widget="phone"/>
                                            <span class="fa fa-exclamation-triangle text-warning oe_edit_only" title="By saving this change, the customer phone number will also be updated." invisible="not partner_phone_update"/>
                                        </div>
                        
                    </group>
                    
            </group>
                <group>
                    <field name="xpl_terms" readonly="1"/>
                </group>
          </xpath>
          <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='lead']/group[1]/group[2]/div[2]" position="after">
            <field name="is_kyb"/>
          </xpath>
            <!--
            <xpath expr="//notebook" position="inside" invisible="is_kyb != True">
                <page name="documents" string="Documents">
                    <group>
                        <group>
                            <field name="crc"  filename="crc_filename" class=""/>
                            <field name="aoa"  filename="aoa_filename" class=""/>
                            <field name="c_card"  filename="ccc_filename" class=""/>
                            <field name="iban_cert"  filename="iban_cert_filename" class=""/>
                            <field name="trade_license"  filename="trade_license_filename" class=""/>
                        </group>
                    </group>
                </page>
            </xpath>
            -->
            
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='lead']/group[1]/group[1]" position="attributes">
                <attribute name="invisible">is_kyb == True</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='lead']/group[1]/group[2]" position="attributes">
                <attribute name="invisible">is_kyb == True</attribute>
            </xpath>


           
            
        </field>
    </record>

