<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="merge_customer_wizard_form_view" model="ir.ui.view">
            <field name="name">merge.customer.wizard.form</field>
            <field name="model">merge.customer.wizard</field>
            <field name="arch" type="xml">
                <form>
<!--                    <field name="account_type" invisible="1"/>-->
<!--                    <field name="company_id" invisible="1"/>-->
                    <group>
                        <group>
                            <field name="date" string="Date" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="payment_method_id" readonly="1"/>
                            <field name="journal_id" readonly="1"/>
                            <field name="parent_id" readonly="1"/>
                            <field name="reservation_id" readonly="1"/>
                            <field name="amount" readonly="1"/>
                                                        <field name="amount_paid" readonly="1"/>
                                                        <field name="amount_due" readonly="1"/>
                                                        <field name="communication"/>

                        </group>

                        <group>
                            <field name="date"/>
                            <field name="bank_name_id"/>
                            <field name="payment_method_id2"/>
                            <field name="duration"/>
                            <field name="cheque_start_date"/>
                            <field name="cheque_no_start"/>
                            <field name="no_of_cheques"/>
<!--                            <field name="cheque_seq"/>-->
                            <field name="amount_by"/>
                            <field name="value"/>
                            <field name="payment_type" invisible="0"/>
                            <field name="partner_type" invisible="0"/>
                            <button name="create_lines" class="oe_highlight" type="object" string="Create Lines"/>
                        </group>
                    </group>
                    <notebook>
                            <page>
                                <field name="merge_ids" widget="one2many" nolabel="1"
                                context="{'default_payment_type': 'inbound',
                                          'default_partner_type': 'customer',
                                          'default_partner_id': partner_id,
                                          'default_journal_id': journal_id,
                                          }">
                                <tree string="Merge Customer" editable="bottom">
<!--                                    <field name="name"/>-->
                                    <field name="payment_type"/>
                                    <field name="partner_type"/>
                                    <field name="partner_id"/>
                                    <field name="journal_id"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="type" invisible="1"/>
                                    <field name="date"/>
                                    <field name="payment_method_id" domain="[('payment_type','=','inbound')]"/>
                                    <field name="due_date" 
                                        required="payment_method_code == 'batch_payment'"/>

                                    <field name="amount"/>
                                    <field name="payment_method_code" invisible="1"/>
                                    <field name="bank_name_id"   options="{'no_create': True, 'no_open': True}"
                                           required="payment_method_code == 'batch_payment'"
                                    />
                                    <field name="check_number" 
                                        required="payment_method_code == 'batch_payment'"
                                    />

                                </tree>
                                <form string="Merge Customer">
                                    <field name="payment_type"/>
                                    <field name="partner_type"/>
                                    <field name="partner_id"/>
                                    <field name="journal_id"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="date"/>
                                    <field name="due_date"/>
                                    <field name="amount"/>
                                    <field name="payment_method_id"/>
                                    <field name="payment_method_code" invisible="1"/>
                                    <field name="bank_name_id"  options="{'no_create': True, 'no_open': True}"
                                           required="payment_method_code == 'batch_payment'"
                                    />
                                    <field name="check_number" 
                                        required="payment_method_code == 'batch_payment'"
                                    />
                                </form>
                                </field>
                            </page>
                        </notebook>

                    <footer>
                        <button string="Confirm" name="confirm_merge_customer" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="merge_customer_wizard_action" model="ir.actions.act_window">
            <field name="name">Merge Customer</field>
            <field name="res_model">merge.customer.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

<!--   Vendor Payment      -->
        <record id="merge_vendor_wizard_form_view" model="ir.ui.view">
            <field name="name">merge.vendor.wizard.form</field>
            <field name="model">merge.vendor.wizard</field>
            <field name="arch" type="xml">
                <form>
<!--                    <field name="account_type" invisible="1"/>-->
<!--                    <field name="company_id" invisible="1"/>-->
                    <group>
                        <group>
                            <field name="date" string="Date" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="payment_method_id" readonly="1"/>
                            <field name="journal_id" readonly="1"/>
                            <field name="parent_id" readonly="1"/>
                            <field name="reservation_id" readonly="1"/>
                            <field name="amount" readonly="1"/>
                            <field name="amount_paid" readonly="1"/>
                            <field name="amount_due" readonly="1"/>
                            <field name="communication" />
                        </group>
                    </group>
                    <notebook>
                            <page>
                                <field name="merge_ids" widget="one2many" nolabel="1"
                                context="{'default_payment_type': 'outbound',
                                          'default_partner_type': 'supplier',
                                          'default_partner_id': partner_id,
                                          'default_journal_id': journal_id,
                                          }">
                                <tree string="Merge Vendor" editable="bottom">
<!--                                    <field name="name"/>-->
                                    <field name="payment_type"/>
                                    <field name="partner_type"/>
                                    <field name="partner_id"/>
                                    <field name="journal_id"/>
                                    <field name="company_id" invisible="1"/>
                                                                        <field name="type" invisible="1"/>

                                    <field name="date"/>
                                                                        <field name="payment_method_id" domain="[('payment_type','=','outbound')]"/>

                                    <field name="due_date" invisible="payment_method_code != check_printing"                                                       required="payment_method_code == 'check_printing'"/>
                                    <field name="amount"/>
                                    <field name="payment_method_code" invisible="1"/>
                                     <field name="bank_name_id"   options="{'no_create': True, 'no_open': True}"                                                     required="payment_method_code == 'batch_payment'"
                                    />
                                    <field name="multi_check_payment" invisible="1"/>
                                    <field name="cheque_books_id"  invisible="payment_method_code != 'check_printing'" required="payment_method_code == 'check_printing'"
                                    />
                                    <field name="cheque_number" invisible="payment_method_code != 'check_printing'"                                            required="payment_method_code == 'check_printing'"
                                    />

                                </tree>
                                <form string="Merge Vendor">
                                    <field name="payment_type"/>
                                    <field name="partner_type"/>
                                    <field name="partner_id"/>
                                    <field name="journal_id"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="date"/>
                                    <field name="due_date"/>
                                    <field name="amount"/>
                                    <field name="payment_method_id" domain="[('payment_type','=','outbound')]"/>
                                    <field name="payment_method_code" invisible="1"/>
                                     <field name="bank_name_id"   options="{'no_create': True, 'no_open': True}"                                                        required="payment_method_code == 'batch_payment'"
                                    />
                                    <field name="multi_check_payment" invisible="1"/>
                                    <field name="cheque_books_id"  invisible="payment_method_code != 'check_printing'"
                                                       required="payment_method_code == 'check_printing'"
                                    />
                                    <field name="cheque_number" invisible="payment_method_code != 'check_printing'"
                                                       required="payment_method_code == 'check_printing'"
                                    />
                                </form>
                                </field>
                            </page>
                        </notebook>

                    <footer>
                        <button string="Confirm" name="confirm_merge_vendor" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="merge_vendor_wizard_action" model="ir.actions.act_window">
            <field name="name">Merge Vendor</field>
            <field name="res_model">merge.vendor.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
