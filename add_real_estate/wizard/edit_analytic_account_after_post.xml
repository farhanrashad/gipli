<?xml version="1.0"?>
<odoo>

        <record id="edit_analytic_account_after_post_form" model="ir.ui.view">
            <field name="name">edit.analytic.after</field>
            <field name="model">edit.analytic.after</field>
            <field name="arch" type="xml">
                <form string="cancel">
                    <group name="name">
                        <field name="line_id" readonly="1" />
                                        <field name="analytic_distribution"
                                               widget="analytic_distribution"/>
                    </group>
                    <footer>
                        <button name="action_apply" string="Cancel Order" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="edit_analytic_account_after_post_action" model="ir.actions.act_window">
            <field name="name">Edit Analytic</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edit.analytic.after</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="edit_analytic_account_after_post_form"/>
            <field name="target">new</field>
        </record>



</odoo>
