        <record id="report_payment_base_all" model="ir.actions.report">
            <field name="name">ايصال مجمع</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">add_real_estate.report_payment_all</field>
            <field name="report_file">add_real_estate.report_payment_all</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>