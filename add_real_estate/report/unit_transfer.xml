         <record id="report_action_transfer_unit" model="ir.actions.report">
        <field name="name">Transfer  Unit</field>
        <field name="model">transfer.unit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">add_real_estate.report_transfer_unit_temp</field>
        <field name="report_file">add_real_estate.report_transfer_unit_temp</field>
        <field name="binding_model_id" ref="add_real_estate.model_transfer_unit"/>
        <field name="binding_type">report</field>
    </record>


    </data>
</odoo>