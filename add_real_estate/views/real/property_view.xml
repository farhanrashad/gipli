<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="rs_property_product2_form_view2" model="ir.ui.view">
            <field name="name">rs_property.product.form2</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <form string="Units">
                    <header>
                        <button name="set_to_draft" type="object" string="Set To Draft"
                                invisible="state == 'draft'" />
                        <button name="convert_to_available" type="object" string="Convert To Available"
                                invisible="state != 'approve'"/>
                        <button name="convert_to_block" type="object" string="Convert To Blocked"
                                invisible="state not in ['available','draft']"/>
                        <button class="btn btn-primary" name="create_request_reservation" type="object"
                                string="Create Request Reservation"
                                invisible="state != 'available' or is_req_res == True"/>
                        <button class="btn btn-primary" name="create_reservation" type="object"
                                string="Create Reservation"
                                invisible="state != 'available' or is_res == True"/>
                        <button class="btn btn-primary" name="exception_do" type="object" string="Exception"
                                invisible="state != 'available'"/>
                        <button class="btn btn-primary" name="request_to_available" type="object"
                                string="Request TO Available" invisible="state != 'draft'"/>
                        <button class="btn btn-primary" name="approved_to_available" type="object"
                                string="Approve TO Available"
                                invisible="state != 'request_available'"
                                groups="add_real_estate.group_Approve_TO_Available_Reservation"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                                    name="action_view_partner_reservation"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="counter_reservation"/>
                                    </span>
                                    <span class="o_stat_text">Reservation</span>
                                </div>
                            </button>
                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                                    name="action_view_factor_line_price"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">Unit Price Factors</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title"
                             readonly="state in ['blocked','contracted','reserved']">
                            <h1>
                                <field name="property_code" placeholder="Property Code"
                                       readonly="state in ['blocked','contracted','reserved']"/>
                            </h1>
                            <h1>
                                <field name="name" placeholder="Property Name" invisible="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="type_of_property_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                <field name="cate_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                <field name="project_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                       required="1"/>
                                <field name="phase_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                       required="1"/>
                                <field name="state_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                <field name="country_id"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                <field name="is_factor_price_unit"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                <field name="finish_of_property" 
                                    invisible="is_factor_price_unit == False"
                                    readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                            </group>
                            <group>
                                <field name="analytic_account_id" readonly="1"/>
                                <field name="is_property" readonly="1"/>
                                <field name="type" readonly="1"/>
                                <field name="is_req_res" invisible="1"/>
                                <field name="is_res" invisible="1"/>
                                <field name="is_contracted" invisible="1"/>
                                <field name="is_contracted_draft" invisible="1"/>
                                <field name="multi_image"
                                       readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Basic Information" name="basic_information"
                                  invisible="is_factor_price_unit == True">
                                <group>
                                    <group colspan="1">
                                        <field name="plot_area"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="sellable"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="total_garden_area"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="back_yard"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="front_yard"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                    </group>
                                    <group colspan="1">
                                        <field name="price_m_a"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="price_m"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="price_garden_new"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                    </group>
                                    <group colspan="1">
                                        <field name="location_of_property_id"
                                              readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="design_of_property_id"
                                              readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                    </group>
                                    <group colspan="1">
                                        <field name="is_garage"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="price_garage_for_one"
                                            readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                            required="is_garage == True"
                                        />
                                        <field name="number_of_garage"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                            required="is_garage == True"/>
                                        <field name="is_finish"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                            />
                                        <field name="finish_of_property_id"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                            required="is_garage == True"/>
                                        <field name="price_finishing_for_m"
                                               required="is_finish == True"
                                            invisible="is_finish == False"
                                            readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="is_pool"
                                               readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="price_pool_for_one"
                                               required="is_pool == True"
                                            invisible="is_pool == False" 
                                            readonly="state in ['blocked','initial_contracted','contracted','reserved']"/>
                                        <field name="number_of_pool"
                                               required="is_pool == True"
                                            invisible="is_pool == False"
                                            readonly="state in ['blocked','initial_contracted','contracted','reserved']"
                                        />
                                    </group>
                                    <group class="oe_right">
                                        <group class="oe_subtotal_footer"
                                        >
                                            <field name="plot_price" class="oe_subtotal_footer_separator" readonly="1"/>
                                            <field name="unit_price" class="oe_subtotal_footer_separator" readonly="1"/>
                                            <field name="unit_price2" class="oe_subtotal_footer_separator"
                                                   invisible="1"/>
                                            <field name="finishing_price" class="oe_subtotal_footer_separator"
                                                   readonly="1"/>
                                            <field name="finishing_price2" class="oe_subtotal_footer_separator"
                                                   invisible="1"/>
                                            <field name="pool_price" class="oe_subtotal_footer_separator" readonly="1"/>
                                            <field name="pool_price2" class="oe_subtotal_footer_separator"
                                                   invisible="1"/>
                                            <!--                                    <field name="price_garden2"  class="oe_subtotal_footer_separator" invisible="1"/>-->
                                            <field name="price_garden_2" class="oe_subtotal_footer_separator"
                                                   readonly="1"/>
                                            <field name="garage_price" class="oe_subtotal_footer_separator"
                                                   readonly="1"/>
                                            <field name="garage_price2" class="oe_subtotal_footer_separator"
                                                   invisible="1" readonly="1"/>
                                            <field name="final_unit_price" class="oe_subtotal_footer_separator"
                                                   readonly="1"/>
                                        </group>
                                    </group>
                                    <group class="oe_left">
                                        <field name="discount_type"/>
                                        <field name="discount_value"/>
                                    </group>

                                </group>

                            </page>
                            <page string="Unit Price Factors" name="unit_factor"
                                  invisible="is_factor_price_unit == False">
                                <field name="unit_price_lines" 
                                    readonly="state in ['contracted']">
                                    <tree editable="bottom">
                                        <field name="factor_id"/>
                                        <field name="space"/>
                                        <field name="price"/>
                                        <field name="total" sum="Total"/>
                                        <field name="is_print"/>
                                    </tree>
                                </field>
                                <group class="oe_right">
                                    <group class="oe_subtotal_footer"
                                    >
                                        <field name="final_unit_price" class="oe_subtotal_footer_separator"
                                               readonly="1"/>
                                    </group>
                                </group>
                                 <group class="oe_left">
                                        <field name="discount_type"/>
                                        <field name="discount_value"/>
                                    </group>

                            </page>
                            <page invisible="multi_image != True" name="product multi image"
                                  string="Property Multiple Images">
                                <!--                                <field name="images" nolabel="1" context="{'default_product_id': id, 'tree_view_ref':'add_real_estate.list_view_product_images', 'form_view_ref':'add_real_estate.form_view_product_images'}"/>-->
                                <field name="images" widget="many2many" options="{'not_delete': True}">
                                    <kanban quick_create="false" create="true" delete="true">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="image"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click" style="max-width: 200px">
                                                    <div class="o_kanban_record_top">
                                                        <img t-att-src="kanban_image('biztech.product.images', 'image', record.id.raw_value)"
                                                             class="oe_avatar oe_kanban_avatar_smallbox o_image_128_max mb0"
                                                             alt="Avatar"/>
                                                        <div class="o_kanban_record_headings ml8">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="name"/>
                                                            </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page name="history_area_price" string="History Area Price">
                                <field name="history_area_price_ids" widget="one2many" nolabel="1" readonly="1"
                                       create="0" edit="0">
                                    <tree string="History Area Price" editable="bottom">
                                        <!--                                    <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="area_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="plot_area"/>
                                        <field name="price_m_a"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string="History Unit Price">
                                        <!--                                  <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="area_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="plot_area"/>
                                        <field name="price_m_a"/>
                                        <field name="state"/>
                                    </form>
                                </field>
                            </page>
                            <page name="history_unit_price" invisible="is_factor_price_unit == True"  string="History Unit Price">
                                <field name="history_unit_price_ids" widget="one2many" nolabel="1" readonly="1"
                                       create="0" edit="0">
                                    <tree string="History Unit Price" editable="bottom">
                                        <!--                                    <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="unit_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="sellable"/>
                                        <field name="price_m"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string="History Unit Price">
                                        <!--                                  <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="unit_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="sellable"/>
                                        <field name="price_m"/>
                                        <field name="state"/>
                                    </form>
                                </field>
                            </page>
                            <page name="history_unit_price_factor"  invisible="is_factor_price_unit == False"  string="History Unit Price">
                                <field name="change_price_lines" widget="one2many" nolabel="1" readonly="1"
                                       create="0" edit="0">
                                    <tree string="History Unit Price" editable="bottom">
                                        <field name="date"/>
                                        <field name="old_price"/>
                                        <field name="new_price"/>
                                    </tree>
                                    <form string="History Unit Price">
                                       <field name="date"/>
                                        <field name="old_price"/>
                                        <field name="new_price"/>
                                    </form>
                                </field>
                            </page>
                            <page name="history_finishing_price" string="History Finishing Price">
                                <field name="history_finishing_price_ids" widget="one2many" nolabel="1" create="0"
                                       readonly="1" edit="0">
                                    <tree string="History finishing Price" editable="bottom">
                                        <!--                                    <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="finishing_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="sellable"/>
                                        <field name="is_finish"/>
                                        <field name="finish_of_property_id"/>
                                        <field name="price_finishing_for_m"/>
                                        <field name="state"/>

                                    </tree>
                                    <form string="History finishing Price">
                                        <field name="date"/>
                                        <field name="finishing_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="sellable"/>
                                        <field name="is_finish"/>
                                        <field name="finish_of_property_id"/>
                                        <field name="price_finishing_for_m"/>
                                        <field name="state"/>
                                    </form>
                                </field>
                            </page>
                            <page name="history_garden_price" string="History Garden Price">
                                <field name="history_garden_price_ids" widget="one2many" nolabel="1" create="0"
                                       readonly="1" edit="0">
                                    <tree string="History Garden Price" editable="bottom">
                                        <!--                                    <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="garden_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="total_garden_area"/>
                                        <field name="state"/>

                                    </tree>
                                    <form string="History Garden Price">
                                        <field name="date"/>
                                        <field name="garden_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="total_garden_area"/>
                                        <field name="state"/>
                                    </form>
                                </field>
                            </page>
                            <page name="history_garage_price" string="History Garage Price">
                                <field name="history_garage_price_ids" widget="one2many" nolabel="1" readonly="1">
                                    <tree string="History Garage Price" editable="bottom">
                                        <field name="date"/>
                                        <field name="garage_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="is_garage"/>
                                        <field name="price_garage_for_one"/>
                                        <field name="number_of_garage"/>
                                        <field name="state"/>

                                    </tree>
                                    <form string="History Garage Price">
                                        <!--                                  <field name="name"/>-->
                                        <field name="date"/>
                                        <field name="garage_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="is_garage"/>
                                        <field name="price_garage_for_one"/>
                                        <field name="number_of_garage"/>
                                        <field name="state"/>

                                    </form>
                                </field>
                            </page>
                            <page name="history_pool_price" string="History Pool Price">
                                <field name="history_pool_price_ids" widget="one2many" nolabel="1" readonly="1">
                                    <tree string="History Pool Price" editable="bottom">
                                        <field name="date"/>
                                        <field name="pool_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="is_pool"/>
                                        <field name="price_pool_for_one"/>
                                        <field name="number_of_pool"/>
                                        <field name="state"/>

                                    </tree>
                                    <form string="History Pool Price">
                                        <field name="date"/>
                                        <field name="pool_price"/>
                                        <field name="product_id"/>
                                        <field name="type_of_property_id"/>
                                        <field name="is_pool"/>
                                        <field name="price_pool_for_one"/>
                                        <field name="number_of_pool"/>
                                        <field name="state"/>

                                    </form>
                                </field>
                            </page>
                            <page string="Geolocation">
                                <group>

                                    <field name="last_gps_latitude"/>
                                    <field name="last_gps_longitude"/>
<!--                                    <widget name="gmap_marker" lat="last_gps_latitude" lng="last_gps_longitude"-->
<!--                                            description="Truck Location"/>-->

                                </group>
                            </page>
                            <page string="Accounting">
                                <group>
                                    <field name="property_account_income_id"/>
                                    <field name="property_account_expense_id"/>
                                    <field name="policy_commission_id" groups="add_real_estate.group_pol_comm"  options="{'no_create': True,'no_open': True}"/>
                                    <field name="policy_bonous_id" groups="add_real_estate.group_pol_comm"  options="{'no_create': True,'no_open': True}"/>
                                    <field name="policy_nts_id"  groups="add_real_estate.group_pol_comm"  options="{'no_create': True,'no_open': True}"/>

                                </group>
                            </page>
                            <page invisible="state != 'exception'" name="exception"
                                  string="Exceptions">
                                <group>
                                    <field name="exception_id"
                                           readonly="state in ['blocked','contracted','reserved']"/>


                                </group>
                            </page>

                        </notebook>


                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
