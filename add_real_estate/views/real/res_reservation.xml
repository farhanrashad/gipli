<odoo>
    <data>
        <record id="reservation_form_view" model="ir.ui.view">
            <field name="name">res.reservation</field>
            <field name="model">res.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservation Form">
                    <header>
                        <button type="object"  string="Create Installments"
                                class="btn btn-primary" name="create_installments" attrs="{'invisible':['|',('installment_created','=',True),('state','=','initial_contracted')]}"/>
                        <button name="convert_to_draft" type="object" string="Set To Draft"
                                attrs="{'invisible': [('state', 'not in', ['reserved','blocked'])]}"/>
                        <button name="convert_to_draft" type="object" string="Set To Draft"
                                attrs="{'invisible': [('state', 'not in', ['contracted'])]}"
                                groups="add_real_estate.group_set_to_draft_Reservation"/>
                        <button name="%(add_real_estate.action_cancel_res)d" string="Canceled" type="action"
                                help="Canceled" class="oe_highlight"
                                attrs="{'invisible': [('state', 'not in', ['reserved','draft','income'])]}"/>
                        <!--                        <button name="convert_to_block" type="object" string="Canceled" attrs="{'invisible': [('state', 'not in', ['reserved','draft'])]}"/>-->
                        <button name="convert_to_reserved" type="object" string="Convert To Reserved"
                                attrs="{'invisible': [('state', 'not in', ['draft','initial_contracted'])]}" status="draft"/>
                        <button class="btn btn-primary" name="create_initial_contract" type="object" string="Create initial Contract"
                                attrs="{'invisible': [('counter_contract_reservation', '!=', 0)]}"/>
                        <button class="btn btn-primary" name="create_initial_income" type="object" string="Create Income" attrs="{'invisible': ['|',('is_create_contract', '=', True),('state', '!=', 'initial_contracted')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                             <button name="open_installments"
                                    type="object" class="oe_stat_button" icon="fa-calender">
                                <field name="counter_installments" string="Installments" widget="statinfo"/>
                            </button>
<!--                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"-->
<!--                                    name="action_view_invoices"-->
<!--                            >-->
<!--                                <div class="o_form_field o_stat_info">-->
<!--                                    <span class="o_stat_value">-->
<!--                                        <field name="counter_contract"/>-->
<!--                                    </span>-->
<!--                                    <span class="o_stat_text">Invoices</span>-->
<!--                                </div>-->
<!--                            </button>-->
                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                                    name="action_view_contract_reservation"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="counter_contract_reservation"/>
                                    </span>
                                    <span class="o_stat_text">Contracts</span>
                                </div>
                            </button>

                            <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                                    name="action_view_contract_Accessories"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="counter_amendments"/>
                                    </span>
                                    <span class="o_stat_text">Amendments</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">

                            <h2>
                                <field name="reservation_code" placeholder="Reservation Code"/>
                            </h2>
                            <h2>
                                <field name="payment_code" invisible="1"/>
                                <field name="customer_details_readonly" invisible="1"/>
                            </h2>
                        </div>
                        <field name="installment_created" invisible="1"/>
                        <field name="is_create_contract" invisible="1"/>
                        <field name="net_price" invisible="1"/>
                        <field name="project_id" invisible="1"/>
                        <group groups="add_real_estate.group_real_state_inventory">
                            <group colspan="1" string="Property Details">
                                <field name="is_create_contract"/>
                                <field name="custom_type"/>
                                <field name="date" required="1"
                                       attrs="{'readonly' : [('state', 'in', ['reserved','release'])]}"
                                       optional="{'datepicker':{'minDate': 0}}"/>
                                <field name="req_reservation_id"
                                       attrs="{'readonly' : [('state', 'in', ['reserved','release'])]}"/>
                                <field name="project_id"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"  required="1"/>
                                <field name="show_garden"/>
                                <field name="phase_id"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}" required="1"/>
                                <label for="property_id"/>
                                <div class="o_row">
                                    <field name="property_id"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"
                                       optional="{'no_quick_create': True, 'no_create_edit' : True,'on_open   ' : True}"
                                       domain="[('state','=','temp_reservation'),('phase_id','=',phase_id)]" required="1"/>
                                    <button name="%(add_real_estate.action_change_property_price_wiz)d" type="action"
                                            context="{'default_property_id':property_id}"
                                            string="Change Property Price" class="btn btn btn-primary"
                                            groups="add_real_estate.group_change_property_price"
                                    />
                                </div>


                                <field name="property_code"/>
                                <field name="finish_of_property"/>
                                <field name="is_release" readonly="1"/>
                                <field name="odoo_reservation_id" attrs="{'invisible' : [('is_release', '=',False)]}"/>
                                <field name="property_price"/>
                                <field name="added_paid_amount"/>
                                <field name="amount_due22"/>
                                <field name="payment_due"/>
                                <field name="payment_lines" readonly="1" force_save="1"/>
                                <field name="more_discount"/>
                                <field name="amount_discount"/>
                                <field name="net_price"/>
                                   <field name="Description_payment"/>
                                <field name="Description_payment_description" force_save="1"/>

                                <field name="group_commision_with_payment" invisible="1"/>
                                <field name="policy_commission_id" force_save="1" options="{'no_create': True, 'no_open': True}"  attrs="{'readonly' : [('group_commision_with_payment', '=',False )]}"/>
                                <field name="policy_bonous_id" force_save="1" options="{'no_create': True, 'no_open': True}" attrs="{'readonly' : [('group_commision_with_payment', '=',False )]}"/>
                                <field name="policy_nts_id" force_save="1"  options="{'no_create': True, 'no_open': True}" attrs="{'readonly' : [('group_commision_with_payment', '=',False )]}"/>
                            </group>
<!--                                                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>-->
                            <group colspan="1" string="Sales Details">
                                <field name="sales_type" attrs="{'readonly' : [('state', 'not in',['draft'] )]}"/>
                                <field name="broker_id"
                                       attrs="{'invisible' : [('sales_type', '=', 'direct')]}"
                                       optional="{'no_create': True,'no_open': True}"
                                       domain="[('is_broker','=',True)]"/>
                                <field name="company_id" force_save="1"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>

<!--                                <field name="is_eoi"/>-->


                            </group>
                        </group>
                        <group colspan="1" string="Customer Details" >
                                <label for="customer_id"/>
                                <div class="o_row">
                                    <field name="customer_id"
                                           domain="[('is_customer','=',True)]"
                                       attrs="{'readonly' : ['|',('state', 'in',['contracted','release'] ),('customer_details_readonly','=',True)]}"/>
<!--                                    <button name="get_childs_of_contact" type="object" string="Other Owners"-->
<!--                                    />-->
                                </div>


                                <field name="address"
                                       readonly="1"/>
                                <field name="phone"
                                       readonly="1"/>
                                <field name="mobile"
                                       readonly="1"/>
                                <field name="email"
                                       readonly="1"/>
                                <field name="nationality"
                                       readonly="1"/>
                                <field name="id_def" readonly="1"/>
                                <!--                                <field name="national_issue_date" readonly="1"/>-->
                                <label for="national_issue_date_month" string="National Issue Date"/>
                                <div class="o_row">
                                    <field name="national_issue_date_month" readonly="1"  placeholder="Month"/>
                                    <field name="national_issue_date_year" readonly="1" placeholder="Year"/>
                                </div>
                                <field name="positon" readonly="1"/>
                                <field name="work_side" readonly="1"/>
                                <field name="social_status"
                                       readonly="1"/>
                            <field name="more_owner_ids" widget="many2many_tags"/>
                            </group>

                        <group groups="add_real_estate.group_real_state_payment">
                            <group colspan="2" string="Payment Details">
                                <field name="pay_strategy_id"
                                       attrs="{'readonly' : ['|',('is_Custom_payment','=',True),('state', 'in',['release'] )]}"/>
<!--                                       attrs="{'readonly' : ['|',('is_Custom_payment','=',True),('state', 'in',['reserved','release'] )]}"/>-->
                                <field name="use_manual_payment"/>
                                <field name="payment_strg_name"/>
                                <field name="payment_term_discount"/>
                                <field name="is_Custom_payment"/>

                            </group>
                        </group>
                        <group groups="add_real_estate.group_real_state_payment">
                            <group colspan="1" string="Sales Details">
                                <field name="sale_person_2_id" domain="[('is_salesperson','=',True)]"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                <field name="Sales_Teams_2_id"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                <field name="manager_tesm_2_id"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                <!--&lt;!&ndash;                            <field name="lead_id"/>&ndash;&gt;-->

                                <field name="contract_date" attrs="{
                                'readonly':[('state','!=','initial_contracted')]
                                }"/>

                            </group>

                        </group>

                        <group invisible="1" string="Attachments" style="color:#893b74;"/>
                        <group invisible="1">
                            <field name="id_no"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="id_type"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                            <field name="id_photo"
                                   attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                        </group>
                        <notebook groups="add_real_estate.group_real_state_payment">
                            <page name="payment" string="Payment">
                                <group colspan="2">
                                    <field name="bank_name"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <field name="start_cheque"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <field name="end_cheque"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <field name="date_start_installment"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <button name="update_bank_data" type="object"
                                            string="Update Bank and check Number"/>
                                    <field name="amount_ins"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <!--                            <field name="number_day"/>-->
                                    <button name="update_ins_amount_data" type="object" string="Update Amount Ins"/>
                                    <field name="receipt_date"
                                           attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"/>
                                    <!--                            <field name="number_day"/>-->
                                    <button name="update_ins_receipt_date" type="object"
                                            string="Update Receipt Date Ins"/>


                                </group>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <button groups="add_real_estate.group_create_payment_Reservation"
                                                name="create_payment_lines_selected" type="object"
                                                string="Create Payment" class="btn btn-primary"/>
                                    </li>
                                    <li class="list-inline-item">
                                        <button groups="add_real_estate.group_Delete_Reservation"
                                                name="button_delete_lines_selected" type="object" string="Delete"
                                                class="btn btn-primary"/>
                                    </li>
                                    <li class="list-inline-item">
                                        <button groups="add_real_estate.group_Receive_Reservation"
                                                name="button_receive_lines_selected" type="object" string="Receive"
                                                class="btn btn-primary"/>
                                    </li>
                                    <li class="list-inline-item">
                                        <button groups="add_real_estate.group_Print_Reservation" name="generate_report"
                                                type="object" string="Print" class="btn btn-primary"/>
                                    </li>
                                    <li class="list-inline-item">
                                        <button name="%(add_real_estate.action_create_payment_lines)d"
                                                attrs="{'invisible':[('use_manual_payment','=',False)]}"
                                                type="action" string="Generate Payment Strategy Lines"
                                                context="{'default_amount':net_price,'default_due_amount':added_paid_amount,'default_reservation_id':id}"
                                                class="btn btn-primary"/>
                                        <field name="added_paid_amount" invisible="1"/>
                                    </li>
                                </ul>
                                <label for="is_select_all_print"/>

                                <field name="is_select_all_print"/>
                                <br/>
                                <field name="is_select_all"/>

                                <field name="payment_strg_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree,kanban"
                                       class="oe_inline oe_no_button"
                                       context="{'default_project_id':project_id}"
                                       attrs="{'readonly' : [('state', 'in',['contracted','release'] )]}"
                                >
                                    <tree string="payment" widget="section_and_note_one2many"
                                          editable="buttom"
                                          colors="red:move_check == True;green:cancelled == True">
                                          <control>
                                        <create name="add_product_control" string="Add a Payment"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    </control>
                                        <field name="display_type" invisible="1"/>
                                        <field name="name" widget="section_and_note_text" />
<!--                                          attrs="{'readonly':[('state','=','posted')]}"-->
                                        <field name="is_selected_to_action"
                                             />
                                        <field name="is_no_enter_total" attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="add_to_paid_amount" attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="merge_in_one_installment" attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="is_print"/>
                                        <field name="payment_code" readonly="1"/>
                                        <field name="receipt_date" attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="move_check"
                                               invisible="1" optional="show"/>
                                        <field name="project_id"
                                               invisible="1" optional="show"/>
                                        <field name="payment_method_id"
                                               invisible="1" optional="show"/>
                                        <field name="type"
                                               invisible="1" optional="show"/>
                                        <field name="cancelled"
                                               invisible="1" optional="show"/>
                                        <field name="description"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" optional="show"/>
                                        <field name="currency_id"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" sum="Amount"
                                               optional="show"/>
                                        <field name="amount_currency"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" sum="Amount"
                                               optional="show"/>
                                        <field name="amount"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" sum="Amount"
                                               optional="show"/>
                                        <field name="base_amount" forec_save="1" string="Amount Base" optional="hide"
                                               attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="amount_due"
                                               readonly="1" sum="Amount Due" optional="show"/>
                                        <field name="amount_pay"
                                               readonly="1" sum="Pay" optional="show" force_save="1"/>
                                        <field name="date"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" optional="show"/>
                                        <field name="journal_id"
                                               domain="[('type','in',['bank', 'cash'])]"
                                               string="Payment Method"
                                               attrs="{'readonly' : ['|',('move_check','=',True),('state','=','posted')]}" optional="show"/>
                                        <field name="state_payment" attrs="{'readonly':[('state','=','posted')]}"
                                               string="State Payment" optional="show" required="1"/>

                                        <field name="bank_name"   options='{"no_open": True, "no_create": True}' attrs="{'readonly' : ['|',('type','in',['cash']),('state','=','posted')]}"
                                               optional="show"/>
                                        <field name="cheque" attrs="{'readonly' : ['|',('type','in',['cash']),('state','=','posted')]}"
                                               optional="show"/>
                                        <field name="deposite"
                                               attrs="{'readonly':['|',('move_check','=',True),('state','=','posted')]}" optional="show"/>
                                        <field name="is_maintainance" optional="show"
                                               attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="is_no_enter_total" optional="show"
                                               attrs="{'readonly':[('state','=','posted')]}"/>

                                        <!--                                        <field name="add_extension"-->
                                        <!--                                               attrs="{'readonly':[('move_check','=',True)]}"/>-->
                                        <!--                                        <field name="maintainance_fees"-->
                                        <!--                                               />-->
                                        <field name="is_receive" optional="show"
                                               attrs="{'readonly':[('state','=','posted')]}"/>
                                        <!--                                        <field name="move_id"-->
                                        <!--                                               readonly="1"/>-->
                                        <!--                                        <field name="cheque_status" invisible="1"/>-->
                                        <field name="is_pay" readonly="1" optional="show" force_save="1"/>
                                        <field name="bank_ids" widget="many2many_tags" optional="show"
                                               attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="payments_ids" widget="many2many_tags" optional="show"
                                               attrs="{'readonly':[('state','=','posted')]}"/>
                                        <field name="invoice_id" optional="show"/>
                                        <field name="state" optional="show"/>
                                        <field name="installment_state" optional="show"/>
                                        <!--                                        <button type="object"-->
                                        <!--                                                name="create_deposite_entry"-->
                                        <!--                                                string="Pay"-->
                                        <!--                                                class="oe_highlight"-->
                                        <!--                                                />-->

                                    </tree>
                                </field>

                                <group class="oe_right">
                                    <group class="oe_subtotal_footer">
                                        <field name="line_count" class="oe_subtotal_footer_separator"/>
                                        <field name="total_payment_lines" class="oe_subtotal_footer_separator"/>
                                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                        <field name="main_total" class="oe_subtotal_footer_separator"/>
                                        <field name="amount_residual" class="oe_subtotal_footer_separator"/>
                                        <field name="amount_cheques" class="oe_subtotal_footer_separator"
                                               invisible="1"/>
                                    </group>

                                </group>

                            </page>
                            <page string="Notes">
                                <group>
                                    <field name="notes_cash"/>
                                    <field name="notes_visa"/>
                                    <field name="notes_cheque"/>
                                    <field name="notes_bank"/>
                                </group>
                            </page>
                            <page string="Cancel Reasons" attrs="{'invisible' : [('state', 'not in',['blocked'] )]}">
                                <group>
                                    <field name="reason"/>
                                    <field name="date_cancel_unit"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="reservation_tree_view" model="ir.ui.view">
            <field name="name">res.reservation.reservation.tree view</field>
            <field name="model">res.reservation</field>
            <field name="arch" type="xml">
                <tree string="Reservation Form" default_order="date desc">
                    <field name="date"/>
                    <field name="custom_type"/>
                    <field name="reservation_code"/>
                    <!--                    <field name="name"/>-->
                    <field name="customer_id"/>
                    <field name="sale_person_2_id"/>
                    <field name="sales_type"/>
<!--                    <field name="sales_type"/>-->
                    <field name="broker_id"/>
                    <field name="phase_id"/>
                    <field name="property_id"/>
                    <field name="property_price"/>
                    <field name="net_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="reservation_filter_view" model="ir.ui.view">
            <field name="name">res.reservation</field>
            <field name="model">res.reservation</field>
            <field name="arch" type="xml">
                <search string="Search ">
<!--                    <field name="name" string="Reservation Code" filter_domain="[('name','ilike',self)]"/>-->
                    <field name="property_id" string="Unit"/>
                    <field name="customer_id" string="Customer"/>

                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="reservation_list_action">
            <field name="name">Reservation Form</field>
            <field name="res_model">res.reservation</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'default_custom_type': 'Reservation',
                }
            </field>
        </record>
        <menuitem id="res_reservation"
                  name="Reservation Form"
                  parent="transaction_sub"
                  action="reservation_list_action" sequence="2"/>

        <!--        history Reservation-->

        <record id="history_reservation_tree_view" model="ir.ui.view">
            <field name="name">history.reservation.res.reservation.reservation.tree view</field>
            <field name="model">history.reservation</field>
            <field name="arch" type="xml">
                <tree string="History Reservation">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="unit_id"/>
                    <field name="res_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="history_reservation_list_action">
            <field name="name">History Reservations</field>
            <field name="res_model">history.reservation</field>
            <field name="view_mode">tree,form</field>

        </record>
        <menuitem id="history_res_reservation"
                  name="History Reservations"
                  parent="transaction_sub"
                  action="history_reservation_list_action" sequence="3"/>

    </data>
</odoo>