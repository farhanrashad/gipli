        <record id="view_account_move_line_filter_410" model="ir.ui.view">
            <field name="name">account.move.line.search</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//search" position="inside">
                    <field name="payment_id" string="Check Number" filter_domain="['|',
                    ('payment_id.check_number', '=', self),
                    ('payment_id.check_number', 'ilike', self)]"/>
                    <field name="payment_id" string="Cheque Number" filter_domain="['|',
                    ('payment_id.cheque_number', '=', self),
                    ('payment_id.cheque_number', 'ilike', self)]"/>
                    <field name="cheque_number_line" string="New Check Number" filter_domain="['|',
                    ('cheque_number_line', '=', self),
                    ('cheque_number_line', 'ilike', self)]"/>

                    <filter string="State Payment-Cash" name="state_payment_cash"
                            domain="[('payment_id.state_payment2', '=', 'cash')]"/>
                    <filter string="State Payment-Visa" name="state_payment_bank"
                            domain="[('payment_id.state_payment2', '=', 'visa')]"/>
                    <filter string="State Payment-Cheque" name="state_payment_cheque"
                            domain="[('payment_id.state_payment2', '=', 'cheque')]"/>
                    <filter string="State Payment-Bank" name="state_payment_cheque"
                            domain="[('payment_id.state_payment2', '=', 'bank')]"/>

                </xpath>

            </field>
        </record>

