<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_batch_deposit_id" model="ir.ui.view">
            <field name="name">account batch deposit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='deprecated']" position="after">
                    <field name="is_batch_deposit"/>
                    <field name="expenses_for_unit_check"/>
                    <field name="petty"/>
                    <field name="custody"/>
                    <field name="accrued"/>
                    <field name="other"/>
                    <field name="accounting_allocation"/>
                    <field name="partner_required_in_journal_entry"/>
                </xpath>


            </field>
        </record>


        <record id="view_move_form520" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                    <field name="cheque_number_line"/>
                </xpath>


                <xpath expr="//button[@name='action_post'][1]" position="attributes">
                    <attribute name="groups">add_real_estate.group_show_post_button</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post'][2]" position="attributes">
                    <attribute name="groups">add_real_estate.group_show_post_button</attribute>
                </xpath>

                  <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">add_real_estate.group_resest_to_draft_inv</attribute>
                </xpath>

                <xpath expr="//field[@name='line_ids']//field[@name='account_id']" position="before">
                    <field name="serial_no"/>
                </xpath>
                <xpath expr="//button[@name='action_reverse']" position="attributes">
                    <attribute name="groups">add_real_estate.group_add_credit_note</attribute>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="source_doc_readonly" invisible="1"/>
                    <field name="source_doc" attrs="{'readonly':[('source_doc_readonly','=',True)]}"/>
                    <field name="tax_code" force_save="1" readonly="0"/>
                    <field name="deal" force_save="1" readonly="0"/>
                    <field name="tax_discount_percentage" force_save="1" readonly="0"/>
                    <field name="new_discount_type" options="{'no_create': True, 'no_open': True}"/>
                    <field name="discount_code"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="draft_no" readonly="1"/>


                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Invoice Details">
                        <field name="invoice_details">
                            <tree editable="bottom">
                                <field name="header_1"/>
                                <field name="header_2"/>

                            </tree>
                        </field>
                    </page>

                </xpath>
                <xpath expr="//label[@for='invoice_date']" position="attributes">
                    <attribute name="string">Date Accounting</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="custom_invoice_date" required="0"/>
                </xpath>

                <xpath expr="//field[@name='ref']" position="after">

                    <field name="installment_type"/>
                     <field name="reservation_id" readonly="1"/>
                    <field name="property_id" readonly="1"/>
                    <field name="state_payment"/>
                    <field name="cheque"/>
                    <field name="deposite"/>
                    <field name="is_maintainance"/>
                    <field name="statement_ref"/>
                    <field name="document_type_id"
                           options="{'no_quick_create': True, 'no_create_edit' : True,'on_open   ' : True}"/>
                    <field name="external_document_number"/>
                    <field name="external_document_type"/>
                    <field name="payment_papers"/>
                    <field name="muayada"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                    <field name="date_maturity" optional="hide"/>
                    <field name="reservation_id" optional="hide" readonly="1"/>
                    <field name="property_id" optional="hide" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="after">
                    <field name="reservation_id" optional="hide" readonly="1"/>
                    <field name="property_id" optional="hide" readonly="1"/>
                </xpath>



            </field>
        </record>
        <record id="view_move_line_tree5205" model="ir.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
