<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_real_estate_bank_form" model="ir.ui.view">
            <field name="name">payment.bank</field>
            <field name="model">payment.bank</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="bank_account_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_real_estate_bank_tree" model="ir.ui.view">
            <field name="name">payment.bank.tree</field>
            <field name="model">payment.bank</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="bank_account_id"/>
                </tree>
            </field>
        </record>
        <record id="action_real_estate_bank" model="ir.actions.act_window">
            <field name="name">Payment Bank</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.bank</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_real_estate_bank_action" name="Payment Bank" parent="account.root_payment_menu" action="action_real_estate_bank" sequence="400"/>


                <record id="discount_check_bank_view_id" model="ir.ui.view">
            <field name="name">discount check view</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">


                <xpath expr="//form" position="inside">

                    <notebook>

                            <page string="Discount Check Configuration">
                                <group>
                                    <group>
                                        <field name="available_pool"/>
                                        <field name="central_percentage"/>
                                        <field name="loan_percentage"/>
                                        <field name="account_id"/>
                                    </group>
                                    <group>
                                        <field name="is_warning" string="Validation For Warning ?"/>
                                        <field name="min_num_of_days" string="Minmum Numbers Of Days"/>
                                        <field name="max_num_of_days" string="Maxmum Numbers Of Days"/>

                                    </group>
                                </group>
                            </page>
                    </notebook>
                    <!-- Add your fields or attributes here -->
                </xpath>

            </field>
        </record>

    </data>
</odoo>