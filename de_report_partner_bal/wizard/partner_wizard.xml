<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_partner_ledger_wizard_form_view" model="ir.ui.view">
			<field name="name">partner.ledger.wizard.form.view</field>
			<field name="model">partner.wizard</field>
			<field name="arch" type="xml">
				<form string="Partner Balance">
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="company_id"/>
                           
                        </group>
                        <group>
