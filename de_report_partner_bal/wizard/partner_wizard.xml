                        </group>
                    </group>
<!--                     <notebook>
                        <page string="Partners">
                            <field name="partner_ids" required="1">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook> -->
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_partner_ledger_wizard" model="ir.actions.act_window">
			<field name="name">Partner Balance Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">partner.wizard</field>
			<field name="view_id" ref="report_partner_ledger_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="action_report_partner_ledger_wizard" id="report_partner_ledger_report_item" name="Partner Balance Report" parent="account.menu_finance_reports" sequence="5"/>


    </data>
</odoo>
