<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="shift_request_smart_button" model="ir.ui.view">
            <field name="name">shift.request.button</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_shift_request"
                            icon="fa-user">
                        <field string="Shift Request" name="shift_request_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>