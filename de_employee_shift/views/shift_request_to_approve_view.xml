<odoo>
    <data>

        <record id="view_shift_request_approve_form" model="ir.ui.view">
            <field name="name">shift.request.approve.form</field>
            <field name="model">shift.request.approve</field>
            <field name="arch" type="xml">
                <form string="Shift Request">
                    <header>
                        <button name="action_approved" string="Approve" type="object" class="btn-primary"
                                attrs="{'invisible': [('approve_req', '=', True)]}"/>
                        <button name="action_reject" string="Reject" type="object" class="btn-secondary"
                                attrs="{'invisible': [('approve_req', '=', True)]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="new,confirm,approved,reject"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="number" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group>
                                <field name="approve_req"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group></group>
                        </group>
                        <group>
                            <group>
                                <field name="shift_type_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="employee_manger_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="start_date" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="company_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group>
                                <field name="shift_responsible_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="department_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="end_date" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="Internal Notes">
                                <field name="internal_note" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"
                               options="{'post_refresh': 'recipients'}"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_shift_request_approve_tree" model="ir.ui.view">
            <field name="name">shift.request.tree</field>
            <field name="model">shift.request.approve</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="shift_type_id"/>
                    <field name="status"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <record id="view_shift_request_approve_calendar" model="ir.ui.view">
            <field name="name">Shift Request Approve Calendar</field>
            <field name="model">shift.request.approve</field>
            <field name="arch" type="xml">
                <calendar string="Shift Requests Approve" date_start="start_date" date_stop="end_date" mode="week">
                    <field name="start_date" invisible="1"/>
                    <field name="end_date" invisible="1"/>
                    <field name="shift_type_id"/>
                    <field name="shift_responsible_id" invisible="1"/>
                    <field name="employee_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="employee_manger_id" invisible="1"/>
                    <field name="status" invisible="1"/>
                </calendar>
            </field>
        </record>
        <record id="view_shift_request_approve_pivot" model="ir.ui.view">
            <field name="name">shift.request.approve.pivot</field>
            <field name="model">shift.request.approve</field>
            <field name="arch" type="xml">
                <pivot string="Shift Request Approve Pivot">
                    <field name="employee_id" type="col"/>
                    <field name="shift_type_id" type="row"/>
                    <field name="status" type="filter"/>
                </pivot>
            </field>
        </record>
        <record id="action_shift_request_to_approve" model="ir.actions.act_window">
            <field name="name">Shift Requests To Approve</field>
            <field name="res_model">shift.request.approve</field>
            <field name="view_mode">tree,form,pivot,calendar</field>
        </record>
        <menuitem id="shift_request_to_approve" name="Shift Request To Approve" parent="request_root" sequence="20"
                  action="action_shift_request_to_approve" groups="de_employee_shift.employee_request"/>
    </data>
</odoo>
