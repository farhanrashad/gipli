<odoo>
    <data>

        <record id="view_shift_request_form" model="ir.ui.view">
            <field name="name">shift.request.form</field>
            <field name="model">shift.request</field>
            <field name="arch" type="xml">
                <form string="Shift Request">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"
                                attrs="{'invisible': [('confirm_req', '=', True)]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"
                                attrs="{'invisible': [('confirm_req', '=', True)]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="new,confirm,approved,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="number" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group>
                                <field name="confirm_req" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group></group>
                        </group>
                        <group>
                            <group>
                                <field name="shift_type_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="employee_manger_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="start_date" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="company_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                            <group>
                                <field name="shift_responsible_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="department_id" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                                <field name="end_date" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="Internal Notes">
                                <field name="internal_note" attrs="{'readonly': [('status', '=', 'approved')]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"
                               options="{'post_refresh': 'recipients'}"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_shift_request_tree" model="ir.ui.view">
            <field name="name">shift.request.tree</field>
            <field name="model">shift.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="shift_type_id"/>
                    <field name="status"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <record id="view_shift_request_calendar" model="ir.ui.view">
            <field name="name">Shift Request Calendar</field>
            <field name="model">shift.request</field>
            <field name="arch" type="xml">
                <calendar string="Shift Requests" date_start="start_date" date_stop="end_date" mode="week">
                    <field name="start_date" invisible="1"/>
                    <field name="end_date" invisible="1"/>
                    <field name="shift_type_id"/>
                    <field name="shift_responsible_id" invisible="1"/>
                    <field name="employee_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="employee_manger_id" invisible="1"/>
                    <field name="status" invisible="1"/>
                </calendar>
            </field>
        </record>
        <record id="view_shift_request_pivot" model="ir.ui.view">
            <field name="name">shift.request.pivot</field>
            <field name="model">shift.request</field>
            <field name="arch" type="xml">
                <pivot string="Shift Request Pivot">
                    <field name="employee_id" type="col"/>
                    <field name="shift_type_id" type="row"/>
                    <field name="status" type="filter"/>
                </pivot>
            </field>
        </record>
        <record id="action_shift_request" model="ir.actions.act_window">
            <field name="name">Shift Requests</field>
            <field name="res_model">shift.request</field>
            <field name="view_mode">tree,form,pivot,calendar</field>
            <!--            <field name="domain">[('status', '=', 'draft')]</field>-->
        </record>
        <menuitem id="menu_shift_request_root" name="Shifts" sequence="10"/>
        <menuitem id="request_root" name="Request" parent="menu_shift_request_root" sequence="20"/>
        <menuitem id="my_shift_request" name="My Shift Request" parent="request_root" sequence="10"
                  action="action_shift_request"/>
    </data>
</odoo>
