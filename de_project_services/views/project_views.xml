<odoo>
    <record id="project_project_view_form_template_inherit" model="ir.ui.view">
        <field name="name">project.project.view.form.template.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_tasks_managment']" position="inside">
                <setting class="col-lg-12" help="Project Template to plan milestones and tasks" >
                    <field name="is_service_project_template"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
