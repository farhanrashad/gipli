<odoo>
    <data>
        <record id="line_models_fields_tree_view" model="ir.ui.view">
            <field name="name">line.models.fields.tree.view</field>
            <field name="model">rc.line.models.fields</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <tree editable="bottom" >
                    <field name="rc_line_model_id" column_invisible="1"/>
                    <field name="field_model" column_invisible="1" />
                    <field name="field_type" column_invisible="1" />
                    <field name="field_id" 
                        options = "{'no_create':True,'no_edit':True}"
                    />
                    <field name="link_field_id" 
                        domain="[('model', '=', field_model)]" 
                        required="field_type in ['many2one','many2many']"
                        readonly="field_type not in ['many2one','many2many']"
                        options = "{'no_create':True,'no_edit':True}"
                    />
                </tree>
            </field>
        </record>
        <record id="report_line_models_wizard_form" model="ir.ui.view">
            <field name="name">line.models.wizard.form</field>
            <field name="model">rc.line.models</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form string="Report Line Item">
                    <sheet>
                        <group>
                            <group>
                                <field name="rc_line_model_id" readonly="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <field name="rc_line_model_field_ids"  context="{
                            'tree_view_ref': 'de_report_builder.line_models_fields_tree_view', 
                            'default_rc_line_model_id': rc_line_model_id, 
                        }"/>
                        <footer class="oe_edit_only" >
                            <button string="Confirm" special="save" class="oe_highlight"/>
                            <button string="Discard" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="report_config_form_view">
            <field name="name">report.config.form.view</field>
            <field name="model">report.config</field>
            <field name="arch" type="xml">
                <form string="Report Configuration">
                    <header>
                        <button name="button_publish" type="object" 
                            string="Publish" 
                            class="oe_highlight"
                            invisible="state != 'draft'"
                        />
                        <button name="button_unpublish" type="object" string="Unpublish" 
                            invisible="state != 'publish'"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,publish" readonly="1"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" 
                                    placeholder="Report Name"
                                    readonly="state != 'draft'"
                                />
                            </h1>
                        </div>
                        <group>
                            <field name="description" placeholder="breif description about the report."/>
                        </group>
                        <group>
                            <group>
                                <field name="rc_header_model_id" 
                                    readonly="state != 'draft'"
                                    />
                            </group>
                            <group>
                                
                                <field name="report_parent_menu_id" />
                                <!--
                                <field name="report_menu_id" />
                                <field name="report_window_action_id" />
                                <field name="report_wizard_view_id" />
                                -->
                            </group>
                        </group>
                        <notebook>
                            <page string="Fields" name="report_header_fields">
                                <field name="rc_header_field_ids" readonly="state != 'draft'">
                                    <tree string="Header Fields" editable="bottom">
                                        <field name="rc_header_model_id" column_invisible="1" />
                                        <field name="field_model" column_invisible="1" />
                                        <field name="field_type" column_invisible="1" />
                                        <field name="field_id" 
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                        <field name="link_field_id" 
                                            domain="[('model', '=', field_model)]" 
                                            required="field_type in ['many2one','many2many']"
                                            readonly="field_type not in ['many2one','many2many']"
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                    </tree>
                                </field>
                            </page>

                            <page string="Line Model" name="report_line_models">
                                <field name="rc_line_model_ids" readonly="state != 'draft'" >
                                    <tree string="Line Models" editable="bottom">
                                        <field name="rc_header_model_relations" widget="many2many_tags" column_invisible="1"/>
                                        <field name="rc_line_model_id" 
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                        <field name="rc_header_rel_field_ids" widget="many2many_tags" invisible="1"/>
                                        <field name="rc_header_rel_field_id" 
                                            options = "{'no_create':True,'no_edit':True}"
                                            required="rc_header_rel_field_ids"
                                            />
                                        <button name="action_configure_line_model_ields" 
                                            type="object" icon="fa-list" width="0.1" 
                                            options="{&quot;warn&quot;: true}"
                                            invisible="parent.state != 'draft'"
                                        />
                                    </tree>
                                </field>
                            </page>

                            <page string="Parameters" name="parameters">
                                <field name="rc_param_line" readonly="state != 'draft'">
                                    <tree string="Parameters" editable="bottom">
                                        <field name="rc_header_model_id" column_invisible="1" />
                                        <field name="field_name" />
                                        <field name="field_operator" />
                                        <field name="field_id" string="Compare in"
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                        <field name="report_param_field_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="action_config_report" model="ir.actions.act_window">
            <field name="name">Report Configuration</field>
            <field name="res_model">report.config</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No report found. Let's create one!
              </p>
            </field>
        </record>        
        
        <menuitem action="action_config_report" name="Report" 
            id="menu_report_builder_reports_report" 
            parent="menu_report_builder_reports" 
            sequence="1"
        />
        
    </data>
</odoo>
