<odoo>
  <data>
     <record id="emp_shift_form_view" model="ir.ui.view">
            <field name="name">emp shift management form</field>
            <field name="model">shift.management</field>
            <field name="arch" type="xml">
                <form string="Shift Management">
                    <header>
              <!-- <button name="draft" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', 'draft')]}"/> -->

                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,reject"/>
                    </header>
                    <sheet>
                        <field name="shift_manage_id" />
                        <h1>
                           <field name="name" />
                        </h1>
                        <group>
                            <group>
                              <field name="employee_id"/>
                              <field name="department_id"/>
                              <field name="manager_id"/>
                            </group>
                            <group>
                              <field name="shift_type"/>
                              <field name="start_date"/>
                              <field name="end_date"/>
                              <field name="company_id"/>
                             </group>                        
                       </group>
                       <notebook>
                           <page string="Description">
                                <group col="4">
                                   <group>
                                      <field name="description"/>
                                    </group>
                                </group>      
                           </page>
                        </notebook>   
                    </sheet>
                </form>
            </field>
        </record>
        
        
        
        
        
        <record id="emp_shift_tree_view" model="ir.ui.view">
            <field name="name">emp_shift tree</field>
            <field name="model">shift.management</field>
            <field name="arch" type="xml">
                <tree string="Shift Management">
                    <field name="name"/> 
                    <field name="employee_id"/>
                    <field name="shift_type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
         <record id="action_emp_shift" model="ir.actions.act_window">
            <field name="name">Shift Management</field>
            <field name="res_model">shift.management</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="emp_shift_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new record
                </p>
            </field>
        </record>
        <menuitem id="de_hr_shift_menu_root"
            name="Shift Management"
            sequence="2"/>
               
        <menuitem id="de_hr_shift_menu" name="Shift Management" action="action_emp_shift" parent="de_hr_shift_menu_root"/>
         
         
         <record id="view_employee_shift_form_smartbutton" model="ir.ui.view">
            <field name="name">view.employee.shift.form.smartbutton</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="1000"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <field name="related_shift_count" invisible="1"/>
                    <button name="action_related_shifts"
                        class="oe_stat_button"
                        icon="fa-address-card-o"
                        type="object"
                        attrs="{'invisible': [('related_shift_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="related_shift_count"/></span>
                            <span class="o_stat_text">Shifts</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
         
         
         <record id="view_employee_shift_calendar_form_smartbutton" model="ir.ui.view">
            <field name="name">view.employee.shift.calendar.form.smartbutton</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form"/>
           
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <field name="related_emp_count" invisible="1"/>
                    <button name="action_related_emp"
                        class="oe_stat_button"
                        icon="fa-address-card-o"
                        type="object"
                        attrs="{'invisible': [('related_emp_count', '=', 0)]}">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="related_emp_count"/></span>
                            <span class="o_stat_text">Employees</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
          
         
    </data>
</odoo>    
  