<odoo>
    <data>
        <record model="ir.ui.view" id="tax_slabs_form_view">
            <field name="name">tax_slabs.form</field>
            <field name="model">tax.slabs</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="applied_from"/>
                            </group>
                            <group>
                                <field name="tax_percent"/>
                                <field name="applied_to"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_tax_slab" model="ir.actions.act_window">
            <field name="name">Tax Slab Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tax.slabs</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first tax slab</p>
            </field>
        </record>
        <!-- Define the list view -->
        <record id="view_tax_slab_tree" model="ir.ui.view">
            <field name="name">tax.slab.tree</field>
            <field name="model">tax.slabs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tax_percent"/>
                    <field name="applied_from"/>
                    <field name="applied_to"/>
                </tree>
            </field>
        </record>
        <menuitem id="menu_tax_slab"
                  name="Tax Slab"
                  parent="hr.menu_human_resources_configuration"
                  action="action_tax_slab"
                  sequence="1"/>
    </data>
</odoo>
