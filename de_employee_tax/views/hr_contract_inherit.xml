<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_contract_history_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.history.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string="TDS Information">
                    <group>
                        <group>
                            <field name="annual_salary"/>
                            <field name="other_income_including_interest"/>
                            <field name="gross_income"/>
                            <field name="total_deduction"/>
                            <field name="taxable_amount"/>
                            <field name="tax_payable"/>
                        </group>
                        <group>
                            <field name="tax"/>
                            <field name="monthly_deduction"/>
                            <field name="tds_deduction_per_month"/>
                            <field name="extra_char" invisible="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <sheet>
                <notebook>
                    <page>
                        <field name="deduction_description_ids" colspan="4" nolabel="1">
                            <tree>
                                <field name="deduction_description"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
            <sheet>
                <notebook>
                    <page>
                        <field name="extra_charges_ids" colspan="4" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </field>
    </record>
</odoo>
