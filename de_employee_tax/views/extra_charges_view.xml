<odoo>
    <data>
        <record model="ir.ui.view" id="extra_charges_form_view">
            <field name="name">extra.charges.form</field>
            <field name="model">extra.charges</field>
            <field name="arch" type="xml">
                <form string="Extra Charges">
                    <group>
                        <field name="name"/>
                        <field name="amount"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="extra_charges_action">
            <field name="name">Extra Charges</field>
            <field name="res_model">extra.charges</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="extra_charges_form_view"/>
            <field name="context">{}</field>
            <field name="type">ir.actions.act_window</field>
            <field name="target">current</field>
        </record>
        <!-- Define the list view -->
        <record id="view_extra_charges_tree" model="ir.ui.view">
            <field name="name">extra.charges.tree</field>
            <field name="model">extra.charges</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="contract_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <menuitem id="menu_extra_charges"
                  name="Extra Charges"
                  parent="hr.menu_human_resources_configuration"
                  action="extra_charges_action"
                  sequence="3"/>
    </data>
</odoo>
