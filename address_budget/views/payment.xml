<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

 <record id="normal_payments_check_form_view" model="ir.ui.view">
            <field name="name">normal.payments</field>
            <field name="model">normal.payments</field>
            <field name="inherit_id" ref="check_management.normal_payments_check_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='receipt_number']" position="after">
                    <field name="budget_company_id" options='{"no_open": True, "no_create": True}'/>
                    <field name="branch_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="project_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="department_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="franchise_id" options='{"no_open": True, "no_create": True}' domain="[('x_company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>

                </xpath>
                <xpath expr="//field[@name='multi_account_ids']//tree//field[@name='partner_id']" position="after">
                      <field name="budget_company_id"/>
                    <field name="branch_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="project_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="department_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="franchise_id" options='{"no_open": True, "no_create": True}' domain="[('x_company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>

                </xpath>

            </field>
 </record>
 <record id="customer_payment_form_view" model="ir.ui.view">
            <field name="name">customer.payment</field>
            <field name="model">customer.payment</field>
            <field name="inherit_id" ref="add_real_estate.customer_payment_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='end_cheque']" position="after">
                    <field name="budget_company_id" options='{"no_open": True, "no_create": True}'/>
                    <field name="branch_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="project_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="department_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="franchise_id" options='{"no_open": True, "no_create": True}' domain="[('x_company_id','=',budget_company_id)]" 
                        readonly="="budget_company_id == False"/>

                </xpath>

            </field>
 </record>


    </data>
</odoo>