<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="address_branch_form" model="ir.ui.view">
            <field name="name">address.branch</field>
            <field name="model">address.branch</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="cost_code"/>
                            <field name="area"/>
                            <field name="company_id"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="address_branch_view_tree" model="ir.ui.view">
            <field name="name">address_branch_view_tree</field>
            <field name="model">address.branch</field>
            <field name="arch" type="xml">
                <tree string="address_budget_tree">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="address_branch_action" model="ir.actions.act_window">
            <field name="name">Branch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">address.branch</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="address_branch_menu" name="Branch" action="address_branch_action"   sequence="1"/>

          <record id="budget_view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']//tree//field[@name='analytic_distribution']" position="after">
                    <field name="budget_company_id" options='{"no_open": True, "no_create": True}'/>
                    <field name="branch_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="project_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="department_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="franchise_id" options='{"no_open": True, "no_create": True}' domain="[('x_company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="conconcatenate_cost_code"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='analytic_distribution']" position="after">
                    <field name="budget_company_id"/>
                    <field name="branch_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" readonly="budget_company_id == False"/>
                    <field name="project_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="department_id" options='{"no_open": True, "no_create": True}' domain="[('company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                    <field name="franchise_id" options='{"no_open": True, "no_create": True}' domain="[('x_company_id','=',budget_company_id)]" 
                        readonly="budget_company_id == False"/>
                     <field name="conconcatenate_cost_code"/>

                </xpath>

            </field>
        </record>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='website']" position="before">
                    <field name="cost_code"/>
                </xpath>

            </field>
        </record>
        <record id="view_department_form" model="ir.ui.view">
            <field name="name">hr.department</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="cost_code"/>
                </xpath>

            </field>
        </record>
        <record id="edit_project" model="ir.ui.view">
            <field name="name">project.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="cost_code"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>