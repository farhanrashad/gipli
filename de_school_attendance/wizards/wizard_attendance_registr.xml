<odoo>
  <data> 
      <record id="create_attendance_wizard_form" model="ir.ui.view">
            <field name="name">attendance wizard Form View</field>
            <field name="model">oe.school.attend.register.wizard</field>
            <field name="arch" type="xml">
                <form string="Create attendance">
                
                   <group>
                        <field name="school_year_id"/>
                        <field name="date_attendance"/>
                        <field name= "by_period" invisible="1"/>
                        <field name= "company_id" invisible="1"/>
                        <field  name="period_id" attrs="{'invisible': [('by_period', '=',False)], 'required': [('by_period', '=', True)]}"/>
                       
                    </group> 
                    <group> 
                       <field name= "course_id"/>
                        <field name= "subject_id"  attrs="{'required': [('course_id', '!=', False)]}"/>
                       <field name= "batch_id" attrs="{'required': [('subject_id', '!=', False)]}"/>
                    </group>
                    <footer>
                        <button name="create_attendance" type="object" string="Create" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field> 
        </record>   
        
        
        
        
          <record id="create_attendance_wizard_action" model="ir.actions.act_window">
            <field name="name">Attendance Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oe.school.attend.register.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="create_attendance_wizard_form"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_create_attendance_wizard" 
                  action="create_attendance_wizard_action"
                  parent="menu_de_attendance_root"/>
                <!--   groups="hr.group_hr_user,hr.group_hr_manager" /> -->
        
  </data>
</odoo>  