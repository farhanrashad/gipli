<odoo>
  <data> 
      <record id="report_attendance_wizard_form" model="ir.ui.view">
            <field name="name">report attendance wizard Form View</field>
            <field name="model">oe.school.attend.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Attendance Report">
                
                   <group>
                       
                        <field name = "date_from"/>
                        <field name = "date_to"/>
                        <field name = "by_period" invisible="1"/>
                        <field name = "company_id" invisible="1"/>
                        <field name = "period_id" attrs="{'invisible': [('by_period', '=',False)], 'required': [('by_period', '=', True)]}"/>
                    </group> 
                    <group> 
                       <field name = "course_id"/>
                       <field name = "subject_id"  attrs="{'required': [('course_id', '!=', False)]}"/>
                       <field name = "batch_id" attrs="{'required': [('subject_id', '!=', False)]}"/>
                       <field name = "status_attendance" />
                       <field name = "is_late" />
                    </group>
                    <footer>
                        <button name="print_attendance_details" type="object" string="print" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
             </field> 
        </record>   
        
        
        
        
          <record id="report_attendance_wizard_action" model="ir.actions.act_window">
            <field name="name">Attendance details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oe.school.attend.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_attendance_wizard_form"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_report_attendance_root"
                  name="Reports" 
                  sequence="3"
                  parent="menu_school_attendance_root"/>
           
        
        
        
        <menuitem id="menu_report_attendance_wizard" 
                  action="report_attendance_wizard_action"
                  parent="menu_report_attendance_root"/>
           
           
           
           
    <record model="ir.ui.view" id="attendance_report_list">
          <field name="name">Attendance Report List</field>
          <field name="model">oe.school.dynamic.report</field>
          <field name="arch" type="xml">
            <tree string="Attendance detailed report" create="0">
              <field name="date"/>
              <field name="partner_id"/>
              <field name="course_id"/>
              <field name="subject_id"/>
              <field name="batch_id"/>
              
               <field name="status_attendance"/>
              <field name="is_late"/>
     
              <!-- <field name="picking_type_id"/> -->
            </tree>
          </field>
    </record>   
      <record id="attendance_report_pivot_view" model="ir.ui.view">
         <field name="name">attendance_report.nalysis.pivot</field>
         <field name="model">oe.school.dynamic.report</field>
         <field name="arch" type="xml">
             <pivot string="Sql Report" disable_linking="True">
                 <!-- <field name="product_id" type="row"/> -->
                 <field name="date" type="row"/>
                 <field name="status_attendance" type="col"/>
                 <field name="partner_id" type="col"/>
                 
             </pivot>
         </field>
    </record>    
    <record model="ir.actions.act_window" id="action_attendance_report_list">
        <field name="name">Attendance Detail Analysis</field>
        <field name="res_model">oe.school.dynamic.report</field>
        <field name="view_mode">tree</field>
       <!-- <field name="view_id" ref="attendance_report_list"/> -->
        <!-- <field name="view_mode">tree</field> -->
    </record> 
      
      
    <!-- <menuitem id="menu_attendance_report_list"
              name="Attendance sql report"
              sequence="4"
              action="action_attendance_report_list"
              parent="menu_report_attendance_root"/>
     -->
        
  </data>
</odoo>  