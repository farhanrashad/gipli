<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Define the form view for Hunter Instance -->
        <record id="view_hunter_instance_form" model="ir.ui.view">
            <field name="name">hunter.instance.form</field>
            <field name="model">hunter.instance</field>
            <field name="arch" type="xml">
                <form string="Hunter Instance">
                    <header>
                        <!-- Add a button in the header -->
                        <button name="connection_test" type="object" string="Test Connection" class="btn-primary" states="draft"/>
                        <button name="button_draft" type="object" string="Set to Draft" states="verified,active"/>
                        <button name="button_confirm" type="object" string="Confirm" class="btn-primary" states="verified"/>


                        <field name="state" widget="statusbar" statusbar_visible="draft,verified,active" force_save="1"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Trip to NY" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="url"/>
                                <field name="api_key" password="True" string="API Key"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the tree view for Hunter Instance -->
        <record id="view_hunter_instance_tree" model="ir.ui.view">
            <field name="name">hunter.instance.tree</field>
            <field name="model">hunter.instance</field>
            <field name="arch" type="xml">
                <tree string="Hunter Instances">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Define the action for the Hunter Instance -->
        <record id="action_hunter_instance" model="ir.actions.act_window">
            <field name="name">Hunter Instances</field>
            <field name="res_model">hunter.instance</field>
            <field name="view_mode">tree,form</field>
        </record>

        

    </data>
</odoo>
