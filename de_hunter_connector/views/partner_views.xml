<odoo>
    <data>
        <record id="action_hunter_find_emails" model="ir.actions.server">
            <field name="name">Find Emails</field>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                if record:
                    action = record.action_find_at_hunter()
            </field>
        </record>

        <record id="res_partner_view_form_inherit_hunter" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.hunter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_find_at_hunter" type="object" string="Find Emails" class="btn-primary"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>