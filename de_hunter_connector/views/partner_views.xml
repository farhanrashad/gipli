<odoo>
    <data>
        <record id="action_partner_hunter_find_bulk_emails" model="ir.actions.server">
            <field name="name">Bulk Emails</field>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                if record:
                    action = record.action_find_bulk_emails()
            </field>
        </record>

        <record id="action_hunter_find_email" model="ir.actions.server">
            <field name="name">Find Email</field>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                if record:
                    action = record.action_find_email()
            </field>
        </record>

        
        <record id="res_partner_view_form_inherit_hunter" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.hunter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!--
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_find_bulk_emails" type="object" string="Find Emails" class="btn-primary"/>
                    </header>
                </xpath>
                -->
                <xpath expr="//sheet" position="inside">
                    <field name="email_verified" />
                </xpath>
                <xpath expr="//field[@name='email']" position="before">
                    <button name="action_email_verify" class="text-danger" string="Verify" title="This email is not verified." type="object" attrs="{'invisible': [('email_verified', 'in', ['valid','accept_all'])]}"/>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <span class="fa fa-check-circle text-success oe_edit_only" title="Email Verified." attrs="{'invisible': [('email_verified', 'not in', ['valid','accept_all'])]}"/>
                    <span class="fa fa-times-circle text-warning oe_edit_only" title="Unverified Email." attrs="{'invisible': [('email_verified', 'in', ['valid','accept_all'])]}"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>