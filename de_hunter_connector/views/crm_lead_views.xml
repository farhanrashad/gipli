<odoo>
    <data>
        <record id="crm_lead_view_form_inherit_hunter" model="ir.ui.view">
            <field name="name">crm.lead.view.form.inherit.hunter</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_find_at_hunter" type="object" string="Bulk Emails" class="btn-primary"/>

                    <button name="action_find_email" type="object" string="Find Email" class="btn-primary"/>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <field name="email_verified" />
                </xpath>
                <xpath expr="//field[@name='email_from']" position="before">
                    <button name="action_email_verify" class="text-danger" string="Verify" title="This email is not verified." type="object" attrs="{'invisible': [('email_verified', '=', 'valid')]}"/>
                </xpath>
                <xpath expr="//field[@name='email_from']" position="after">
                    <span class="fa fa-check-circle text-success oe_edit_only" title="Email Verified." attrs="{'invisible': [('email_verified', '!=', 'valid')]}"/>
                    <span class="fa fa-times-circle text-warning oe_edit_only" title="Unverified Email." attrs="{'invisible': [('email_verified', '=', 'valid')]}"/>
                    

                </xpath>
            </field>
        </record>
        
    </data>
</odoo>