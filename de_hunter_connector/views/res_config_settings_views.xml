<odoo>
    <!--  Add Apollo Settings view  -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sequence.opportunity.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='generate_lead_setting_container']" position="after">
                <h2>Hunter</h2>
                <div class="row mt16 o_settings_container" name="generate_lead_setting_container">
                    
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="default_apl_contacts_schedule">
                            <b>Configure Hunter Instance</b>
                                <div class="text-muted">
                                    Define the Default Odoo Instance for Scheduling Cron Jobs to Update Contacts and Leads in Hunter. 
                                        <field name="hunter_instance_id" options="{'no_create': True, 'no_open': True}" class="d-inline"/>
                                 </div>
                                <div class="mt16" groups="sales_team.group_sale_manager">
                                    <button name="action_hunter_instance_from_settings" type="object" string="Hunter Connection" class="btn-primary"/>
                                </div>
                        </div>
                    </div>
                    
                </div>
            </xpath>
        </field>
    </record>
</odoo>