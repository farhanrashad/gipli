<odoo>
    <data>
        <!-- Define a form view for Api Call Wizard -->
        <record id="hunter_api_call_wizard_form" model="ir.ui.view">
            <field name="name">hunter.api.call.wizard.form</field>
            <field name="model">hunter.api.call.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <!--
                        <div class="oe_title">
                        <span class="o_form_label" >Instance</span>
                            <h1 class="d-flex">
                                <field name="hunter_instance_id" options="{'no_create': True, 'no_open': True}"/>
                            </h1>
                        </div>
                        -->
                        <group class="oe_inline" string="Update Fields">
                            <div class="o_td_label">
                                <label for="email_update" string="Email"/>
                            </div>
                            <div name="email_update">
                                <span class="ml8">
                                    <field name="email_update" nolabel="1" style="width: 6rem;" />
                                </span>
                                <span class="ml8" attrs="{'invisible': [('active_model', '=', 'res.partner')]}">
                                    <strong>Name:</strong><field name="name_update" nolabel="1" style="width: 6rem;" />
                                </span>
                                <span class="ml8">
                                    <strong>Position:</strong> <field name="position_update" nolabel="1" style="width: 6rem;" />
                                </span>
                                <span class="ml8">
                                    <strong>Phone:</strong> <field name="phone_update" nolabel="1" style="width: 6rem;" />
                                </span>
                            </div>
                        </group>

                        <field name="active_model" invisible="1"/>
                        
                        <field name="line_ids" widget="one2many_list" no_label="1">
                            
                            <tree editable="bottom" create="false" delete="false">
                                <field name="record_select" nolabel="1" style="width: 4rem;"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="position"/>
                                <field name="department"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                        <group class="oe_inline">
                            <div name="record_select">
                                <field name="record_select" />
                                <field name="record_unselect" invisible="1"/>
                            </div>
                            <div class="o_td_label">
                                <label for="record_select" />
                            </div>
                            
                        </group>
                        <footer>
                            <button name="action_update_email" string="Update Email" type="object" class="btn-primary"/>
                            <button name="action_convert_contacts" string="Convert into Contacts" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
