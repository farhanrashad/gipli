<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_calendly" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.calendly</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="calendar.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='calendar']" position="inside">
                <block id="calendly" title="Calendly Settings">
                    <setting id="is_calendly" 
                        string="Calendly" 
                        help="Synchronize your calendar with Calendly Meetings"
                        documentation="https://developer.calendly.com/console/apps">
                        <field name="is_calendly" />

                        <div class="text-start" style="position:relative;" invisible="not is_calendly">
                            <a class="oe_link" href="https://developer.calendly.com/console/apps" target="_blank">
                                <i class="oi oi-arrow-right"/>
                                Sign up to MapBox to get a free token
                            </a>
                        </div>
                        <div class="mt0 content-group" invisible="not is_calendly">
                            <div class="mt16 row">
                                <label for="calendly_client_id" string="Client ID" class="col-3 col-lg-3 o_light_label"/>
                                <field name="calendly_client_id" required="is_calendly" nolabel="1"/>
                            </div>
                            <div class="mt16 row">
                                <label for="calendly_client_secret" string="Client Secret" class="col-3 col-lg-3 o_light_label"/>
                                <field name="calendly_client_secret" required="is_calendly" password="True" nolabel="1"/>
                            </div>
                            <div class="mt16 row">
                                <label for="calendly_webhook_signing_key" string="Webhook signing key" class="col-3 col-lg-3 o_light_label"/>
                                <field name="calendly_webhook_signing_key" required="is_calendly" password="True" nolabel="1"/>
                            </div>
                            <div class="row mt16 col-6 col-lg-6">
                                <field name ="calendly_generated_access_token" invisible="1" />
                                <button name="action_calendly_access_token" type="object" string="Generate Token" class="btn-primary"/>
                            </div>
                            <div class="mt8 row" style="text-wrap: nowrap;!important">
                                <div><strong>Kindly note your Calendly callback URI</strong></div>
                                <field name ="display_calendly_callback_uri" style="text-wrap: nowrap;!important"/>
                            </div>
                            
                        </div>
                        
                    </setting>
                </block>
            </xpath>
            
        </field>
    </record>
</odoo>