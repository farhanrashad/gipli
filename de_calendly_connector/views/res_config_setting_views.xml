<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_calendly" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.calendly</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="calendar.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='calendar']" position="inside">
                <block id="calendly" title="Calendly">
                    <setting id="authentication" title="Synchronize your calendar with Calendly Meeting." help="Synchronize your calendar with Calendly Meeting.">
                        <div class="content-group">
                            <div class="mt16 row">
                                <label for="calendly_client_id" string="Client ID" class="col-3 col-lg-3 o_light_label"/>
                                <field name="calendly_client_id" nolabel="1"/>
                            </div>
                            <div class="mt16 row">
                                <label for="calendly_client_secret" string="Client Secret" class="col-3 col-lg-3 o_light_label"/>
                                <field name="calendly_client_secret" password="True" nolabel="1"/>
                            </div>
                            <div class="mt16 row">
                                <field name ="calendly_generated_access_token" invisible="1" />
                                <button name="action_generate_access_token" type="object" string="Generate Token" class="btn-primary"/>
                            </div>
                        </div>
                        
                    </setting>
                </block>
            </xpath>
            
        </field>
    </record>
</odoo>