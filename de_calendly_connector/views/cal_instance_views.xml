<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the CRM Configuration menu -->
        <menuitem id="menu_crm_config_calendly" name="Calendly" parent="crm.crm_menu_config" sequence="50"/>


        <!-- Define the form view for calendly Instance -->
        <record id="view_calendly_instance_form" model="ir.ui.view">
            <field name="name">calendly.instance.form</field>
            <field name="model">cal.instance</field>
            <field name="arch" type="xml">
                <form string="Calendly Instance">
                    <header>
                        <!-- Add a button in the header -->
                        <button name="connection_test" type="object" string="Test Connection" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="button_draft" type="object" string="Set to Draft" invisible="state not in ('verified','active')"/>
                        <button name="button_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'verified'"/> 


                        <field name="state" widget="statusbar" statusbar_visible="draft,verified,active" force_save="1"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Calendly" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="client_id" />
                                <field name="access_token" />
                                <field name="url" />
                                <field name="url_sample" class="text-muted" nolabel="1" readonly="1"/>
                            </group>
                            <group>
                                <field name="client_secret" password="True" />
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Settings" name="settings" invisible="state  != 'active'">
                                <group>
                                    <group name="group_import_operations" string="Import Operations" col="1" class="row mt16 o_settings_container" groups="sales_team.group_sale_manager">
                                        <div>
                                            <!-- Import Contacts -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_draft" context="{'op_name':'contacts'}" icon="fa-arrow-right" type="object" string="Import Contacts" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="cal_date_import_contacts" class="fw-bold o_form_label" string="The last contacts were imported on "/>
                                                    <b><field name="cal_date_import_contacts" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly import individual contacts from Calendly into Odoo contacts.
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Import Accounts -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_draft" context="{'op_name':'accounts'}" icon="fa-arrow-right" type="object" string="Import Accounts" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="cal_date_import_accounts" class="fw-bold o_form_label" string="The last accounts were imported on "/>
                                                    <b><field name="cal_date_import_accounts" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly import companies from Calendly into Odoo contacts.
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- import Opportunities -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_draft" icon="fa-arrow-right" type="object" string="Import Leads" context="{'op_name':'leads'}" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="cal_date_import_leads" class="fw-bold o_form_label" string="The last leads were imported on "/>
                                                    <b><field name="cal_date_import_leads" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly import leads or opportunities from Calendly into Odoo leads.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                    <group name="group_export_operations" string="Export Operations" col="1" class="row mt16 o_settings_container" groups="sales_team.group_sale_manager">
                                        <div>
                                            <!-- Export Contacts -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_draft" icon="fa-arrow-right" type="object" string="Export Contacts" context="{'op_name':'contacts'}" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="cal_date_export_contacts" class="fw-bold o_form_label" string="The last contacts were exported on "/>
                                                    <b><field name="cal_date_export_contacts" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly export individual and company contacts into Calendly contacts and accounts.
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Export Opportunities -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_draft" icon="fa-arrow-right" type="object" string="Export Leads" context="{'op_name':'leads'}" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="cal_date_export_leads" class="fw-bold o_form_label" string="The last leads were exported on "/>
                                                    <b><field name="cal_date_export_leads" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly export leads or opportunities into Calendly opportunities.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                </group>

                                        <!-- end -->
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the tree view for Calendly Instance -->
        <record id="view_calendly_instance_tree" model="ir.ui.view">
            <field name="name">calendly.instance.tree</field>
            <field name="model">cal.instance</field>
            <field name="arch" type="xml">
                <tree string="Calendly Instances">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Define the action for the Calendly Instance -->
        <record id="action_calendly_instance" model="ir.actions.act_window">
            <field name="name">Calendly Instances</field>
            <field name="res_model">cal.instance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Create a menu item for calendly Instance -->
        <menuitem id="calendar_menu_config_calendly" name="Calendly" parent="calendar.calendar_menu_config" sequence="90"/>

        <menuitem id="calendar_menu_config_calendly_instance" name="Instances" parent="calendar_menu_config_calendly" action="action_calendly_instance" sequence="10"/>

    </data>
</odoo>
