<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="calendly_cancel_event_wizard_form_view" model="ir.ui.view">
        <field name="name">calendly.cancel.event.wizard.form</field>
        <field name="model">calendly.cancel.event.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="event_ids" widget="many2many_tags" />
                        <label for="cancel_type"/>
                        <div id="cancel_type">
                            <field name="cancel_type" widget="radio"/>
                        </div>
                    </group>
                    <label for="reason_cancel" string="Reason for Cancel"/>
                    <div name="reason_cancel">
                        <span class="ml8">
                            <field name="reason_cancel" nolabel="1"/>
                        </span>
                    </div>
                </group>
                <footer>
                    <button name="cancel_calendly_event" string="Cancel Event" type="object" class="btn-primary"/>
                    <button special="cancel" string="Close" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_cancel_events" model="ir.actions.act_window">
        <field name="name">Cancel Events</field>
        <field name="res_model">calendly.cancel.event.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="calendly_cancel_event_wizard_form_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_calendar_event"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>