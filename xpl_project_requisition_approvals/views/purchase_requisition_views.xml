<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_requisition_form_view_inherit_project" model="ir.ui.view">
        <field name="name">purchase.requisition.form.project</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[2]" position="inside">
                <field name="analytic_account_id" string="Division/Project" groups="analytic.group_analytic_accounting"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Approvals" name="approvals">
                    <field name="approval_ids" readonly="state != 'draft'">
                        <list string="Roles" editable="bottom" 
                            readonly="approval_status != 'draft'"
                            decoration-success="approval_status=='approved'"
                            decoration-danger="approval_status=='rejected'">
                            <field name="sequence" widget="handle" optional="hide" readonly="approval_status!='pending'"/>
                            <field name="approval_group_id" readonly="approval_status!='pending'"/>
                            <field name="user_id" readonly="approval_status!='pending'" widget="many2one_avatar_user"/>
                            <field name="date_approved" readonly="approval_status!='pending'" />
                            <field name="approval_status" readonly="1"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="cost_account_id" />
            </xpath>
        </field>
    </record>
</odoo>
