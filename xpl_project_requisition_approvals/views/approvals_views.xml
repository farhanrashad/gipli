<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_requisition_approval_form_view">
            <field name="name">purchase.requisition.approval.form.view</field>
            <field name="model">purchase.requisition.approvals</field>
            <field name="arch" type="xml">
                <form string="Purchase Requisition Approvals">
                    <header>
                        <field name="approval_status" widget="statusbar" statusbar_visible="draft,sent,purchase" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="approval_group_id" />
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <field name="date_approved"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_requisition_approval_tree_view" model="ir.ui.view">
            <field name="name">purchase.order.list</field>
            <field name="model">purchase.requisition.approvals</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <list string="Requisition Approvals">
                    <field name="approval_group_id" />
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="date_approved"/>
                    <field name="approval_status"/>
                </list>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_purchase_requisition_approvals">
            <field name="name">Requisition Approvals</field>
            <field name="res_model">purchase.requisition.approvals</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'create': False, 'delete': False}</field>
        </record>
        
            <menuitem
                id="menu_procurement_management_approvals"
                sequence="100"
                parent="purchase.menu_procurement_management"
                action="action_purchase_requisition_approvals"/>

    </data>
</odoo>
