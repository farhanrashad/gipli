<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_settings" model="ir.ui.view">
        <field name="name">res.company.settings</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
             <xpath expr="//page[1]" position="after">
                 <page string="Zoom Settings">
                            <group>
                                <group>
                                    <field name="api_key" />
                                    <field name="api_secret" />
                                    <br/>
                                    <br/>
                                        <button name="test_connection" type="object" string="Test Connection"
                                                    class="oe_highlight" />


                                </group>
                                <group>
                                    <field name="meeting_event_mail_notification"/>
                                    <field name="zoom_admin_user_id"  options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </group>

                 </page>
             </xpath>
        </field>
    </record>
</odoo>