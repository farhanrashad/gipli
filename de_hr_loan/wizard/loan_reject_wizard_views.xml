<odoo>
    <!--  View Reject Reason Wizard  -->
    <record id="loan_reject_wizard_form_view" model="ir.ui.view">
        <field name="name">loan.reject.wizard.form.view</field>
        <field name="model">hr.loan.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Loan Reject">
                <group class="oe_title">
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_loan_reject" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!--  Loan Reject  -->
    <record id="action_loan_reject_wizard" model="ir.actions.act_window">
        <field name="name">Loan Reject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="loan_reject_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>