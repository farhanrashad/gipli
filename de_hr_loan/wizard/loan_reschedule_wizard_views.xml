<odoo>
    <!--  View Reschedule Wizard  -->
    <record id="loan_reschedule_wizard_form_view" model="ir.ui.view">
        <field name="name">loan.reschedule.wizard.form.view</field>
        <field name="model">hr.loan.reschedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Loan Reject">
                <group class="oe_title">
                    <div class="o_td_label">
                                        <label for="interval_loan" string="Loan Interval" />
                                    </div>
                                    <div name="interval_loan">
                                        <field name="interval_loan" nolabel="1" style="width: 8rem;" />
                                        <span class="ml8" > Month(s)</span>
                            </div>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_loan_reschedule" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!--  Loan Reject  -->
    <record id="action_loan_reschedule_wizard" model="ir.actions.act_window">
        <field name="name">Loan Reschedule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan.reschedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="loan_reschedule_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>