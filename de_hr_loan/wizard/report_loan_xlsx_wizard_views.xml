<odoo>
    <!-- Form View For Wizard -->
    <record id="loan_report_wizard_view" model="ir.ui.view">
        <field name="name">loan.report.wizard.view</field>
        <field name="model">hr.loan.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance Report">
                <group>
                    <group>
                        <field name="start_date" required="1"/>
                        <field name="loan_type_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                        
                    </group>
                </group>
                <footer>
                    <button name="generate_excel_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!--  Action  -->
    <record id="action_hr_loan_xlsx" model="ir.actions.act_window">
        <field name="name">Loan Details Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="loan_report_wizard_view"/>
        <field name="target">new</field>
    </record>
    <!--  Menu  -->
    <menuitem name="Loan Details"
        parent="menu_loan_reports"
        id="menu_report_loan_details_xlsx"
        action="action_hr_loan_xlsx"/>

</odoo>