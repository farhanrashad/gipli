<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_loan_type_form_view" model="ir.ui.view">
        <field name="name">hr.loan.type.form.view</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image", "size": [80, 80]}'/>
                    <div class="oe_title">
                        <label for="name" string="Loan Type"/>
                        <h1>
                            <field name="name" placeholder="e.g. Personal Loan"/>
                        </h1>
                        <h3>
                            <field name="description" placeholder="Describe the loan"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_code" />
                            <field name="sequence_id" invisible="1" readonly="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                        <group string="Loan Accounting">
                            <field name="payment_product_id" options="{'no_create': True}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Rules" name="loan_rule">
                            <group>
                                <group string="Based On">
                                    <field name="calculation_type" class="o_light_label" widget="radio"/>

                                    <div class="o_td_label" attrs="{'invisible': [('calculation_type', '!=', 'fix')]}">
                                        <label for="fixed_amount" string="Amount" />
                                    </div>
                                    <div name="fixed_amount" attrs="{'invisible': [('calculation_type', '!=', 'fix')]}">
                                        <field name="fixed_amount" nolabel="1" style="width: 8rem;" attrs="{'invisible': [('calculation_type', '!=', 'fix')],'required': [('calculation_type', '=', 'fix')]}"/>
                                        <span class="ml8" ><field name="currency_id" nolabel="1" style="width: 8rem;" /></span>
                                    </div>
                                    
                                    <field name="calculation_field_id" attrs="{'invisible': [('calculation_type', '!=', 'percent')]}"/>
                                    <field name="amount_per" attrs="{'invisible': [('calculation_type', '!=', 'percent')],'required': [('calculation_type', '=', 'percent')]}"/>
                                </group>
                                <group>
                                    <div class="o_td_label">
                                        <label for="loan_frequency" string="Loan Frequency" />
                                    </div>
                                    <div name="loan_frequency">
                                        <field name="loan_frequency" nolabel="1" style="width: 8rem;" />
                                        <span class="ml8" ><field name="loan_frequency_interval" nolabel="1" style="width: 8rem;" /> Month(s)</span>
                                    </div>

                                    <div class="o_td_label">
                                        <label for="interval_loan_mode" string="Loan Interval" />
                                    </div>
                                    <div name="interval_loan_mode">
                                        <field name="interval_loan_mode" nolabel="1" style="width: 8rem;" />
                                        <span class="ml8" ><field name="interval_loan" nolabel="1" style="width: 8rem;" /> Month(s)</span>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group string="Disbursement">
                                    <field name="repayment_model" invisible="1"/>
                                    <field name="repayment_model_id" options="{'no_create': True}" />
                                    <field name="prepayment_credit_memo"  attrs="{'invisible': [('repayment_model', '!=', 'account.move')]}"/>
                                </group>
                            </group>
                            
                        </page>
                        <page string="Documents">
                            <field name="loan_type_document_ids" >
                                <tree string="Stock Moves" editable="bottom">
                                    <field name="name" />
                                    <field name="is_mandatory" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_loan_type_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.type.tree.view</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="hr_loan_type_filter" model="ir.ui.view">
        <field name="name">hr.loan.type.search</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <record id="action_loan_type" model="ir.actions.act_window">
        <field name="name">Loan Type</field>
        <field name="res_model">hr.loan.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Loan Type"
        parent="menu_loan_config"
        id="menu_hr_loan_type"
        sequence="20"
        action="action_loan_type"/>
</odoo>