<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_loan_type_form_view" model="ir.ui.view">
        <field name="name">hr.loan.type.form.view</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1" />
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image", "size": [80, 80]}'/>
                    <div class="oe_title">
                        <label for="name" string="Loan Type"/>
                        <h1>
                            <field name="name" placeholder="e.g. Personal Loan"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="automated_sequence"/>
                        <field name="sequence_code" attrs="{
                            'invisible': [('automated_sequence', '=', False)],
                            'required': [('automated_sequence', '=', True)],
                        }"/>
                        <field name="sequence_id" invisible="1" readonly="1"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/> 
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_loan_type_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.type.tree.view</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="hr_loan_type_filter" model="ir.ui.view">
        <field name="name">hr.loan.type.search</field>
        <field name="model">hr.loan.type</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <record id="action_loan_type" model="ir.actions.act_window">
        <field name="name">Loan Type</field>
        <field name="res_model">hr.loan.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Type"
        parent="menu_loan_config"
        id="menu_hr_loan_type"
        sequence="20"
        action="action_loan_type"/>
</odoo>