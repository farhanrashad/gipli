<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Loan Tree view-->
    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-success="state == 'paid'" decoration-warning="state == 'confirm' or state == 'validate1'" decoration-danger="state == 'validate' or state == 'partial'" decoration-info="state == 'draft'" decoration-muted="state == 'done' or state=='refuse'" optional="show"/>

            </tree>
        </field>
    </record>

    <!--Loan Form view-->
    <record id="hr_loan_form_view" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                    <button name="action_compute_intervals" type="object" string="Compute" class="oe_highlight"  attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="action_compute_intervals" type="object" string="Compute" attrs="{'invisible':[('state','!=','verify')]}"/>

                    <button string="Mark as Draft" name="action_draft" type="object" attrs="{'invisible': [('state', 'not in', ['verify', 'confirm'])]}"/>
                    
                    <button name="%(action_loan_reject_wizard)d" type="action" string="Rject" attrs="{'invisible': [('state', 'not in', ['confirm','validate','validate1'])]}"/>

                    <button name="%(action_loan_reschedule_wizard)d" type="action" string="Reschedule" attrs="{'invisible': [('state', 'not in', ['confirm','validate','validate1','partial'])]}"/>


                    <button name="action_confirm" type="object" string="Submit Request" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="action_confirm" type="object" string="Submit Request" class="oe_highlight"  attrs="{'invisible':[('state','!=','verify')]}"/>

                    <button string="Approve" name="action_approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>

                    <button name="action_request_move_create"
                            string="Post Journal Entries"
                            type="object"
                            data-hotkey="y"
                            class="oe_highlight o_loan_post"
                            attrs="{'invisible': [('state', '!=', 'validate')]}"
                            groups="account.group_account_invoice"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,verified,confirm,validate,post,paid"/>
                </header>

                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_account_move"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                type="object"
                                attrs="{'invisible': [('account_move_id', '=', False)]}"
                                groups="account.group_account_invoice">
                                Journal Entry
                        </button>
                        <button class="oe_stat_button" type="object"  name="action_view_loan_reschedule_request" icon="fa-calendar-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Requests</span>
                                <field name="loan_reschedule_count" invisible="0"/>
                            </div>
                        </button>
                    </div>
                    <!-- Payment status for invoices / receipts -->
                    
                    <widget name="web_ribbon" title="Paid" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
                    <widget name="web_ribbon" title="Partially Reconciled" attrs="{'invisible': [('state', '!=', 'partial')]}"/>
                    <widget name="web_ribbon" title="Reconciled" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                    <!-- Invisible Fields -->
                    <field name="company_id" invisible="1" />
                    <field name="repayment_model" invisible="1" />
                    <field name="address_id" invisible="1" />
                    <field name="account_move_id" invisible="1" />
                    <field name="interval_loan_mode" invisible="1" />
                    <div class="oe_title">
                        <span class="o_form_label" >Request for Loan </span>
                        <h1 class="d-flex">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group >
                        <group>
                            <field name="employee_id" context="{'default_company_id': company_id}" widget="many2one_avatar_employee"/>
                            <field name="loan_type_id" force_save="1" options="{'no_create': True, 'no_open': True}"/>

                            <field name="date"/>
                            <div class="o_td_label">
                                <label for="amount" string="Amount" />
                            </div>
                            <div name="amount">
                                <field name="amount" nolabel="1" style="width: 8rem;" />
                                <span class="ml8" ><field name="currency_id" nolabel="1" style="width: 8rem;" /></span>
                            </div>
                            
                            <field name="interval_loan" attrs="{'readonly': ['|',('interval_loan_mode', '=', 'fix'),('state', 'not in', ['draft','verify'])]}"/>
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                        <group>
                            <field name="accounting_date" groups="account.group_account_invoice,account.group_account_readonly" />
                            <field name="journal_id" groups="account.group_account_invoice,account.group_account_readonly" options="{'no_open': True, 'no_create': True}" context="{'default_company_id': company_id}"/>
                             
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                            <field name="description"/>
                        </group>
                    <notebook>
                        <page string="Intervals" name="loan_intervals">
                            <field name="loan_lines">
                                <tree string="Intervals" editable="bottom" decoration-danger="state == 'pending'" decoration-muted="state == 'close' or state == 'cancel'" >
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="state" readonly="1" />
                                    <field name="account_move_id" optional="hide"/>
                                    <field name="amount_paid"/>
                                    <field name="res_id" invisible="1"/>
                                    <field name="model" invisible="1" />
                                    <field name="res_name" optional="hide"/>
                                </tree>
                            </field>
                            <group col="12" class="oe_loan_lines_tab">
                                <group/>
                                <group class="oe_subtotal_footer oe_right" >
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_disbursed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_residual" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Documents" name="loan_documents">
                            <field name="loan_document_ids" >
                                <tree string="loan Documents" editable="bottom" create="false" edit="true" delete="false">
                                    <field name="name" readonly="1" invisible="1"/>
                                    <field name="doc_desc" readonly="1" required="1" />
                                    <field name="attachment" attrs="{'required': [('is_mandatory', '=', True)]}" widget="binary" filename="name"/>
                                    <field name="loan_id" invisible="1"/>
                                    <field name="is_mandatory" invisible="0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--loan search view-->
    <record id="view_loan_request_search_form" model="ir.ui.view">
        <field name="name">hr.loan.search.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <field name="name" string="Reference"/>
                <field name="loan_type_id" string="Loan Type"/>
                <field name="employee_id" string="Employee"/>
               
                <filter string="My Requests" name="myrequest" domain="[('employee_id.user_id.id', '=', uid)]" />
                <separator/>
                
                <filter string="To Approve" name="to_approve" domain="[('state', 'in', ['confirm','validate1'])]" />
                <filter string="Pending" name="pending" domain="[('state', 'in', ['validate','partial'])]" />
                <filter string="To Pay" name="to_pay" domain="[('state', 'in', ['paid'])]" />
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee_id" context="{'group_by':'employee_id'}"/>
                    <filter string="Loan Type" name="group_loan_type" context="{'group_by':'loan_type_id'}"/>
                    <filter string="Status" name="status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>


    <!--loan menu-->
    <menuitem name="Loans &amp; Advances"
        id="menu_hr_loans_and_advances" parent="menu_loan_management"
        sequence="20"/>

    <record id="action_hr_loan_request" model="ir.actions.act_window">
        <field name="name">Request for Loan</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <field name="search_view_id" ref="view_loan_request_search_form"/>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p><p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <menuitem name="All Requests"
        parent="menu_loan_management"
        id="menu_hr_loan_request"
        sequence="1"
        action="action_hr_loan_request"/>

    <!-- Actions for Dashbaord -->
    <record id="action_loan_tree" model="ir.actions.act_window">
            <field name="name">To Do</field>
            <field name="res_model">hr.loan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="search_view_id" ref="view_loan_request_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Loan found. Let's create one!
                </p>
            </field>
    </record>

</odoo>
