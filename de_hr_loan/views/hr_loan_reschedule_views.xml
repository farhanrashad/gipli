<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_loan_reschedule_form_view" model="ir.ui.view">
        <field name="name">hr.loan.reschedule.form.view</field>
        <field name="model">hr.loan.reschedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Mark as Draft" name="action_draft" type="object" attrs="{'invisible': [('state', 'not in', ['confirm'])]}"/>
                    <button name="action_confirm" type="object" string="Submit Request" class="oe_highlight"  attrs="{'invisible':[('state','!=','draft')]}"/>

                    <button string="Approve" name="action_approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirm')]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,verified,confirm,validate,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label" >Request for Reschedule</span>
                        <h1 class="d-flex">
                            <field name="name" readonly="1"/>
                        </h1>
                        <span class="o_form_label" >Loan Reference</span>
                        <h3>
                            <field name="loan_id" />
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" widget="many2one_avatar_employee"/>
                            <div class="o_td_label">
                                        <label for="interval_loan" string="Loan Interval" />
                                    </div>
                                    <div name="interval_loan">
                                        <field name="interval_loan" nolabel="1" style="width: 8rem;" />
                                        <span class="ml8" > Month(s)</span>
                            </div>
                            
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="loan_type_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_loan_reschedule_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.reschedule.tree.view</field>
        <field name="model">hr.loan.reschedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="loan_id" invisible="1"/>
                <field name="employee_id" />
                <field name="date"/>
                <field name="loan_type_id" />
                <field name="state" widget="badge" decoration-success="state == 'confirm'" decoration-info="state == 'draft'" decoration-muted="state == 'validate' or state=='refuse'" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="hr_loan_reschedule_filter" model="ir.ui.view">
        <field name="name">hr.loan.reschedule.search</field>
        <field name="model">hr.loan.reschedule</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <search>
                <field name="loan_id"/>
                <filter string="My Requests" name="myrequest" domain="[('loan_id.employee_id.user_id.id', '=', uid)]" />
                <separator/>
                <filter string="To Confirm" name="to_confirm" domain="[('state', 'in', ['draft'])]" />
                <filter string="To Approve" name="to_approve" domain="[('state', 'in', ['confirm','validate1'])]" />

                <group expand="0" string="Group By">
                    <filter string="Status" name="status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_loan_reschedule" model="ir.actions.act_window">
        <field name="name">Loan Reschedule</field>
        <field name="res_model">hr.loan.reschedule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
    </record>

    <menuitem name="Reschedule Requests"
        parent="menu_loan_management"
        id="menu_hr_loan_reschedule_request"
        sequence="2"
        action="action_loan_reschedule"/>

    <record id="action_loan_reschedule_request_new" model="ir.actions.act_window">
        <field name="name">Loan Reschedule Request</field>
        <field name="res_model">hr.loan.reschedule</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('loan_id', '=', active_id)]</field>
        <field name="context">{'create': False, 'search_default_loan_id': active_id, 'default_loan_id': active_id}</field>
    </record>
    
</odoo>