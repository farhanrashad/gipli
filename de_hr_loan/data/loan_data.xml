<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for Loan Reschedule Request -->
        <record id="seq_hr_loan_reschedule" model="ir.sequence">
            <field name="name">Loan Reshedule Request</field>
            <field name="code">hr.loan.reschedule</field>
            <field name="prefix">RS/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Leave specific activities -->
        <record id="mail_act_loan_confirm" model="mail.activity.type">
            <field name="name">Request Approval</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.loan</field>
        </record>
        <record id="mail_act_loan_second_approval" model="mail.activity.type">
            <field name="name">Request Second Approve</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model">hr.loan</field>
        </record>

        <!-- Scheduler -->
        <record forcecreate="True" id="ir_cron_loan_scheduler_action" model="ir.cron">
            <field name="name">Reconcile Loan: run scheduler</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="state">code</field>
            <field name="code">
model._reconcile_post_loan()
            </field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        
	</data>
</odoo>