<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_loan">
            <field name="name">Loan Management</field>
            <field name="description">Helps you to manage employee loans.</field>
            <field name="sequence">10</field> <!-- Adjust the sequence number as needed -->
        </record>
        
        <record id="group_loan_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_loan"/>
        </record>

        <record id="group_loan_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_loan"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>