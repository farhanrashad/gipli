<odoo>
  <data>

       <record id="partner_qualification_survey_form" model="ir.ui.view">
            <field name="name">res.partner.view.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="3"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object"  name="action_partner_interview" icon="fa-usd">
                        <field string="Interviews" name="partner_survey_count" widget="statinfo"/>
                    </button>
                </div>
                

            </field>
    </record>

  </data>
</odoo>
