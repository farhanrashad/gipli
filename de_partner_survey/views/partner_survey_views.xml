<odoo>
    <data>

        <record id="view_partner_interview_tree" model="ir.ui.view">
			<field name="name">res.partner.survey.tree</field>
			<field name="model">res.partner.survey</field>
			<field name="arch" type="xml">
                <tree string="Recruitment Interviews" editable="bottom" create="0">
                    <field name="interviewer_id"/>
                    <field name="performed_by_id" readonly="1" invisible="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="survey_id" readonly="1"/>
                    <field name="category_id" readonly="1"/>
                    <field name="response_id" invisible="1"/>
                    <button string="Start Interview" type="object" class="oe_highlight" name="action_start_survey"/>
                    <button string="View Assessment" type="object" name="action_print_answers"/>
                    <field name="score_total" />
                </tree>
            </field>
        </record>
        
    </data>
</odoo>
