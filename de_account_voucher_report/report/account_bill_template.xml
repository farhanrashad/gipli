<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="V6_bill_document">
    <t t-call="web.html_container"> 
        <t t-call="web.internal_layout">
                      
        <t t-set="o" t-value="o.with_context()"/>
        <div class="page" style="font-size:18px;">
             <div><!-- class= "pull-left">-->
               <img style="height:100px;width:100px" t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="float-left" alt="Logo"/>
                <span aling="center" t-esc='o.company_id.name' style="font-size: 20px; margin-top:25px;padding-left:300px;"/><br/>
                 <t t-if="o.company_id.street">
                     <span style="padding-left:300px;" t-esc='o.company_id.street'/>
                 </t>
                 <t t-if="o.company_id.street2">    
                    <span style="padding-left:300px;" t-esc='o.company_id.street2'/>
                 </t>
                 <t style="padding-left:300px;" t-if="o.company_id.city">   
                    <span t-esc='o.company_id.city'/>
                 </t>   
                 <t style="padding-left:300px;" t-if="o.company_id.country_id">
                    <span t-esc='o.company_id.country_id.name'/>
                 </t>   
            </div>
            <div class="oe_structure"/>
            <div align="center"> 
                <br/>                  
              <h2><t t-if="o.type=='in_invoice'">Purchase Voucher</t><t t-if="o.type=='entry'">Journal Voucher</t></h2>
            </div>
            <br/>
            
            
            
            
             <div class="row">
                     <div class="col-6" style="font-size:15px">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold;">&#160;</td>
                                            <td>&#160;</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>  
                            <div class="col-6" style="font-size:15px">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold;">Vendor's Name :</td>
                                            <td>
                                                <span t-field=" o.partner_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold;text-align:right;">&#160;&#160;&#160;Address :</td>
                                            <td>
                                                <span t-field=" o.partner_id.street"/><br/>
                                                <span t-field=" o.partner_id.street2"/>,
                                                <span t-field=" o.partner_id.city"/>
                                            </td>
                                        </tr>
                                        
                                    </tbody>
                                </table>
                            </div>
                           
                        </div>
            
            
            
             <div id="bill_payment_informations" class="row mt32 mb32">
                <div class="col-auto mw-100 mb-2" style="white-space:nowrap;">
                            <strong>Voucher Date:</strong>
                            <p class="m-0" t-field="o.date"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                            <strong>Reference:</strong><br/>
                            <t t-set="voucher_no" t-value="(o.seq_name).split('/')[0] +'/'+(o.seq_name).split('/')[2]"/>
                                <span class="m-0">
                                  <t t-esc="voucher_no"/>
                                </span>
                            <!-- <p class="m-0" t-field="o.seq_number"/> -->
                </div>
            </div>
            <!-- <table class="table table-sm table-striped table-bordered">

                <tr style="height:30%">
                    <th align="center">V.NO.:</th>
                    <th><span t-field="o.name"/></th>
                    <th align="center">DATE :</th>
                    <th> <span t-field="o.date"/></th>
                </tr>
            </table> -->
            <br/>
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                       <th> A/C CODE</th>
                        <th>TITLE OF ACCOUNT</th>
                        <th>NARRATION</th>
                        <th>DEBIT</th>
                        <th>CREDIT</th>
                    </tr>
                    </thead>
                <tbody class="sale_tbody">
                    <t t-set= "total_debit" t-value="0"/>
                    <t t-set= "total_credit" t-value="0"/>
                      <t t-foreach="o.line_ids" t-as="line">
                        <tr>
                            <td ><span t-field="line.account_id.code"/></td>
                            <td ><span t-field="line.account_id.name"/></td>
                            <td ><span t-field="line.name"/></td>
                            <td ><span t-field="line.debit"/> 
                                <t t-set= "total_debit" t-value="total_debit+line.debit"/>
                            </td>
                              
                            <td ><span t-field="line.credit"/>
                                <t t-set= "total_credit" t-value="total_credit+line.credit"/></td>
                             
                           </tr> 
                         
                       </t>
                    <tr>
                        
                        
                    </tr>
                     <tr>
                         <td colspan="3" style="font-size:12px;">
                             <p><strong>Rupees:</strong>&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                            <strong> <span t-esc="o.company_id.currency_id.amount_to_text(total_debit)"/></strong>
                            <b  style="font-size:14px;" class='pull-right'>Total: </b>
                                </p>
                         </td>
                         <th>
                            <t t-esc="total_debit"/> 
                         </th>
                         <th>
                            <t t-esc="total_credit"/> 
                         </th>
                      </tr>
                   
                </tbody>
                
            </table>
            <br/>
            <br/>
             <br/>
            <br/>
            

        </div>
              <t t-if="o.type=='entry'">
    <table class="table table-sm ">
       
                <tr>
                    <th style="max-width:100px; word-wrap:break-word;padding-left:5px;"></th>
                    <th style="border-top: 1px solid black;padding:5px;text-align:center;"> Prepared By</th>
                    <th style="max-width:100px; word-wrap:break-word;padding:5px;"> </th>
                    <th style="border-top: 1px solid black;padding:5px;text-align:center;">Checked By</th>
                    <th style="max-width:100px; word-wrap:break-word;padding-left:5px;"> </th>
                    <th style="border-top: 1px solid black;padding:5px;text-align:center;">Approved By</th>
                </tr>
         </table>
        </t>
    </t>
    </t>           
</template>
      <template id="bill_report">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="de_account_voucher_report.V6_bill_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
