<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="gatepass_report">
    <t t-call="web.html_container"> 
        <t t-foreach="docs" t-as="o">
        <t t-call="web.internal_layout">
                      
        <t t-set="o" t-value="o.with_context()"/>
        <div class="page" style="font-size:18px;">	
            <div class= "pull-left">
               <img style="height:100px;width:100px" t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" class="float-left" alt="Logo"/>
                <span t-esc='o.company_id.name' style="margin-top:5px;"/><br/>
                <span t-esc='o.company_id.street'/>
                <span t-esc='o.company_id.street2'/>
                <span t-esc='o.company_id.city'/>
                <span t-esc='o.company_id.country_id.name'/>
            </div>
            <div class="oe_structure"/>
            <div align="center"> 
                <br/>                  
                <h2><t t-if="docs.type=='in_invoice'">INWARD</t><t t-if="docs.type=='out_invoice'">OUTWARD</t> GATE PASS</h2>
            </div>
            <br/>
            <table class="table table-sm table-striped table-bordered">

                <tr style="height:30%">
                    <th  align="center">GATE PASS #</th>
                    <th  style="width:20%;" align="center"><t t-if="docs.type=='in_invoice'"> <span t-field="o.gatepass_sequence"/> </t> <t t-if="docs.type=='out_invoice'"> <span t-field="o.seq_number"/></t></th>
                    <th  align="center">DATED :</th>
                    <th  align="center"> <span t-field="o.invoice_date"/></th>
                </tr>
                <tr style="height:30%">
                    <th  align="center">PARTY NAME</th>
                    <th  align="center" colspan="4"><span t-field="o.partner_id.name"/></th>
                    
                </tr>
                <tr style="height:30%">
                    <th  align="center">ADDRESS</th>
                    <th  align="center" colspan="4"><span t-field="o.partner_id.street"/> <span t-field="o.partner_id.street2"/> <span t-field="o.partner_id.city"/></th>
                </tr>
                <tr style="height:30%">
                    <th  align="center">ST.REG.NO. :</th>
                    <th style="width:20%;" align="center"> <span t-field="o.partner_id.strg"/></th>
                    <th  align="center">N.T.N</th>
                    <th  align="center"> <span t-field="o.partner_id.ntn"/> </th>
                </tr>

            </table>
            <br/>
            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                       <th style="text-align:center;">SR.#</th>
                        <th style="text-align:center;">ITEM NAME</th>
                        <th style="text-align:center;">UNITS</th>
                        <th style="text-align:center;">QUANTITY</th>
                    </tr>
                    </thead>
                <tbody class="sale_tbody">
                    <t t-set='sr_no'  t-value='0'/>
                      <t t-foreach="o.invoice_line_ids.sorted(key=lambda x: x.name)" t-as="line">
                        <t t-set='sr_no'  t-value='sr_no + 1'/>
                        <tr>
                             <td align="center"><span t-esc="sr_no"/></td>
                            <td align="center"><span t-field="line.product_id.name"/></td>
                            <td align="center"><span t-field="line.product_uom_id.name"/></td>
                            <td align="center"><span t-field="line.quantity"/></td>
                           </tr> 
                       </t>
                   
                </tbody>
                
            </table>
            <br/>
            <p> This is a system generated gate pass. No signature/stamp is required.</p>
            <br/>
            

        </div>
    </t>
    </t>
        </t>
</template>
</odoo>
