<?xml version="1.0" encoding="utf-8"?>
<odoo> 
        <!--Display form view of wizard-->    
        <record id="view_account_je_wizard_form" model="ir.ui.view">
            <field name="name">account.je.wizard.form</field>
            <field name="model">account.je.wizard</field>
            <field name="arch" type="xml">
                <form string="Purchase voucher">
                    <group>
                      <group>
                           <field name="account_id"/>
                        </group>
                      <group>
                        <!-- <field name="start_date" />
                        <field name="end_date" /> -->
                      </group>
                        
                    </group>
                    <footer>
                        <button string='Print' name="get_voucher_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_account_je_action" model="ir.actions.act_window">
            <field name="name">Account Wise Purchase/Journal report</field>
            <field name="res_model">account.je.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_account_je_wizard_form"/>
        </record>
        
        
          <menuitem id="menu_account_je_report" 
                  action="open_account_je_action"
                  parent="account.menu_finance_reports"/>

</odoo>