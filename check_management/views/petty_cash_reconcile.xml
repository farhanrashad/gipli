<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record id="petty_cash_comp_rule" model="ir.rule">
        <field name="name">Petty Cash Reconcile multi-company</field>
        <field name="model_id" ref="model_petty_cash_reconcile"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

        <record id="petty_cash_view_form" model="ir.ui.view">
            <field name="name">Petty Cash Reconcile</field>
            <field name="model">petty.cash.reconcile</field>
            <field name="arch" type="xml">
                <form string="petty_cash_form">
                            <header>
                        <button name="posted" type="object" states="draft" string="Posted" class="oe_highlight" />
                        <button name="reset" type="object" states="canceled" string="Reset To Draft" class="oe_highlight"
                                groups="add_real_estate.group_resest_to_draft_inv"/>
                        <button name="cancel" type="object" states="posted" string="Cancel" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,canceled"/>
                    </header>
                    <sheet>

                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="ref" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="journal_id" domain="[('petty_cash','=',True)]" options='{"no_open": True, "no_create": True}'
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="move_id" attrs="{'readonly': [('state', '!=', 'draft')],'invisible':[('move_id','=',False)]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="converted_amount" force_save="1"/>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="account_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="partner_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="name"/>
                                         <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"
                                                                                    />
                                        <field name="amount" sum="Total"/>
                                       <field name="converted_amount" force_save="1"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="petty_cash_view_tree" model="ir.ui.view">
            <field name="name">Petty Cash Reconcile</field>
            <field name="model">petty.cash.reconcile</field>
            <field name="arch" type="xml">
                <tree string="petty_cash_tree">
                    <field name="date"/>
                    <field name="ref"/>
                    <field name="journal_id"/>
                    <field name="company_id"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="petty_cash_action" model="ir.actions.act_window">
            <field name="name">Petty Cash Reconcile</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">petty.cash.reconcile</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="petty_cash_action_menu" name="Petty Cash Reconcile" parent="account.menu_finance_entries_accounting_miscellaneous"
                  action="petty_cash_action" sequence="2"/>


    </data>
</odoo>
