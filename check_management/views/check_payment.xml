<odoo>
    <data>


        <record id="view_norm_payment_filter_check" model="ir.ui.view">
            <field name="name">view.norm.payment.filter</field>
            <field name="model">normal.payments</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <search string="Search Payments">
                    <field name="name"/>
                    <field name="partner_id" string="Partner"/>
                       <field name="reservation_id"/>
                    <field name="custoemr_payment_id"/>
                    <field name="property_id"/>
                    <field name="request_reservation_id"/>
                    <field name="amount" string="Check Amount"/>
                    <field name="payment_method"/>
                    <field name="receipt_number"/>
                    <field name="from_check_number"/>
                    <field name="from_check_date"/>
                    <field name="check_id"/>
                    <field name="check_state"/>
                    <field name="check_date"/>
                    <field name="check_number" string="Check Number/From Check Number"  filter_domain="['|',('check_number', 'ilike', self),('from_check_number', 'ilike', self)]"/>
                    <field name="pay_check_ids" string="Draft Check Number"  filter_domain="[('pay_check_ids.check_number', 'ilike', self)]"/>
                </search>
            </field>
        </record>


        <record id="normal_payments_check_form_view" model="ir.ui.view">
            <field name="name">realestate.noraml.payments.form</field>
            <field name="model">normal.payments</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" string="Confirm" class="oe_highlight" states="draft"
                                type="object"/>
                          <button name="action_cancel" string="Cancel" type="object"  class="oe_highlight"  states="draft"/>
                        <button name="action_reset_draft" string="Reset To Draft" type="object"  class="oe_highlight"  states="posted"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="button_journal_entries"
                                    string="Journal Items" type="object"
                                    attrs="{'invisible':[('state','=','draft')]}" icon="fa-bars"/>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Title"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="partner_type" attrs="{'readonly': ['|',('state', '!=', 'draft'),('partner_type','=','select_account')],'required':True}" />
                                      <field name="account_emp_type" attrs="{'invisible':[('partner_type','!=','employee')],'required':[('partner_type','=','employee')],'readonly':[('state','!=','draft')]}"/>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')],'required':[('partner_type','not in',['select_account','internal'])]}"/>
                           <field name="custom_account_id"
                         domain="[('deprecated', '=', False)]"
                         force_save="1" invisible="1"/>
                            <field name="payment_method" widget="selection" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="destination_journal_id" attrs="{'readonly': [('state', '!=', 'draft')],'required':[('partner_type','=','internal')],'invisible':[('partner_type','!=','internal')]}"/>
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount1" widget='monetary' options="{'currency_field': 'currency_id'}"
                                attrs="{'invisible' : ['|',('payment_subtype', '=', 'issue_check'),('payment_subtype', '=', 'rece_check')]
                                ,'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="amount" widget='monetary' options="{'currency_field': 'currency_id'}"
                                attrs="{'invisible' : [('payment_subtype', '!=', 'issue_check'),('payment_subtype', '!=', 'rece_check')]}"/>
                            </div>
                            <field name="accounting_allocation"  attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="account_id" attrs="{'readonly': [('state', '!=', 'draft')],'required':True,'invisible':[('partner_type','=','select_account')]}" />
                            <field name="select_account_id" attrs="{'readonly': [('state', '!=', 'draft')],'required':[('partner_type', '=', 'select_account'),('multi_accounts','=',False)],'invisible':[('partner_type','!=','select_account')]}" />
                             <field name="multi_accounts" attrs="{'invisible':[('partner_type','!=','select_account')]}"/>
                            <field name="payment_date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="analyitc_id" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                            <field name="send_rec_money" widget="radio" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="receipt_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="reservation_id" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('customer_id','=',partner_id)]"/>
                            <field name="request_reservation_id" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('customer_id','=',partner_id)]"/>
                            <field name="property_id"  readonly="1"/>
                            <field name="custoemr_payment_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="state_payment" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_method_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="bank_required" invisible="1"/>
                            <field name="user_id" invisible="1"/>
                            <field name="payment_subtype" invisible="1"/>
                            <field name="document_type_id" />
                            <field name="external_document_number" />
                            <field name="external_document_type" />
                            <field name="customer_type_id"  options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                              <field name="from_check_number" readonly="1"/>
                             <field name="from_check_date" readonly="1"/>
                            <field name="parent_payment_id"  readonly="1"/>
                            <field name="old_payment_id_id"  readonly="1" force_save="1"/>
                            <field name="old_payment_id_url"  readonly="1" widget="url"/>
                            <field name="cheque_books_ids" invisible="1"/>


                        </group>
                        <notebook>
                            <page string="Checks" attrs="{'invisible': [('payment_subtype', '!=', 'issue_check'),('payment_subtype', '!=', 'rece_check')]}" >
                                <field name="pay_check_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="cheque_books_id"
                                               domain="[('id','in',parent.cheque_books_ids)]"
                                               attrs="{'column_invisible': [('parent.payment_subtype', '!=', 'issue_check')]}"
                                               options='{"no_open": True, "no_create": True}'/>
                                        <field name="check_number" required="1"/>
                                        <field name="check_date"/>
                                        <field name="amount"/>
                                        <field name="bank" attrs="{'required':[('parent.bank_required','=',True)]}"/>
                                        <field name="dep_bank"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Multi Accounts" attrs="{'invisible':[('multi_accounts','=',False)]}">
                                 <field name="multi_account_ids" attrs="{'invisible':[('multi_accounts','=',False)]}">
                            <tree editable="bottom">
                                <field name="account_id"/>
                                <field name="analyitc_id" invisible="1"/>
                                <field name="partner_required_in_journal_entry" invisible="1"/>
                                <field name="partner_id" attrs="{'required':[('partner_required_in_journal_entry','=',True)]}"/>
                                <field name="label"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="normal_payments_check_tree_view" model="ir.ui.view">
            <field name="name">noraml.payments.tree</field>
            <field name="model">normal.payments</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="payment_date"/>
                    <field name="state"/>
                    <field name="create_uid"/>
                    <field name="amount"  sum="Total Amount"/>
                    <field name="amount1"  sum="Total Amount"/>
                    <field name="payment_method"/>
                      <field name="check_id"/>
                    <field name="check_state"/>
                    <field name="check_date"/>

                </tree>
            </field>
        </record>

        <record id="check_action_norm_pay_action" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">normal.payments</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_type','!=','select_account')]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        <record id="check_action_direct_expen_action" model="ir.actions.act_window">
            <field name="name">Direct Expenses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">normal.payments</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('partner_type','=','select_account')]</field>
            <field name="context">{'default_partner_type':'select_account'}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <record id="view_move_line_tax_audit_tree" model="ir.ui.view">
            <field name="name">account.move.line.tax.audit.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tax_audit_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="check_payment_id"/>
                    <field name="property_id"/>
                    <field name="reservation_id"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_payment_tree" model="ir.ui.view">
            <field name="name">account.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">0</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post']" position="replace">

                </xpath>
            </field>
        </record>



    </data>
</odoo>
