<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="english_name" placeholder="English Name"/>
                </xpath>
                <xpath expr="//field[@name='deprecated']" position="after">
                     <field name="account_1_id" options='{"no_open": True, "no_create": True}' />
                    <field name="account_2_id" options='{"no_open": True, "no_create": True}' />
                    <field name="account_3_id" options='{"no_open": True, "no_create": True}' />
                    <field name="dimensions_parent_id" options='{"no_open": True, "no_create": True}' />
                    <field name="dimensions_name_id" options='{"no_open": True, "no_create": True}' />
                </xpath>

            </field>
        </record>


    </data>
</odoo>
