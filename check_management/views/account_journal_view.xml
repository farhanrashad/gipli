<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_journal_form_payment_subtype_native" model="ir.ui.view">
            <field name="name">account.journal.form.payment.method</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='type']" position="after">
                        <field name="default_debit_account_id" />
                        <field name="payment_subtype" attrs="{'invisible':[('type','not in', ('bank'))]}"/>
                        <field name="bank_required" />
                        <field name="petty_cash" />
                    </xpath>
                    <xpath expr="//notebook" position="inside">
                        <page string="Check Cycle" >
                            <group string="Receivable Checks">
                                <field name="depoist"/>
                                <field name="send_to_lagel"/>
                                <field name="withdrawal"/>
                                <field name="receivable_withdrawal_journal_id" attrs="{'invisible':[('withdrawal','=', False)]}"/>
                            </group>
                            <group string="Payable Checks">
                                 <field name="deliver"/>
                                 <field name="payable_withdrawal"/>
                                 <field name="payable_withdrawal_journal_id" attrs="{'invisible':[('payable_withdrawal','=', False)]}"/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_form_account_move_for_native" model="ir.ui.view">
        <field name="name">account.move.view.form.iw.je.default.debit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute name="default_order">debit desc</attribute>
            </xpath>
            <xpath expr="//button[@id='account_invoice_payment_btn']" position="replace">
            </xpath>
             <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                 <field name="check_payment_id" />
                   <field name="from_check_number"/>
                 <field name="from_check_date"/>
            </xpath>
             <xpath expr="//field[@name='line_ids']//form//field[@name='name']" position="after">
                 <field name="check_payment_id" />
                   <field name="from_check_number"/>
                 <field name="from_check_date"/>
            </xpath>

            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//field[@name='external_document_type']" position="after">
                <field name="customer_type_id"  options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('state', '!=', 'draft')]}"
                force_save="1"
                />
                <field name="custom_unit_price"  attrs="{'readonly': [('state', '!=', 'draft')]}"
                force_save="1"
                />
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="%(check_management.register_payment_checks_action)d"
                        type="action" class="oe_highlight" attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                        context="{'default_receipt_number': name,'default_amount':amount_residual,'default_partner_id':partner_id}" string="Register Payment" data-hotkey="g" groups="account.group_account_invoice"/>

            </xpath>
        </field>
        </record>


             <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                   <xpath expr="//field[@name='name']" position="after">
                     <field name="check_payment_id" />
                   <field name="jebal_check_id"/>
                   <field name="from_check_number"/>
                 <field name="from_check_date"/>
                </xpath>


            </field>
        </record>

    </data>
</openerp>
