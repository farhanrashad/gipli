<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="register_payment_checks_view_form" model="ir.ui.view">
            <field name="name">Register Payment</field>
            <field name="model">check.register.payment</field>
            <field name="arch" type="xml">
                <form string="register_payment_checks_form">
                    <sheet>
                        <group>
                        <group>
                            <field name="payment_method" options='{"no_open": True, "no_create": True}' />
                            <field name="payment_date"/>
                            <field name="payment_subtype" />
                            <field name="state_payment"/>
                            <field name="receipt_number"/>
                            <field name="partner_id"/>
                        </group>
                            <group>
                                <field name="cheque_books_ids" invisible="1"/>
                                <field name="cheque_books_id"
                                       domain="[('id','in',cheque_books_ids)]"
                                       invisible="payment_subtype != 'issue_check'"/>
                                <field name="check_number" invisible="payment_subtype != 'issue_check' and payment_subtype != 'rece_check'"/>
                                <field name="check_date" invisible="payment_subtype != 'issue_check' and payment_subtype != 'rece_check'"/>
                                <field name="bank"  options='{"no_open": True, "no_create": True}' 
                                    invisible="payment_subtype != 'issue_check' and payment_subtype != 'rece_check'"/>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_payment" type="object" string="Create Payment" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

          <record id="register_payment_checks_action" model="ir.actions.act_window">
                    <field name="name">Register Payment</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">check.register.payment</field>
                    <field name="view_mode">form</field>
                    <field name="view_id" ref="register_payment_checks_view_form"/>
              <field name="target">new</field>
                </record>


    </data>
</odoo>

