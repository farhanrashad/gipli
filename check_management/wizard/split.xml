<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


                <record id="check_split_wiz_form" model="ir.ui.view">
            <field name="name">check.split.wiz.form</field>
            <field name="model">check.split.wiz</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="check_id" readonly="1"/>
                        <field name="amount_paid" readonly="1"/>
                        <field name="amount_due" readonly="1"/>
                        <field name="receipt_number" />
                        <field name="payment_date" />
                    </group>
                    <group>
                        <field name="duration"/>
                        <field name="journal_id"/>
                        <field name="bank"/>
                        <field name="cheque_no_start"/>
                        <field name="cheque_start_date"/>
                        <field name="no_of_cheques"/>
                        <field name="amount_by"/>
                        <field name="value"/>
                        <button name="create_lines" class="oe_highlight" type="object" string="Create Lines"/>

                    </group>
                     <field name="lines"  widget="one2many">
                        <tree editable="bottom">
                            <field name="payment_subtype" invisible="0" force_save="1"/>
                            <field name="payment_date" invisible="0" force_save="1"/>
                            <field name="journal_id" force_save="1"/>
                            <field name="check_number"  force_save="1" attrs="{'invisible': [('payment_subtype', '!=', 'issue_check'),('payment_subtype', '!=', 'rece_check')]}" />
                            <field name="check_date"  force_save="1" attrs="{'invisible': [('payment_subtype', '!=', 'issue_check'),('payment_subtype', '!=', 'rece_check')]}"/>
                            <field name="bank" force_save="1" attrs="{'invisible': [('payment_subtype', '!=', 'issue_check'),('payment_subtype', '!=', 'rece_check')]}" />
                            <field name="amount" force_save="1" />
                        </tree>
                    </field>

                    <footer>
                        <button name="split" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
                <record id="check_split_action" model="ir.actions.act_window">
                    <field name="name">Split</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">check.split.wiz</field>
                    <field name="view_mode">form</field>
                    <field name="view_id" ref="check_split_wiz_form"/>
                                <field name="target">new</field>
                </record>



    </data>
</odoo>