<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_subscription">
            <field name="name">Subscription Management</field>
            <field name="description">Helps you handle customer subscriptions.</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="group_subscription_user" model="res.groups">
            <field name="name">Subscription Officer</field>
            <field name="category_id" ref="de_subscription.module_category_subscription"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('base.group_erp_manager'))]"/>
        </record>
        
        <record id="group_subscription_manager" model="res.groups">
            <field name="name">Subscription Manager</field>
            <field name="category_id" ref="de_subscription.module_category_subscription"/>
            <field name="implied_ids" eval="[(4, ref('group_subscription_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
    
</odoo>