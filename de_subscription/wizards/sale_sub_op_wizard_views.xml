<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_operations_wizard_form_view" model="ir.ui.view">
        <field name="name">sale.sub.op.wizard.form</field>
        <field name="model">sale.sub.op.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                   <group>
                       <label for="op_type"/>
                        <div id="operation">
                            <field name="op_type" />
                        </div>
                       
                       <field name="subscription_id" invisible="1"/>
                   </group>
                    <group>
                    </group>
                        <label for="sub_close_reason_id" 
                            string="Renewal Reason"
                            invisible="op_type != 'renewal'"
                        />
                        <label for="sub_close_reason_id" 
                            string="Closed Reason"
                            invisible="op_type != 'close'"
                        />
                        <label for="sub_close_reason_id" 
                            string="Revised Reason"
                            invisible="op_type != 'revised'"
                        />
                        <div name="close_reason">
                            <span class="ml8">
                                <field name="sub_close_reason_id" 
                                    nolabel="1"
                                    required="op_type in ('renewal','close','revised')"
                                    invisible="op_type in ('upsell')"
                                />
                            </span>
                        </div>
                </group>
                <footer>
                    <button name="run_process" string="Process" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record> 
</odoo>
