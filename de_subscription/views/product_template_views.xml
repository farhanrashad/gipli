<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_recurring"/>
                    <label for="is_recurring"/>
                </span>
            </xpath>
        </field>
    </record>
    
    <record id="action_subscription_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
            <p>
                You must define a product for everything you sell or purchase,
                whether it's a storable product, a consumable or a service.
            </p>
        </field>
    </record>

    <menuitem name="Products" id="menu_subscription_products_products"
                    parent="menu_subscription_products" action="action_subscription_product"
                    groups="sales_team.group_sale_manager" sequence="2"/>
    
</odoo>