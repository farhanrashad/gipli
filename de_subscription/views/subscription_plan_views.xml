<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_recurring_plan_form_view" model="ir.ui.view">
        <field name="name">sale.recurring.plan.form.view</field>
        <field name="model">sale.recur.plan</field>
        <field name="arch" type="xml">
            <form string="Recurring Plan" class="oe_form_configuration">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Monthly" class="d-block"/>
                        </h1>
                    </div>
                    <field name="description" placeholder="Describe the recurring plan..."/>
                    <field name="company_id" groups="base.group_multi_company" required="1" nolabel="1" context="{'create': False}"/>
                    <h2>Recurring Details </h2>
                    <div class="row mt16 o_settings_container" id="recurring">
                        <setting help="Effortlessly plan subscription renewals with recurring intervals.">
                            <span class="text-muted">
                                       Effortlessly plan subscription renewals with recurring intervals.
                            </span>
                            <div class="oe_edit_only">
                                <strong>Recurring Every </strong>
                                <field name="recurring_interval" class="w-25"/>
                                <field name="recurring_interval_type" class="w-25"/>
                            </div>
                            <div class="oe_edit_only">
                                <strong>For </strong>
                                <field name="intervals_total" class="w-25"/>
                                <strong> Intervals</strong>
                            </div>
                        </setting>
                        <setting>
                            <field name="invoice_mail_template_id" context="{'default_model': 'sale.order'}" placeholder="No automatic mail"/>
                        </setting>
                    </div>
                    <h2>Self Service</h2>
                    <div class="row mt16 o_settings_container" id="recurring">
                        <setting help="Allow your customers to close their subscription.">
                            <field name="allow_portal_closing" />
                        </setting>
                        <setting help="Allow your customers to create upsell quotation.">
                            <field name="allow_portal_upsell" />
                            <span class="text-muted" invisible="not allow_portal_upsell">
Choose upselling products that are available for customers to generate additional sales through upselling orders.
                            </span>
                            <div class="oe_edit_only">
                                <field name="upsell_portal_product_ids" 
                                    widget="many2many_tags" 
                                    options="{'no_edit': True, 'no_create': True, }"
                                    class="w-50"
                                    invisible="not allow_portal_upsell"
                                />
                            </div>
                            
                        </setting>
                        <setting help="Allow your customers to renew their subscription.">
                            <field name="allow_portal_renewal" />
                            
                        </setting>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_recurring_plan_tree_view" model="ir.ui.view">
      <field name="name">sale.recurring.plan.tree.view</field>
      <field name="model">sale.recur.plan</field>
      <field name="arch" type="xml">
        <tree sample="1" >
          <field name="name" readonly="1" decoration-bf="1"/>
          <field name="recurring_interval_display" string="Recurring Every" readonly="1"/>
            <field name="recurring_period_display" string="Until For" readonly="1"/>
            <field name="company_id" groups="base.group_multi_company"/>
        </tree>
      </field>
    </record>
    
    <record id="action_recurring_plan" model="ir.actions.act_window">
        <field name="name">Recurring Plan</field>
        <field name="res_model">sale.recur.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new recurring plan
            </p><p>
                Create subscriptions plan
            </p><p>
                Subscription plans are used to configure the recurring, invoicing, and self-service behavior of subscriptions.
            </p>
        </field>
    </record>

    <menuitem name="Recurring Plan" id="menu_subscription_config_sub_plan"
                    parent="menu_subscription_config" action="action_recurring_plan"
                    groups="sales_team.group_sale_manager" sequence="2"/>
    
</odoo>