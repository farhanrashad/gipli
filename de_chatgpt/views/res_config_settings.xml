<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_inherit_openai" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <block id="emails" position="after">
                        <block title="OpenAI Credentials" name="openai_setting_container">
                            <setting id="openai_api_key" help="OpenAI api key crednetials">
                                <field name="openai_key" widget="password"/>
                            </setting>
                            <setting id="gpt_model" help="OpenAI GPT Model">
                                <field name="gpt_model_id" />
                            </setting>
                        </block>
                </block>
            </field>
        </record>
</odoo>