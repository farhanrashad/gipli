<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="purchase_budget_report_tree_view" model="ir.ui.view">
        <field name="name">purchase.budget.report.tree.view</field>
        <field name="model">purchase.budget.report</field>
        <field name="arch" type="xml">
            <tree string="Purchase Budget">
                <field name="budget"/>
                <field name="name"/>
                <field name="purchase_id"/>
                <field name="date_order" optional="show"/>
                <field name="partner_id" optional="hide"/>
                <field name="product_id" optional="hide"/>
                <field name="analytic_account_id" optional="hide"/>
                 <field name="date_from"/>
                 <field name="date_to"/>
                <field name="purchase_budget_state"/>
                <field name="planned_quantity"/>
                <field name="planned_price_unit"/>
                <field name="planned_amount"/>
                <field name="actual_quantity"/>
                <field name="average_price"/>
                <field name="actual_amount"/>
                <field name="remain_qty"/>
                <field name="remain_amount"/>
               
            </tree>
        </field>
    </record>
    

    <record id="purchase_budget_report_pivot_view" model="ir.ui.view">
         <field name="name">purchase.budget.report.pivot.view</field>
         <field name="model">purchase.budget.report</field>
         <field name="arch" type="xml">
             <pivot string="Purchase Budget" disable_linking="True" display_quantity="true" sample="1">
                 <field name="name" type="row"/>
                 <field name="planned_quantity" type="measure"/>
                 <field name="planned_price_unit" type="measure"/>
                 <field name="planned_amount" type="measure"/>
                 <field name="actual_quantity" type="measure"/>
                 <field name="average_price" type="measure"/>
                 <field name="actual_amount" type="measure"/>
                 <field name="remain_qty" type="measure"/>
                 <field name="remain_amount" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="purchase_budget_report_graph_view" model="ir.ui.view">
         <field name="name">purchase.budget.graph.view</field>
         <field name="model">purchase.budget.report</field>
         <field name="arch" type="xml">
            <graph string="Purchase Budget Statistics" type="line" sample="1" disable_linking="1">
                <field name="date_order" interval="day" type="col"/>
                <field name="remain_qty" type="measure"/>
                 <field name="remain_amount" type="measure"/>                
             </graph>
         </field>
    </record>

    <record id="purchase_budget_report_search_view" model="ir.ui.view">
        <field name="name">purchase.budget.report.search.view</field>
        <field name="model">purchase.budget.report</field>
        <field name="arch" type="xml">
            <search string="Purchase Budget Analysis">
                <filter name="filter_date_order" date="date_order"/>
                <separator/>
                <filter name="filter_date_from" date="date_from"/>
                <filter name="filter_date_to" date="date_to"/>
               <group expand="0" string="Extended Filters">
                    <field name="date_order"/>
                   
                </group>
                <group expand="1" string="Group By">
                    <filter string="Partner" name="partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" name="product" context="{'group_by':'product_id'}"/>
                    <filter string="Analytic Account" name="analytic_account" context="{'group_by':'analytic_account_id'}"/>
                    <filter string="Category" name="expense_category" context="{'group_by':'expense_category'}"/>
                    <separator/>
                    <filter string="State" name="purchase_budget_state" context="{'group_by':'purchase_budget_state'}"/>
                    <filter string="Budget Line" name="Name" context="{'group_by':'name'}"/>
                    <separator/>
                    <filter string="Order Date" name="order_month" context="{'group_by': 'date_order:month'}"/>
                    <separator/>
                    <filter string="From Date" name="budget_from_month" context="{'group_by': 'date_from:month'}"/>
                    <filter string="To Date" name="budget_to_month" context="{'group_by': 'date_to:month'}"/>

                    
                </group>
            </search>
        </field>
    </record>

    <record id="action_purchase_budget_report" model="ir.actions.act_window">
        <field name="name">Purchase Budget Analysis</field>
        <field name="res_model">purchase.budget.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="purchase_budget_report_search_view"/>
        <field name="context">{'create':False}</field> 
        <field name="help">This report performs budget analysis .</field>
    </record>
    
    <menuitem parent="menu_procurement_management_budget"
              id="menu_act_purchase_budget_report"
              name="Budget Analysis"
              action="action_purchase_budget_report" sequence="60"
              groups="purchase.group_purchase_manager"/>
    
</odoo>
