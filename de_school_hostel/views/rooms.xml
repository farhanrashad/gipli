<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_school_hostel_room_form" model="ir.ui.view">
            <field name="name">oe.school.hostel.room.form</field>
            <field name="model">oe.school.hostel.room</field>
            <field name="arch" type="xml">
                <form string="School Hostel Room">
                    <sheet>
                        <group>
                            <group>
                                <field name="hostel_id"/>
                                <field name="total_rooms"/>
                            </group>
                            <group>
                                <field name="product_id"/>
                                <field name="capacity"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_school_hostel_room_list" model="ir.ui.view">
            <field name="name">oe.school.hostel.room.list</field>
            <field name="model">oe.school.hostel.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="hostel_id"/>
                    <field name="capacity"/>
                    <field name="total_rooms"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_school_hostel_room" model="ir.actions.act_window">
            <field name="name">School Hostel Rooms</field>
            <field name="res_model">oe.school.hostel.room</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
