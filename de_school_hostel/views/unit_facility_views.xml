<odoo>

    <menuitem id="menu_unit_facility_config" name="Facilities"
        parent="menu_school_hostel_menu_config" sequence="2" />
    
    <record id="hostel_unit_facility_type_tree_view" model="ir.ui.view">
        <field name="name">hostel.unit.facility.type.tree.view</field>
        <field name="model">oe.hostel.unit.facility.type</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Facility Type" multi_edit="1" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="action_hostel_unit_facility_type" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="res_model">oe.hostel.unit.facility.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hostel_unit_facility_type_tree_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new unit facility type
          </p>
        </field>
    </record>
    
    <menuitem action="action_hostel_unit_facility_type" 
        id="menu_unit_facility_type_config"
        parent="menu_unit_facility_config" 
        sequence="1" 
    />

    
    <record id="hostel_unit_facility_tree_view" model="ir.ui.view">
        <field name="name">hostel.unit.facility.tree.view</field>
        <field name="model">oe.hostel.unit.facility</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Hostel Unit Facility" multi_edit="1" editable="bottom">
                <field name="active" column_invisible="1" />
                <field name="name"/>
                <field name="facility_type_id" options="{'no_create':True,'no_edit':True}" />
                <field name="use_unit" />
            </tree>
        </field>
    </record>

    <record id="hostel_unit_facility_search_view" model="ir.ui.view">
        <field name="name">hostel.unit.facility.search.view</field>
        <field name="model">oe.hostel.unit.facility</field>
        <field name="arch" type="xml">
            <search string="Facilities">
                <field name="name" string="facility"/>
                <field name="facility_type_id" string="Type"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Type" name="type" domain="[]" context="{'group_by': 'facility_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_hostel_unit_facility" model="ir.actions.act_window">
        <field name="name">Facility</field>
        <field name="res_model">oe.hostel.unit.facility</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hostel_unit_facility_tree_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new unit facility
          </p>
        </field>
    </record>
    
    <menuitem action="action_hostel_unit_facility" 
        id="menu_unit_facility_config_facility"
        parent="menu_unit_facility_config" sequence="2" />
</odoo>