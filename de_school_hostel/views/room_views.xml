<odoo>
  <data>


      <record id="hostel_room_form_view" model="ir.ui.view">
        <field name="name">hoste.room.form.view</field>
        <field name="model">oe.hostel.room</field>
        <field name="arch" type="xml">
            <form string="Stock Location">
                <field name="company_id" invisible="1"/>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <label for="name"/>
                    <h1><field name="name" placeholder="e.g. Room 1"/></h1>
                    <label for="room_id"/>
                    <h2><field name="room_id" placeholder="e.g. Building 1" options="{'no_create': True}"/></h2>

                    <group>
                        <group string="Additional Information" name="additional_info">
                            <field name="active" invisible="1"/>
                            <field name="room_type"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
      </record>
      <record id="hostel_room_search_view" model="ir.ui.view">
        <field name="name">hostel.room.search.view</field>
        <field name="model">oe.hostel.room</field>
        <field name="arch" type="xml">
            <search string="Rooms">
                <field name="complete_name" string="Rooms"/>
                <field name="room_type" string="Type"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="Building" name="buildings" domain="[('room_type','=','building')]"/>
                <filter string="Floor" name="floor" domain="[('room_type','=','floor')]"/>
                <filter string="Room" name="room" domain="[('room_type','=','room')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Type" name="type" domain="[]" context="{'group_by': 'room_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hostel_room_tree_view" model="ir.ui.view">
        <field name="name">hostel.room.tree.view</field>
        <field name="model">oe.hostel.room</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Hostel Room" decoration-warning="room_type=='building'" decoration-danger="room_type=='floor'" decoration-success="room_type=='room'" multi_edit="1">
                <field name="company_id" column_invisible="True"/>
                <field name="active" column_invisible="True"/>
                <field name="complete_name" string="Room"/>
                <field name="room_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
      
      <record id="action_hostel_room" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">oe.hostel.room</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hostel_room_tree_view"/>
        <field name="search_view_id" ref="hostel_room_search_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new room
          </p><p>
            Manage hostel transactions seamlessly by creating buildings, defining floors, and setting up rooms with detailed attributes such as type and capacity. 
          </p>
        </field>
    </record>

    <menuitem action="action_hostel_room" id="menu_school_hostel_room_config"
        parent="menu_school_hostel_menu_config" sequence="2" />
      
  </data>
</odoo>
