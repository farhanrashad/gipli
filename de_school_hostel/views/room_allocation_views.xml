<odoo>
    <data>
        <record model="ir.ui.view" id="view_hostel_room_allocate_form">
            <field name="name">oe.hostel.room.allocate.form</field>
            <field name="model">oe.hostel.room.allocate</field>
            <field name="arch" type="xml">
                <form string="Hostel Room Allocation">
                    <header>
                        <button name="action_reserve" id="action_reserve"
                            string="Reserve" class="btn-primary" type="object"
                            invisible="state != 'draft'"
                        />
                        <button name="action_confirm" id="action_confirm"
                            string="Confirm" type="object"
                            invisible="state != 'draft'"
                        />
                        
                        <button name="action_confirm" id="action_confirm"
                            string="Confirm" class="btn-primary" type="object"
                            invisible="state != 'reserve'"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,reserve,allocate"/>
                    </header>
                    <sheet>
                        <field name="domain_partner_ids" invisible="1" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" readonly="state != 'draft'"/>
                                <field name="building_id" readonly="state != 'draft'"/>
                                <field name="room_id" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="date_order" readonly="state != 'draft'"/>
                                <field name="date_start" readonly="state != 'draft'"/>
                                <field name="duration" string="Month(s)" readonly="state != 'draft'"/>
                                <field name="date_end" readonly="state != 'draft'"/>
                                <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                                <field colspan="2" name="note" nolabel="1" 
                                    placeholder="Terms and conditions..."
                                    readonly="state != 'draft'"/>
                                />
                            </group>
                            
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for Hostel Room Allocation -->
        <record model="ir.ui.view" id="view_hostel_room_allocate_tree">
            <field name="name">oe.hostel.room.allocate.tree</field>
            <field name="model">oe.hostel.room.allocate</field>
            <field name="arch" type="xml">
                <tree string="Hostel Room Allocation">
                    <field name="partner_id"/>
                    <field name="room_id"/>
                </tree>
            </field>
        </record>

        <!-- Action for Hostel Room Allocation -->
        <record model="ir.actions.act_window" id="action_hostel_room_allocate">
            <field name="name">Allocation</field>
            <field name="res_model">oe.hostel.room.allocate</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hostel_room_allocate_tree"/>
        </record>

        <!-- Menu Item for Hostel Room Allocation -->
        <menuitem id="menu_hostel_room_allocate" 
                  parent="menu_school_hostel_main" 
            action="action_hostel_room_allocate"
            sequence="1"
        />
    </data>
</odoo>
