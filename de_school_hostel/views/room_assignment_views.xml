<odoo>
    <data>
        <record model="ir.ui.view" id="view_hostel_room_assignment_form">
            <field name="name">oe.hostel.room.assignment.form</field>
            <field name="model">oe.hostel.room.assign</field>
            <field name="arch" type="xml">
                <form string="Hostel Room Assignment">
                    <header>
                        <button name="action_confirm" id="action_reserve"
                            string="Confirm" class="btn-primary" type="object"
                            invisible="state != 'draft'"
                        />
                        
                        <button name="action_validate" id="action_confirm"
                            string="Validate" class="btn-primary" type="object"
                            invisible="state != 'reserve'"
                        />

                        <button name="action_transfer" id="action_transfer"
                            string="Transfer" type="object"
                            invisible="state != 'assign'"
                        />

                        <button name="action_draft" id="action_draft"
                            string="Set to Draft" type="object"
                            invisible="state not in ('cancel')"
                        />
                        
                        <button name="action_cancel" id="action_cancel"
                            string="Cancel" type="object"
                            invisible="state in ('cancel')"
                        />
                        
                        <field name="state" widget="statusbar" statusbar_visible="draft,reserve,assign"/>
                    </header>
                    <sheet>
                        <field name="domain_partner_ids" invisible="1" />
                        <field name="product_id_tracking" invisible="1" />

                        <div class="oe_button_box" name="button_box">
                            <button type="object"
                                name="action_open_all_room_moves"
                                class="oe_stat_button" icon="fa-truck">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Dormitory Moves</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" 
                                    options="{'no_create':True, 'no_edit':True}"
                                    readonly="state != 'draft'"/>

                                
                                
                                <field name="location_id" 
                                    options="{'no_create':True, 'no_edit':True}"
                                    domain="[('is_hostel','=',True),('unit_usage','=','internal')]"
                                    readonly="state != 'draft'"
                                    required="1"
                                />
                                
                                <field name="product_id" 
                                    options="{'no_create':True, 'no_edit':True}"
                                    readonly="state != 'draft'"
                                />

                                <field name="lot_id" 
                                    options="{'no_create':True, 'no_edit':True}"
                                    invisible="product_id_tracking != 'serial'"
                                    required="product_id_tracking == 'serial'"
                                    readonly="state != 'draft'"
                                    groups="stock.group_production_lot"
                                />
                                
                                <field name="room_assign_id" 
                                    invisible="not room_assign_id"
                                    readonly="1"
                                />
                            </group>
                            <group>
                                <field name="date_order" readonly="state != 'draft'"/>
                                <field name="date_start" readonly="state != 'draft'"/>
                                <field name="duration" string="Month(s)" readonly="state != 'draft'"/>
                                <field name="date_end" readonly="state != 'draft'"/>
                                <field name="user_id" 
                                    options="{'no_create':True, 'no_edit':True}"
                                    readonly="state != 'draft'"
                                />
                                <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                                <field colspan="2" name="note" nolabel="1" 
                                    placeholder="Terms and conditions..."
                                    readonly="state != 'draft'"/>
                                />
                            </group>
                            
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Hostel Room Assignment -->
        <record model="ir.ui.view" id="view_hostel_room_assignment_tree">
            <field name="name">oe.hostel.room.assignment.tree</field>
            <field name="model">oe.hostel.room.assign</field>
            <field name="arch" type="xml">
                <tree string="Hostel Room Assignment">
                    <field name="name" />
                    <field name="partner_id"/>
                    <field name="date_order" />
                    <field name="user_id" />
                    <field name="location_id" />
                    <field name="product_id"/>
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    <field name="date_start" optional="hide"/>
                    <field name="date_end" optional="hide"/>
                    <field name="company_id" optional="hide" groups="base.group_multi_company"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="hostel_room_assign_search_view" model="ir.ui.view">
            <field name="name">hostel.room.assign.search.view</field>
            <field name="model">oe.hostel.room.assign</field>
            <field name="arch" type="xml">
                <search string="Room Assignment">
                    <field name="partner_id" />
                    <field name="location_id" />
                    <field name="product_id" />
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    
                    <filter string="My Requests" domain="[('user_id', '=', uid)]" name="my_requests_filter"/>
                    <separator/>
                
                    <filter string="New" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Reserved" name="filter_confirm" domain="[('state', '=', 'reserve')]"/>
                    <filter string="Assigned" name="filter_assign" domain="[('state', '=', 'assign')]"/>
                    <filter string="Close" name="filter_close" domain="[('state', '=', 'close')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Resident" name="group_student" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="State" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
             </field>
        </record>
        
        <!-- Action for Hostel Room Assignment -->
        <record model="ir.actions.act_window" id="action_hostel_room_assignment">
            <field name="name">Room Assignment</field>
            <field name="res_model">oe.hostel.room.assign</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hostel_room_assignment_tree"/>
            <field name="search_view_id" ref="hostel_room_assign_search_view"/>
            <field name="context">{
                'search_default_my_requests_filter': 1,
                'search_default_filter_confirm': 1,
                'search_default_filter_assign': 1
            }</field>
        </record>

        <!-- Menu Item for Hostel Room Assignment -->
        <menuitem id="menu_hostel_room_assignment" 
                  parent="menu_school_hostel_main" 
            action="action_hostel_room_assignment"
            sequence="1"
        />

        
    </data>
</odoo>
