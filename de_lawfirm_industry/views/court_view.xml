<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_court_form" model="ir.ui.view">
        <field name="name">court.form</field>
        <field name="model">court.court</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>

                    </group>
                    <notebook>
                        <page name="judge" string="Judge">
                            <field name="judge_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="contact"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="court_list_view">
        <field name="name">court.list</field>
        <field name="model">court.court</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
            </tree>
        </field>
    </record>
    <record id="action_court" model="ir.actions.act_window">
        <field name="name">Courts</field>
        <field name="res_model">court.court</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
