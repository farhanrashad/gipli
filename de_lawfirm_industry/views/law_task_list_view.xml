<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view -->
        <record model="ir.ui.view" id="law_task_list_form_view">
            <field name="name">law.task.list.form</field>
            <field name="model">law.task.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="task_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record model="ir.ui.view" id="law_task_list_tree_view">
            <field name="name">law.task.list.tree</field>
            <field name="model">law.task.list</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="task_ids"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="law_task_list_action">
            <field name="name">Law Task Lists</field>
            <field name="res_model">law.task.list</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
