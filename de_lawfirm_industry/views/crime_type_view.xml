<odoo>
    <data>
        <record id="view_crime_type_form" model="ir.ui.view">
            <field name="name">crime.type.form</field>
            <field name="model">crime.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_crime_type_list" model="ir.ui.view">
            <field name="name">crime.type.list</field>
            <field name="model">crime.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="action_crime_type_form" model="ir.actions.act_window">
            <field name="name">Crime Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crime.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new crime type.
                </p>
            </field>
        </record>
    </data>
</odoo>
