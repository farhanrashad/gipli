<odoo>
    <record id="view_law_task_form" model="ir.ui.view">
        <field name="name">law.task.form</field>
        <field name="model">law.task</field>
        <field name="arch" type="xml">
            <form string="Law Task">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="law_task_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_law_task_list" model="ir.ui.view">
        <field name="name">law.task.list</field>
        <field name="model">law.task</field>
        <field name="arch" type="xml">
            <tree string="Law Tasks">
                <field name="name"/>
                <field name="law_task_type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="action_law_task_list" model="ir.actions.act_window">
        <field name="name">Law Tasks</field>
        <field name="res_model">law.task</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
