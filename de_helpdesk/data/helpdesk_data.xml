<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Ticket Type -->
        <record model="project.ticket.type" id="project_ticket_type_question">
          <field name="name">Question</field>
        </record>
        <record model="project.ticket.type" id="project_ticket_type_issue">
          <field name="name">Issue</field>
        </record>

        <!-- Support Desk Project -->
        <record id="helpdesk_project_support_desk" model="project.project">
            <field name="name">Support Desk</field>
            <field name="label_tasks">Tickets</field>
            <field name="alias_name">support</field>
            <field name="is_sla" eval="True"/>
            <field name="is_helpdesk_team" eval="True"/>
        </record>

        <!-- Stages for Support Desk Project -->
        <record id="ticket_stage_new" model="project.task.type">
            <field name="name">New</field>
            <field name="sequence">0</field>
            <field name="project_ids" eval="[(4, ref('helpdesk_project_support_desk'))]"/>
        </record>
        <record id="ticket_stage_progress" model="project.task.type">
            <field name="name">In Progress</field>
            <field name="sequence">10</field>
            <field name="project_ids" eval="[(4, ref('helpdesk_project_support_desk'))]"/>
        </record>
        <record id="ticket_stage_hold" model="project.task.type">
            <field name="name">Hold</field>
            <field name="sequence">20</field>
            <field name="project_ids" eval="[(4, ref('helpdesk_project_support_desk'))]"/>
        </record>
        <record id="ticket_stage_solved" model="project.task.type">
            <field name="name">Solved</field>
            <field name="sequence">30</field>
            <field name="project_ids" eval="[(4, ref('helpdesk_project_support_desk'))]"/>
        </record>
        <record id="ticket_stage_cancel" model="project.task.type">
            <field name="name">Canceled</field>
            <field name="sequence">40</field>
            <field name="project_ids" eval="[(4, ref('helpdesk_project_support_desk'))]"/>
        </record>
        
    </data>
</odoo>