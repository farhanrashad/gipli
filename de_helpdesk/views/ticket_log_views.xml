<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Reopen Reason -->
        <record id="ticket_log_tree_view" model="ir.ui.view">
			<field name="name">project.ticket.log.tree.view</field>
			<field name="model">project.ticket.log</field>
			<field name="arch" type="xml">
				<tree string="Ticket History" create="0" edit="0" delete="0">
					<field name="old_stage_id"/>
                    <field name="new_stage_id" />
                    <field name="ticket_id" column_invisible="1" />
                    <field name="create_uid" />
                    <field name="create_date" />
				</tree>
			</field>
		</record>
        <record id="action_ticket_log" model="ir.actions.act_window">
            <field name="name">Ticket History</field>
            <field name="res_model">project.ticket.log</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>