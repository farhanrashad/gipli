<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="project_ticket_customer_ratings_form_view" model="ir.ui.view">
        <field name="name">project.ticket.customer.ratings.form.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <form string="Customer Ratings">
                <sheet>
                    <field name="company_id" invisible="1" />
                    <group>
                        <group>
                            <field name="user_ids" string="Assigned To"  widget="many2many_avatar_user"/>
                            <field name="project_id" string="Team" />
                            <field name="name" />
                            <field name="ticket_no" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="create_date" string="Created On" />
                            <field name="customer_rating" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Kanban view -->
    <record id="project_task_customer_ratings_kanban_view" model="ir.ui.view" >
        <field name="name">project.task.customer.ratings.kanban.view</field>
        <field name="model">project.task</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <kanban create="0" sample="1" quick_create="0" edit="0" delete="0">
                    <field name="customer_rating"/>
                    <field name="name"/>
                    <field name="rating_comment"/>
                    <field name="partner_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex align-items-center justify-content-center">
                                <div class="row oe_kanban_details">
                                    <div class="col-4 my-auto">
                                        <div class="o_field_widget o_readonly text-success fw-bolder"
                                            invisible="customer_rating != '5'"
                                             
                                        >
                                            <i class="fa fa-6x fa-smile-o" role="img" aria-label="Excellent" />
                                        </div>
                                        <div class="o_field_widget o_readonly text-primary fw-bolder"
                                            invisible="customer_rating != '4'"
                                        >
                                            <i class="fa fa-6x fa-smile-o"/>
                                        </div>
                                        <div class="o_field_widget o_readonly text-info fw-bolder"
                                            invisible="customer_rating != '3'"
                                        >
                                            <i class="fa fa-6x fa-smile-o"/>
                                        </div>
                                        <div class="o_field_widget o_readonly text-warning fw-bolder"
                                            invisible="customer_rating != '2'"
                                        >
                                            <i class="fa fa-6x fa-meh-o"/>
                                        </div>
                                        <div class="o_field_widget o_readonly text-danger fw-bolder"
                                            invisible="customer_rating != '1'"
                                        >
                                            <i class="fa fa-6x fa-frown-o"/>
                                        </div>
                                    </div>
                                    <div class="col-8 ps-1">
                                        <strong>
                                            <field name="user_ids" string="Assigned To" />
                                        </strong>
                                        <ul>
                                            <li t-if="record.partner_id.value">
                                                <span class="o_text_overflow">
                                                    by
                                                    <span t-att-title="record.partner_id.value">
                                                        <field name="partner_id"/>
                                                    </span>
                                                </span>
                                            </li>
                                            <li>
                                                <span class="o_text_overflow">
                                                    for
                                                    <a type="object" name="action_open_rated_object" t-att-title="record.name.raw_value">
                                                        <field name="name"/>
                                                    </a>
                                                </span>
                                            </li>
                                            <li>
                                                on <field name="create_date"/>
                                            </li>
                                            <li t-if="record.rating_comment.raw_value" class="o_text_overflow" t-att-title="record.rating_comment.raw_value">
                                                <field name="rating_comment"/>
                                            </li>
                                        </ul>
                                </div>
                                </div>
                            </div>
                        </t>
                    </templates>
            </kanban>
        </field>
    </record>

    <!-- Ticket RAting Views -->
    <record id="project_ticket_customer_rating_tree_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.customer.rating.tree.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree string="Customer Rating" >
                <field name="company_id" column_invisible="True"/>
                <field name="ticket_no" />
                 <field name="name" string="Name"/>
                <field name="project_id" string="Helpdesk Team" />
                <field name="user_ids" optional="show" widget="many2many_avatar_user"/>
                <field name="partner_id" domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]" optional="show" options="{'no_open': True}"/>
                <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1" column_invisible="context.get('default_project_id', False)"/>
                <field name="customer_rating" 
                    class="fw-bold" widget="badge"
                    decoration-success="customer_rating == '5'"
                    decoration-primary="customer_rating == '4'"
                    decoration-info="customer_rating == '3'"
                    decoration-warning="customer_rating == '2'"
                    decoration-danger="customer_rating == '1'"
                />
            </tree>
        </field>
    </record>

    <!-- Customer Ratings pivot View -->
    <record id="project_ticket_customer_ratings_pivot_view" model="ir.ui.view">
        <field name="name">project.ticket.customer.ratings.pivot.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <pivot string="Customer Ratings" sample="1">
                <field name="create_date" type="col"/>
                <field name="partner_id" />
                <field name="user_ids" />
                <field name="project_id" string="Team" />
                <field name="name"/>
                <field name="ticket_no"/>
                <field name="rating_score" type="measure"/>
                <field name="color" invisible="1"/>
            </pivot>
        </field>
    </record>

    <!-- graph view -->
    <record id="project_ticket_customer_ratings_graph_view" model="ir.ui.view">
        <field name="name">project.ticket.customer.rating.graph.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <graph string="Ratings" sample="1">
                <field name="create_date"/>
                <field name="rating_score" type="measure" string="Rating Value (/5)"/>
                <field name="partner_id" invisible="1"/>
            </graph>
        </field>
    </record>
    
    <!-- Search view -->
    <record id="project_ticket_customer_ratings_search_view" model="ir.ui.view">
        <field name="name">project.ticket.customer.ratings.search.view</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <search string="Customer Ratings Search">
                <field name="name"/>
                <field name="project_id" string="Helpdesk Team"/>
                <field name="user_ids"/>

                <filter string="My Ratings" domain="[('user_ids','in',uid)]" name="my_ratings"/>
                <separator/>
                <filter string="Excellent" domain="[('customer_rating','=','5')]" name="excellent_rating"/>
                <filter string="Good" domain="[('customer_rating','=','4')]" name="good_rating"/>
                <filter string="Average" domain="[('customer_rating','=','3')]" name="average_rating"/>
                <separator/>
                <filter string="Fair" domain="[('customer_rating','=','2')]" name="fair_rating"/>
                <filter string="Poor" domain="[('customer_rating','=','1')]" name="poor_rating"/>
                <separator/>
                <filter string="Today" name="rating_today" domain="[
                    ('create_date','&gt;', (context_today() - datetime.timedelta(days=0)).strftime('%%Y-%%m-%%d'))
                ]"  />
                <filter string="Last 7 Days" name="rating_last_7_days" domain="[
                    ('create_date','&gt;', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))
                ]"  />
                <filter string="Last 30 Days" name="rating_last_30_days" domain="[
                    ('create_date','&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))
                ]"  />
                <group expand="0" string="Group By">
                    <filter string="Assignees" name="user" context="{'group_by': 'user_ids'}"/>
                    <filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Team" name="helpdesk_team" context="{'group_by': 'project_id'}"/>
                    <filter string="Rating" name="customer_rating" context="{'group_by': 'customer_rating'}"/>
                    <filter string="Submitted On" name="create_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_ticket_customer_rating" model="ir.actions.act_window">
        <field name="name">Customer Ratings</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,pivot,graph,form</field>
        <field name="search_view_id" ref="project_ticket_customer_ratings_search_view"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_task_customer_ratings_kanban_view')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('project_ticket_customer_rating_tree_view')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('project_ticket_customer_ratings_pivot_view')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('project_ticket_customer_ratings_graph_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('project_ticket_customer_ratings_form_view')})]"
            />
        <field name="domain">[('customer_rating', 'in', ['1','2','3','4','5'])]</field>
        <field name="context">{
            'create': False,
            'edit': False,
            'delete': False,
            }
        </field>
    </record>
</odoo>