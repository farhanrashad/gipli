<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Ticket Type -->
        <record id="project_ticket_type_tree_view" model="ir.ui.view">
			<field name="name">project.ticket.type.tree.view</field>
			<field name="model">project.ticket.type</field>
			<field name="arch" type="xml">
				<tree string="Ticket Type" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>

        
        
        <record id="project_ticket_type_search_view" model="ir.ui.view">
            <field name="name">project.ticket.type.search.view</field>
            <field name="model">project.ticket.type</field>
            <field name="arch" type="xml">
                <search string="Ticket Type">
                    <field name="name" string="Ticket Type"/>
                </search>
             </field>
        </record>
        
        <record id="action_project_ticket_type" model="ir.actions.act_window">
            <field name="name">Ticket Types</field>
            <field name="res_model">project.ticket.type</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="project_ticket_type_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ticket type
                </p>
            </field>
        </record>
        
        <menuitem name="Types" id="menu_helpdesk_config_types"
            parent="menu_helpdesk_config" 
            action="action_project_ticket_type"
            sequence="30"
        />
        
    </data>
</odoo>