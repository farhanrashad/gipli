<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        
        <!-- SLA Status -->
        <record id="project_task_sla_line_tree_view" model="ir.ui.view">
			<field name="name">project.ticket.sla.line.tree.view</field>
			<field name="model">project.ticket.sla.line</field>
			<field name="arch" type="xml">
				<tree string="Sla Status" editable="bottom">
					<field name="ticket_id"/>
                    <field name="date_deadline" />
                    <field name="sla_time" />
                    <field name="sla_stage_id" />
                    <field name="status" decoration-danger="status == 'failed'" decoration-warning="status == 'ongoing'" decoration-success="status == 'reached'" class="fw-bold" widget="badge"/>
				</tree>
			</field>
		</record>

        <!-- pivot View -->
        <record id="project_ticket_sla_pivot_view" model="ir.ui.view">
            <field name="name">project.ticket.sla.pivot.view</field>
            <field name="model">project.ticket.sla.line</field>
            <field name="arch" type="xml">
                <pivot string="SLA Analysis" sample="1">
                    <field name="project_id" string="Team" type="row"/>
                    <field name="prj_sla_id" type="row"/>
                    
                    <field name="status" type="col"/>
                    <!--
                    <field name="ticket_close_hours" widget="float_time"/>
                    <field name="ticket_assignation_hours" widget="float_time"/>
                    <field name="sla_exceeded_hours" widget="float_time"/>
                    <field name="rating_avg" type="measure" invisible="1"/>
                    -->
                </pivot>
            </field>
        </record>
        <!-- Search view -->
        
    

        
        <record id="action_ticket_sla" model="ir.actions.act_window">
            <field name="name">SLA Status</field>
            <field name="res_model">project.ticket.sla.line</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>