<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        
        
        <!-- SLA Status -->
        <record id="project_task_sla_line_tree_view" model="ir.ui.view">
			<field name="name">project.task.sla.line.tree.view</field>
			<field name="model">project.task.sla.line</field>
			<field name="arch" type="xml">
				<tree string="Sla Status" editable="bottom">
					<field name="task_id"/>
                    <field name="date_deadline" />
                    <field name="sla_time" />
                    <field name="sla_stage_id" />
                    <field name="status" decoration-danger="status == 'failed'" decoration-warning="status == 'ongoing'" decoration-success="status == 'reached'" class="fw-bold" widget="badge"/>
				</tree>
			</field>
		</record>

        <!-- pivot View -->
        <record id="project_ticket_sla_pivot_view" model="ir.ui.view">
            <field name="name">project.ticket.sla.pivot.view</field>
            <field name="model">project.task.sla.line</field>
            <field name="arch" type="xml">
                <pivot string="SLA Analysis" sample="1">
                    <field name="project_id" string="Team" type="row"/>
                    <field name="prj_sla_id" type="row"/>
                    
                    <field name="status" type="col"/>
                    <!--
                    <field name="ticket_close_hours" widget="float_time"/>
                    <field name="ticket_assignation_hours" widget="float_time"/>
                    <field name="sla_exceeded_hours" widget="float_time"/>
                    <field name="rating_avg" type="measure" invisible="1"/>
                    -->
                </pivot>
            </field>
        </record>
        <!-- Search view -->
        
    

        
        <record id="action_ticket_sla_analysis" model="ir.actions.act_window">
            <field name="name">SLA Status</field>
            <field name="res_model">project.task.sla.line</field>
            <field name="view_mode">pivot,graph,cohort</field>
            <!--
            <field name="search_view_id" ref="project_ticket_sla_search_view"/>
            -->
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'pivot', 'view_id': ref('project_task_customer_ratings_kanban_view')}),
                (0, 0, {'view_mode': 'graph', 'view_id': ref('project_ticket_customer_rating_tree_view')}),
                    (0, 0, {'view_mode': 'cohort', 'view_id': ref('project_ticket_customer_ratings_form_view')})]"
                />
            <field name="domain">[('customer_rating', 'in', ['1','2','3','4','5'])]</field>
            <field name="context">{
                'create': False,
                'edit': False,
                'delete': False,
                }
            </field>
        </record>
    </data>
</odoo>