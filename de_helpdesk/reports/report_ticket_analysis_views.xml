<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_project_ticket_analysis_pivot" model="ir.ui.view">
        <field name="name">report.project.ticket.analysis.pivot</field>
        <field name="model">report.project.ticket.analysis</field>
        <field name="arch" type="xml">
        <pivot string="SLA Status Analysis" disable_linking="1" sample="1">
            <field name="team_id" type="row"/>
            <field name="open_ticket_hours" widget="float_time"/>
                <field name="close_ticket_hours" widget="float_time" type="measure"/>
                <field name="ticket_deadline_hours" widget="float_time"/>
                <field name="rating_avg" type="measure" invisible="1"/>
         </pivot>
     </field>
    </record>

    <record id="report_project_ticket_analysis_graph" model="ir.ui.view">
        <field name="name">report.project.ticket.analysis.graph</field>
        <field name="model">report.project.ticket.analysis</field>
        <field name="arch" type="xml">
            <graph string="Tickets Analysis" sample="1" disable_linking="1">
                <field name="team_id"/>
                <field name="stage_id"/>
                <field name="open_ticket_hours" widget="float_time"/>
                <field name="rating_avg" type="measure" invisible="1"/>
            </graph>
         </field>
    </record>
    
    <record id="report_project_ticket_sla_analysis_cohort" model="ir.ui.view">
        <field name="name">report.project.ticket.sla.analysis.cohort</field>
        <field name="model">report.project.ticket.analysis</field>
        <field name="arch" type="xml">
            <cohort string="Tickets Analysis" date_start="create_date" date_stop="date_closed" disable_linking="True" interval="day" sample="1" measure="open_ticket_hours">
                <field name="rating_avg" invisible="1"/>
            </cohort>
        </field>
    </record>
    
    <!-- Pivot view -->
    <record id="action_report_ticket_analysis" model="ir.actions.act_window">
        <field name="name">Ticket Analysis</field>
        <field name="res_model">report.project.ticket.analysis</field>
        <field name="view_mode">pivot,graph,cohort</field>
    </record>

    <menuitem name="Ticket Analysis" id="menu_helpdesk_reports_ticket_analysis"
            parent="menu_helpdesk_reports" 
            action="action_report_ticket_analysis"
            sequence="10"
        />
</odoo>