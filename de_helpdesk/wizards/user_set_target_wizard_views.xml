<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_helpdesk_user_target_wizard_form_view" model="ir.ui.view">
        <field name="name">project.helpdesk.user.target.wizard.form</field>
        <field name="model">project.helpdesk.user.target.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="target_ticket_closed" />
                        <field name="target_ticket_rating" />
                        <field name="target_ticket_sla_success_rate" />
                    </group>
                </group>
                <footer>
                    <button name="action_set_target" string="Set Target" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_set_target" model="ir.actions.act_window">
        <field name="name">Set Target</field>
        <field name="res_model">project.ticket.reopen.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
