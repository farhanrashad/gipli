<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ticket_reopen_wizard_form_view" model="ir.ui.view">
        <field name="name">project.ticket.reopen.wizard.form</field>
        <field name="model">project.ticket.reopen.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="ticket_ids" invisible="1"/>
                        <field name="project_ids" invisible="1"/>
                        <field name="stage_id" options="{'no_edit':True, 'no_create':True}" />
                    </group>
                   <field name="reopen_reason" placeholder="Please explain why you need to reopen the ticket." />
                </group>
                <footer>
                    <button name="action_reopen_tickets" string="Reopen" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tickets_reopen_menu" model="ir.actions.act_window">
        <field name="name">Reopen Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.ticket.reopen.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="de_helpdesk.model_project_task" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
