<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ticket_merge_wizard_form_view" model="ir.ui.view">
        <field name="name">project.ticket.merge.wizard.form</field>
        <field name="model">project.ticket.merge.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="ticket_ids" invisible="1"/>
                        <field name="project_id" 
                            options="{'no_create':True, 'no_edit':True}"
                            
                        />
                        
                        <field name="merge_method" widget="radio"/>
                        <field name="target_ticket_id"
                            options="{'no_create':True, 'no_edit':True}"
                            required="merge_method == 'ticket'"
                            invisible="merge_method != 'ticket'"
                        />
                        <field name="user_ids" 
                            options="{'no_create':True, 'no_edit':True}"
                            widget="many2many_tags"
                            required="merge_method == 'new'"
                        />
                    </group>
                </group>
                <footer>
                    <button name="action_merge_tickets" string="Merge" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
