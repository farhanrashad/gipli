<odoo>
  <data>
   
     <record id="account_move_form_reconcile_view" model="ir.ui.view">
            <field name="name">account.move.form.reconcile.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="invoice_date"]' position='after'>
                     <field name='reconcile_amount' invisible='1' />
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='account_id']" position="before">
                     <field name='allocation_move_line_id' optional="hide" />
                     <field name='is_reconciled' invisible='1' />
                     <field name='reconcile_amount' invisible='0' />
                </xpath>
                
            </field>
        </record> 
      
     


  </data>
</odoo>