<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_payment_allocation_wizard" model="ir.ui.view">
            <field name="name">Payment Allocation</field>
            <field name="model">payment.allocation.wizard</field>
            <field name="arch" type="xml">
                <form string="Payment Allocation">
                   <group>
                    <group>
                       <field name='partner_id' />
                       <field name='is_refund_reconciled' />
                       <field name='payment_id'  invisible='1'/>
                       <field name='payment_method_id'  invisible='1'/>
                        <field name='is_payment'  invisible='1'/>
                        <field name='is_invoice'  invisible='1'/>
                    </group>
                    <group>
                       <field name='account_id'  domain="[('internal_type','=','receivable'),('deprecated','=',False),('company_id','=',company_id)]" attrs="{'invisible': [('partner_type','!=','customer')], 'required': [('is_payment','=',True),('partner_type','=','customer')]}"  />
                        <field name='account_id'  domain="[('internal_type','=','payable'),('deprecated','=',False),('company_id','=',company_id)]" attrs="{'invisible': [('partner_type','!=','supplier')], 'required': [('is_payment','=',True),('partner_type','=','supplier')]}"  />

                        
                       <field name='company_id' readonly="1"/>
                        <field name="currency_id" readonly="1"/>
                        <field name='payment_amount' />
                        <field name='allocated_amount' />
                        <field name='diff_amount' />
                       <field name='journal_id'  invisible='1'/>
                       <field name='payment_type'  invisible='1'/>
                        <field name='partner_type'  invisible='1'/>
                        <field name='move_id'  invisible='1'/>
                    </group>
                    </group>
                    
                    <group string="Payments">                        
                    </group>
                    <field name='payment_line_ids' context="{'create':False}">
                        <tree editable='bottom'    >
                          <field name='payment_id' string="Number" readonly='1' force_save='1' />
                          <field name='payment_date' readonly='1'  force_save='1' />
                          <field name='payment_amount' string="Amount" readonly='1' force_save='1' />
                          <field name='company_currency_id'  readonly='1' invisible='1'  force_save='1' />  
                          <field name='unallocate_amount' string="Unallocated" sum="Unallocated Amount" readonly='1'  force_save='1' />
                          <field name='allocate' widget="boolean_toggle" force_save='1' nolabel="1"/>
                          <field name='allocate_amount' sum="Allocated Amount" string="Allocated" force_save='1' />
                            <field name='allocate_currency_amount' string="Allocated in Currency" sum="Allocated Amount" force_save='1' />
                          <field name='allocation_id'  invisible='1' />
                          <field name='currency_id'  invisible='1' readonly='1' force_save='1' />  
                        </tree>
                    </field> 
                    
                    <group string="Invoices">                        
                    </group>
                    <field name='invoice_move_ids'>
                        <tree editable='bottom'>
                          <field name='move_id' string="Number" readonly='1' force_save='1'/>
                          <field name='payment_date' string="Date" readonly='1' force_save='1' />
                          <field name='due_date'  readonly='1' force_save='1' />
                          <field name='invoice_amount' string="Amount" sum="Invoiced Amount" readonly='1' force_save='1' />
                            <field name='currency_id' invisible='0'  readonly='1'  force_save='1' /> 
                            <field name='allocation_currency_id' string="Allocation Currency" readonly='1'  invisible='1' force_save='1' />  
                          <field name='company_currency_id' string="Company Currency" readonly='1'  invisible='1' force_save='1' />  
                          <field name='unallocate_amount' string="Unallocated" sum="Unallocated Amount" readonly='1' force_save='1' />
                          <field name='allocate' nolabel="1" widget="boolean_toggle" force_save='1' />
                          <field name='allocate_amount' string="Allocated" sum="Allocated Amount" force_save='1' />
                            <field name='allocate_currency_amount' string="Allocated in Currency" sum="Allocated Amount" force_save='1' />
                            <field name='allocation_id'  invisible='1' />
                          
                        </tree>
                    </field>  
                    
                     <group string="Journal Entries">                        
                     </group>
                    <field name='journal_entries_ids'>
                        <tree editable='bottom'   >
                          <field name='move_id' string="Number" readonly='1' force_save='1'/>
                          <field name='payment_date' string="Date" readonly='1' force_save='1' />
                          <field name='due_date' readonly='1' force_save='1' />
                          <field name='invoice_amount' string="Amount" sum="Invoiced Amount" readonly='1' force_save='1' />
                            <field name='currency_id'  invisible='0'  readonly='1'  force_save='1' />  
                            <field name='allocation_currency_id'  invisible='1'  readonly='1'  force_save='1' />  
                          <field name='company_currency_id' readonly='1'  invisible='0' force_save='1' />  
                          <field name='unallocate_amount' string="Unallocated" sum="Unallocated Amount" readonly='1' force_save='1' />
                          <field name='allocate' nolabel="1" widget="boolean_toggle" force_save='1' />
                          <field name='allocate_amount' string="Allocated" sum="Allocated Amount" force_save='1' />
                            <field name='allocate_currency_amount' string="Allocated in Currency" sum="Allocated Amount" force_save='1' />
                          <field name='allocation_id'  invisible='1' />
                          
                        </tree>
                    </field>  
                    
                    <group string="Refunds">                        
                    </group>
                    <field name='invoice_refund_ids'>
                        <tree editable='bottom'   >
                          <field name='move_id' string="Number" readonly='1' force_save='1'/>
                          <field name='payment_date' string="Date" readonly='1' force_save='1' />
                          <field name='due_date' readonly='1' force_save='1' />
                          <field name='invoice_amount' string="Amount" sum="Invoiced Amount" readonly='1' force_save='1' />
                            <field name='currency_id'  invisible='0'  readonly='1'  force_save='1' />
                          <field name='company_currency_id' readonly='1'  invisible='1' force_save='1' /> 
                            <field name='allocation_currency_id'  invisible='1'  readonly='1'  force_save='1' />  
                          <field name='unallocate_amount' sum="Unallocated Amount" readonly='1' force_save='1' />
                          <field name='allocate' nolabel="1" widget="boolean_toggle" force_save='1' />
                          <field name='allocate_amount' string="Allocated" sum="Allocated Amount" force_save='1' />
                            <field name='allocate_currency_amount' string="Allocated in Currency" sum="Allocated Amount" force_save='1' />
                          <field name='allocation_id'  invisible='1' />
                            
                        </tree>
                    </field>    
                    
                    
                    <footer>
                        <button name="action_allocate_payment" id="create_allocation" string="Allocate" type="object" attrs="{'invisible': [('is_payment','=',False)]}"      class="btn-primary"/>
                        <button name="action_allocate_invoice_payment" id="create_invoice_allocation" string="Allocate" type="object" attrs="{'invisible': [('is_invoice','=',False)]}"      class="btn-primary"/>
                        
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_payment_allocation_wizard" model="ir.actions.act_window">
            <field name="name">Payment Allocation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.allocation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_view_types">list</field>
        </record>

</odoo>
