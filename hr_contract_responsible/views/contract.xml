<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_contract_view_form" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='hr_responsible_id']" position="replace">
                    <field name="hr_responsible_ids" widget="manymany_tags"/>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="employee_percentage"/>
                    <field name="medical_package"/>
                </xpath>

            </field>
        </record>

         <record id="ir_cron_job_family_alert" model="ir.cron">
            <field name="name">job_family_alert</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="state">code</field>
            <field name="code">model.job_family_alert()</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>


    </data>
</odoo>
