<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_medical_insurance_tree" model="ir.ui.view">
            <field name="name">Medical Insurance Contract</field>
            <field name="model">medical.insurance</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="provider_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>
        <record id="view_medical_insurance_form" model="ir.ui.view">
            <field name="name">Medical Insurance Contract</field>
            <field name="model">medical.insurance</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="provider_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <notebook>
                            <page string="add line">
                                <field name="insurance_ids">
                                    <tree editable="bottom">
                                        <field name="job_level_id"/>
                                        <field name="package_name_id"/>
                                        <field name="cover_age_price"/>
                                        <field name="employee_percentage"/>
                                        <field name="amount"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="total_contract_value"/>
                            <field name="details"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_medical_insurance" model="ir.actions.act_window">
            <field name="name">Medical Insurance Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medical.insurance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>


        <!-- This Menu Item Must have a parent -->

    </data>
</odoo>