<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_from_view_inherit_serial" model="ir.ui.view">
        <field name="name">product.product.form.view.inherit.serial</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="lot_automation" />
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Serial"
                        type="action" class="btn-primary" attrs="{'invisible':['|', ('type','!=','product'),('lot_automation','!=','product_serial')]}"/>
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Lot"
                        type="action" class="btn-primary" attrs="{'invisible':['|', ('type','!=','product'),('lot_automation','!=','product_lot')]}"/>
            </xpath>
        </field>
    </record>


    <record id="product_variant_easy_edit_view_inherit_serial" model="ir.ui.view">
        <field name="name">product.variant.inherit.serial</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="lot_automation" />
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Serial"
                        type="action" class="btn-primary" attrs="{'invisible':['|', ('type','!=','product'),('lot_automation','!=','product_serial')]}"/>
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Lot"
                        type="action" class="btn-primary" attrs="{'invisible':['|', ('type','!=','product'),('lot_automation','!=','product_lot')]}"/>
            </xpath>
        </field>
    </record>
    
    
</odoo>