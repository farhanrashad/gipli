<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_from_view_inherit_serial" model="ir.ui.view">
        <field name="name">product.category.form.view.inherit.serial</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <field name="sequence_ids" widget="many2many_tags" class="oe_inline" groups="base.group_erp_manager"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_template_from_view_inherit_serial" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.serial</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Serial"
                        type="action" class="btn-primary" attrs="{'invisible':['|',('type','!=','product'),('tracking','=','none')]}"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_product_from_view_inherit_serial" model="ir.ui.view">
        <field name="name">product.product.form.view.inherit.serial</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(de_lot_serial.action_stock_lot_generate_wizard)d" string="Generate Serial"
                        type="action" class="btn-primary" attrs="{'invisible':['|',('type','!=','product'),('tracking','=','none')]}"/>
            </xpath>
        </field>
    </record>
    
    
</odoo>