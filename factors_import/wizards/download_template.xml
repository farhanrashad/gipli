<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_import_export_factors" model="ir.module.category">
            <field name="name">Import &amp; Exports  Units Factors</field>
        </record>
        <record id="group_export_factors" model="res.groups">
            <field name="name">Export</field>
            <field name="category_id" ref="factors_import.module_import_export_factors"/>
        </record>
        <record id="group_import_factors" model="res.groups">
            <field name="name">Import</field>
            <field name="category_id" ref="factors_import.module_import_export_factors"/>
        </record>
        <record id="download_factors_form_view" model="ir.ui.view">
            <field name="name">units.download</field>
            <field name="model">units.download</field>
            <field name="arch" type="xml">
                <form string="Upload Attachment">
                    <style>
                        .o_column_sortable{
                        width: 173px;
                        max-width: 173px;
                        min-width: 173px;
                        }
                    </style>
                      <div>
                        <h2>Template Generated</h2>
                        <p>Here is the Excel Template:
                            <field name="file_data"  filename="filename" readonly="1" />
                        </p>
                    </div>
                    <footer>
                             <button name="export_data" string="Export Data" type="object"
                            class="btn-primary"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_download_factors_form_view" model="ir.actions.act_window">
            <field name="name">Generate Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">units.download</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="download_factors_form_view"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">form,list</field>
                        <field name="groups_id" eval="[(4, ref('factors_import.group_export_factors'))]"/>

        </record>






    </data>
</odoo>