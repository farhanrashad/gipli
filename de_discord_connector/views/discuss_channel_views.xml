<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="discuss_channel_view_form_inherit_discord" model="ir.ui.view">
        <field name="name">discuss.channel.view.form.inherit.discord</field>
        <field name="model">discuss.channel</field>
        <field name="inherit_id" ref="mail.discuss_channel_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Discord" name="discord" groups="de_discord_connector.group_discuss_discord">
                    <group>
                        <group>
                            <field name="discord_channel_id" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>