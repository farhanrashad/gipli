        <!-- Define the security group -->
        <record id="group_hr_employee_workspace" model="res.groups">
            <field name="name">Employee Workspace</field>
        </record>

        <!-- Assign access rights to the menu items -->
        <record model="ir.module.category" id="module_category_hr_employee_workspace">
            <field name="name">Employee Workspace</field>
        </record>
        
        <record id="menu_hr_workspace" model="ir.ui.menu">
            <field name="name">Workspace</field>
            <field name="groups_id" eval="[(6, 0, [ref('group_hr_employee_workspace')])]"/>
        </record>


        
    </data>
</odoo>
