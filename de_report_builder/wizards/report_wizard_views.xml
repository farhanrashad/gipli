<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="report_wizard_form_view" model="ir.ui.view">
            <field name="name">rc.report.wizard.form.view</field>
            <field name="model">rc.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Wizard">
                    <group>
                       
                    </group>
                    <group>
                    </group>
                    <footer>
                        <button name="generate_report" string="Print PDF" type="object" class="btn-primary" />

                        <button name="action_report_excel" type="object" default_focus="1"
                            string="Print Excel"
                            class="oe_highlight"
                            context="{'report_id':1}" icon="fa-download"/>
                        
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>
    
    <record id="action_test_report" model="ir.actions.act_window">
        <field name="name">Test Report</field>
        <field name="res_model">rc.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wizard_form_view"/>
        <field name="target">new</field>
    </record>      
        
        <menuitem action="action_test_report" name="Test Report" 
            id="menu_report_builder_reports_test_report" 
            parent="menu_report_builder_reports" 
            sequence="1"
        />

</odoo>
