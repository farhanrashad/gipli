<odoo>
    <data>
        <record model="ir.ui.view" id="report_config_form_view">
            <field name="name">report.config.form.view</field>
            <field name="model">report.config</field>
            <field name="arch" type="xml">
                <form string="Report Configuration">
                    <header>
                        <button name="button_publish" type="object" 
                            string="Publish" 
                            class="oe_highlight"
                            invisible="state != 'draft'"
                        />
                        <button name="button_unpublish" type="object" string="Unpublish" 
                            invisible="state != 'publish'"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="draft,publish" readonly="1"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description" placeholder="breif description about the report."/>
                        </group>
                        <group>
                            <group>
                                <field name="rc_header_model_id" />
                            </group>
                            <group>
                                <field name="report_parent_menu_id" />
                                <field name="report_menu_id" />
                                <field name="report_window_action_id" />
                                <field name="report_wizard_view_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Fields" name="report_header_fields">
                                <field name="rc_header_field_ids" >
                                    <tree string="Header Fields" editable="bottom">
                                        <field name="rc_header_model_id" column_invisible="1" />
                                        <field name="field_model" column_invisible="1" />
                                        <field name="field_type" column_invisible="1" />
                                        <field name="field_id" 
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                        <field name="link_field_id" 
                                            domain="[('model', '=', field_model)]" 
                                            required="field_type == 'many2one' and field_type not in ['many2one','many2many']"
                                            options = "{'no_create':True,'no_edit':True}"
                                            />
                                    </tree>
                                </field>
                            </page>

                            <page string="Line Model" name="report_line_models">
                                <field name="rc_line_model_ids" >
                                    <tree string="Line Models" editable="bottom">
                                        <field name="rc_header_model_relations" widget="many2many_tags" column_invisible="1"/>
                                        <field name="rc_line_model_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="action_config_report" model="ir.actions.act_window">
            <field name="name">Report Configuration</field>
            <field name="res_model">report.config</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No report found. Let's create one!
              </p>
            </field>
        </record>        
        
        <menuitem action="action_config_report" name="Report" 
            id="menu_report_builder_reports_report" 
            parent="menu_report_builder_reports" 
            sequence="1"
        />
        
    </data>
</odoo>
