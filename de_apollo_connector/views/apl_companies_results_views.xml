<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the tree view for Apollo Results -->
        <record id="view_companies_results_tree" model="ir.ui.view">
            <field name="name">Comapnies.results.tree</field>
            <field name="model">apl.companies.results</field>
            <field name="arch" type="xml">
                <tree string="Apollo Results" js_class="apl_search_button_in_tree">
                    <field name="apl_id"/>
                    <field name="name"/>
                    <field name="title"/>
                    <field name="email"/>
                </tree>
               
            </field>
        </record>

        <!-- Define the action for the Apollo Instance -->
        <record id="action_apl_companies_results" model="ir.actions.act_window">
            <field name="name">Search Results</field>
            <field name="res_model">apl.companies.results</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': false, 'edit': false}</field>

        </record>

        <!-- this menu will be temporarily and will remove -->
        <menuitem id="menu_companies_results_list" name="Comapnies Results" parent="menu_apollo_prospecting" action="action_apl_companies_results" sequence="20"/>
        
    </data>
</odoo>
