<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the tree view for Apollo Results -->
        <record id="view_people_results_tree" model="ir.ui.view">
            <field name="name">people.results.tree</field>
            <field name="model">apl.people.results</field>
            <field name="arch" type="xml">
                <tree string="Apollo Results" js_class="apl_search_button_in_tree">
                    <field name="apl_id" optional="hide"/>
                    <field name="first_name" optional="hide"/>
                    <field name="last_name" optional="hide"/>
                    <field name="name"/>
                    <field name="title"/>
                    <field name="email"/>
                    <field name="email_status"/>
                    <field name="linkedin_url" widget="url" options="{'class': 'fa fa-linkedin', 'target': '_blank'}" invisible="1"/>
                    <button name="open_linkedin_profile" type="object" icon="fa-linkedin" />
                    <button name="open_twitter_profile" type="object" icon="fa-twitter" />
                    <button name="open_facebook_profile" type="object" icon="fa-facebook" />
                    <button name="open_github_profile" type="object" icon="fa-github" />


                </tree>
               
            </field>
        </record>

        <!-- Define the action for the Apollo Instance -->
        <record id="action_apl_people_results" model="ir.actions.act_window">
            <field name="name">Search Results</field>
            <field name="res_model">apl.people.results</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': false, 'edit': false}</field>

        </record>

        <!-- this menu will be temporarily and will remove -->
        <menuitem id="menu_people_results_list" name="People Results" parent="menu_apollo_prospecting" action="action_apl_people_results" sequence="20"/>

    </data>
</odoo>
