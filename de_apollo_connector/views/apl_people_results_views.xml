<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the tree view for Apollo Results -->
        <record id="view_apollo_results_tree" model="ir.ui.view">
            <field name="name">apollo.results.tree</field>
            <field name="model">apl.people.results</field>
            <field name="arch" type="xml">
                <tree string="Apollo Results" js_class="apl_people_search_button_in_tree">
                    <field name="apl_id"/>
                    <field name="name"/>
                    <field name="title"/>
                    <field name="email"/>
                </tree>
               
            </field>
        </record>

        <!-- Define the action for the Apollo Instance -->
        <record id="action_apl_people_results" model="ir.actions.act_window">
            <field name="name">Apollo Results</field>
            <field name="res_model">apl.people.results</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- this menu will be temporarily and will remove -->
        <menuitem id="menu_apollo_results_list" name="Apollo Results" parent="menu_apollo_prospecting" action="action_apl_people_results" sequence="20"/>

    </data>
</odoo>
