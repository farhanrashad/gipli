<odoo>
    <record id="action_apollo_instance_from_settings" model="ir.actions.act_window">
        <field name="name">Apollo Instances</field>
        <field name="res_model">apl.instance</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!--  Add Apollo Settings view  -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sequence.opportunity.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='crm']" position="inside">
                <block id="apollo" title="Apollo">
                    <setting id="auto_contacts" title="Enable Automatic Contact Synchronization with Apollo" groups="sales_team.group_sale_manager" help="Enable Automatic Contact Synchronization with Apollo.">
                        <field name="apl_auto_contacts" />
                    </setting>
                    <setting id="auto_contacts" title="Default Odoo Instance for Scheduling Cron Jobs to Update Contacts and Leads in Apollo" groups="sales_team.group_sale_manager" help="Default Odoo Instance for Scheduling Cron Jobs to Update Contacts and Leads in Apollo.">
                        <field name="apl_instance_id" options="{'no_create': True, 'no_open': True}" class="d-inline"/>
                        <button name="%(de_apollo_connector.action_apollo_instance_from_settings)d" type="action" string="Apollo Instance" class="btn-primary"/>
                    </setting>
                    <setting id="auto_contacts" title="Periodically update leads at Apollo" groups="sales_team.group_sale_manager" help="Periodically update leads at Apollo.">
                        <field name="apl_auto_leads"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>