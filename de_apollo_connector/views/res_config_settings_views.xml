<odoo>
    <record id="action_apollo_instance_from_settings" model="ir.actions.act_window">
        <field name="name">Apollo Instances</field>
        <field name="res_model">apl.instance</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!--  Add Apollo Settings view  -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sequence.opportunity.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='generate_lead_setting_container']" position="after">
                <h2>Apollo</h2>
                <div class="row mt16 o_settings_container" name="generate_lead_setting_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="apl_auto_contacts"/>
                        </div>
                        <div class="o_setting_right_pane" id="default_apl_contacts_schedule">
                            <label for="apl_auto_contacts"/>
                            <a href="https://www.odoo.com/documentation/16.0/applications/sales/crm/track_leads/lead_scoring.html#assign-leads"
                                    title="Assign Documentation" class="o_doc_link" target="_blank">
                            </a>
                            <div class="text-muted">
                                <span>Periodically update contacts at Apollo</span><br />
                                <span >
                                   This feature, when enabled, facilitates automatic and regular updates of contact information within Apollo.
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane" id="default_apl_contacts_schedule">
                            <b>Configure Apollo Instance</b>
                                <div class="text-muted">
                                    Define the Default Odoo Instance for Scheduling Cron Jobs to Update Contacts and Leads in Apollo. 
                                        <field name="apl_instance_id" options="{'no_create': True, 'no_open': True}" class="d-inline"/>
                                 </div>
                                <div class="mt16" groups="sales_team.group_sale_manager">
                                    <button name="%(de_apollo_connector.action_apollo_instance_from_settings)d" type="action" string="Apollo Instance" class="btn-primary"/>
                                </div>
                        </div>
                    </div>
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="apl_auto_leads"/>
                        </div>
                        <div class="o_setting_right_pane" id="default_apl_contacts_schedule">
                            <label for="apl_auto_leads"/>
                            <a href="https://www.odoo.com/documentation/16.0/applications/sales/crm/track_leads/lead_scoring.html#assign-leads"
                                    title="Assign Documentation" class="o_doc_link" target="_blank">
                            </a>
                            <div class="text-muted">
                                <span>Periodically update leads at Apollo</span><br />
                                <span >
                                   This feature, when enabled, facilitates automatic and regular updates of leads within Apollo.
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>