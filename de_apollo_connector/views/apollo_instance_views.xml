<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the CRM Configuration menu -->
        <menuitem id="menu_crm_config_apollo" name="Apollo" parent="crm.crm_menu_config" sequence="50"/>


        <!-- Define the form view for Apollo Instance -->
        <record id="view_apollo_instance_form" model="ir.ui.view">
            <field name="name">apollo.instance.form</field>
            <field name="model">apl.instance</field>
            <field name="arch" type="xml">
                <form string="Apollo Instance">
                    <header>
                        <!-- Add a button in the header -->
                        <button name="connection_test" type="object" string="Test Connection" class="btn-primary" states="draft"/>
                        <button name="button_draft" type="object" string="Set to Draft" states="verified,active"/>
                        <button name="button_confirm" type="object" string="Confirm" class="btn-primary" states="verified"/>


                        <field name="state" widget="statusbar" statusbar_visible="draft,verified,active" force_save="1"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Trip to NY" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="url"/>
                                <field name="api_key" widget="password" string="API Key"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Settings" name="settings">
                                <group>
                                    <group name="group_import_operations" string="Import Operations" col="1" class="row mt16 o_settings_container" groups="sales_team.group_sale_manager">
                                        <div>
                                            <!-- Import Contacts -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_import_contacts" context="{'project_id':id}" icon="fa-arrow-right" type="object" string="Import Contacts" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="apl_date_import_contact" class="fw-bold o_form_label" string="The last contacts were imported on "/>
                                                    <b><field name="apl_date_import_contact" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly import contacts and accounts from Apollo into Odoo contacts.
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- import Opportunities -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_import_leads" icon="fa-arrow-right" type="object" string="Import Leads" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="apl_date_import_contact" class="fw-bold o_form_label" string="The last contacts were imported on "/>
                                                    <b><field name="apl_date_import_contact" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly import leads or opportunities from Apollo into Odoo leads.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                    <group name="group_export_operations" string="Export Operations" col="1" class="row mt16 o_settings_container" groups="sales_team.group_sale_manager">
                                        <div>
                                            <!-- Export Contacts -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_import_contacts" icon="fa-arrow-right" type="object" string="Export Contacts" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="apl_date_import_contact" class="fw-bold o_form_label" string="The last contacts were imported on "/>
                                                    <b><field name="apl_date_import_contact" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly export individual and company contacts into Apollo contacts and accounts.
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Export Opportunities -->
                                            <div class="o_setting_box" id="instance_imports" groups="sales_team.group_sale_manager">
                                                <div class="o_setting_left_pane">
                                                </div>
                                                <div class="o_setting_right_pane">
                                                    <div class="content-group">
                                                        <div class="mt8">
                                                            <button name="button_import_contacts" icon="fa-arrow-right" type="object" string="Export Leads" class="btn-primary"/>
                                                        </div>
                                                    </div>
                                                    <label for="apl_date_import_contact" class="fw-bold o_form_label" string="The last contacts were imported on "/>
                                                    <b><field name="apl_date_import_contact" nolabel="1"/></b>
                                                    <div class="text-muted">
                                                        Seamlessly export leads or opportunities into Apollo opportunities.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </group>
                                </group>

                                        <!-- end -->
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the tree view for Apollo Instance -->
        <record id="view_apollo_instance_tree" model="ir.ui.view">
            <field name="name">apollo.instance.tree</field>
            <field name="model">apl.instance</field>
            <field name="arch" type="xml">
                <tree string="Apollo Instances">
                    <field name="name"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>

        <!-- Define the action for the Apollo Instance -->
        <record id="action_apollo_instance" model="ir.actions.act_window">
            <field name="name">Apollo Instances</field>
            <field name="res_model">apl.instance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Create a menu item for Apollo Instance -->
        <menuitem id="menu_apollo_instance_list" name="Instances" parent="menu_crm_config_apollo" action="action_apollo_instance" sequence="20"/>

    </data>
</odoo>
