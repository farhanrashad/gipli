<odoo>
    <data>
        
        <record id="res_partner_category_view_tree_inherit" model="ir.ui.view">
            <field name="name">res.partner.category.view.tree.inherit</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="apl_id" optional="hide"/>
                    <field name="apl_date_update" optional="hide"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>