<odoo>
    <data>
        <!-- Define a form view for APLPeopleSearchWizard -->
        <record id="view_apl_people_search_wizard_form" model="ir.ui.view">
            <field name="name">apl.people.search.wizard.form</field>
            <field name="model">apl.people.search.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                        <span class="o_form_label" >Instance</span>
                            <h1 class="d-flex">
                                <field name="apl_instance_id" options="{'no_create': True, 'no_open': True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="job_titles" placeholder="e.g Sales Director, Project Manager"/>
                                <field name="org_domains" placeholder="e.g google.com,facebook.com"/>
                                
                            </group>
                            <group>
                               
                            </group>
                        </group>
                        <group string="Pages">
                            <div class="o_td_label">
                                <label for="page_start" />
                            </div>
                            <div name="page_start">
                                <field name="page_start" nolabel="1" style="width: 8rem;" />
                                <span class="ml8" > <strong> To Page: </strong><field name="page_last" nolabel="1" style="width: 8rem;" /></span>
                            </div>
                            <field name="result_append" />
                        </group>
                        <footer>
                            <button name="action_search" string="Search" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define an action to open the form view -->
        <record id="action_apl_people_search_wizard" model="ir.actions.act_window">
            <field name="name">Search People</field>
            <field name="res_model">apl.people.search.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_apl_people_search_wizard_form"/>
        </record>

        <!-- Create a menu item to access the wizard -->
        <menuitem id="menu_apl_people_search_wizard" name="Search People" parent="menu_apollo_prospecting" action="action_apl_people_search_wizard"/>
    </data>
</odoo>
