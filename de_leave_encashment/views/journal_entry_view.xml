<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="journal_entry_list_view" model="ir.ui.view">
        <field name="name">journal.entry.list</field>
        <field name="model">journal.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="number"/>
                <field name="due_date"/>
                <field name="next_activity"/>
                <field name="tax_excluded_total"/>
                <field name="total"/>
                <field name="payment_status"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="journal_entry_form_view">
        <field name="name">journal.entry.form</field>
        <field name="model">journal.entry</field>
        <field name="arch" type="xml">
            <form string="Journal Entry">
                <header>
                    <button name="action_paid" string="Paid" type="object" class="btn-primary"
                            attrs="{'invisible': [('app', '=', True)]}"/>
                    <button name="action_unpaid" string="Un Paid" type="object" class="btn-primary"
                            attrs="{'invisible': [('app', '=', True)]}"/>
                    <field name="payment_status" widget="statusbar"
                           statusbar_visible="paid,unpaid"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="number"/>
                            <field name="app" invisible="1"/>
                            <field name="tax_excluded_total"/>
                            <field name="next_activity"/>
                        </group>
                        <group>
                            <field name="due_date"/>
                            <field name="total"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <odoo>
        <record id="action_journal_entry" model="ir.actions.act_window">
            <field name="name">Journal Entries</field>
            <field name="res_model">journal.entry</field>
            <field name="view_mode">tree,form</field>
        </record>
    </odoo>
    <menuitem
            id="menu_journal_entry"
            name="Journal Entry"
            action="action_journal_entry"
            parent="hr.menu_hr_employee_payroll"
            sequence="40"/>
</odoo>
