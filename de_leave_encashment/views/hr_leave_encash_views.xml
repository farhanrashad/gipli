<odoo>
    <data>
        <!-- Leave Encashment Form View -->
        <record id="view_leave_encashment_form" model="ir.ui.view">
            <field name="name">hr.leave.encash</field>
            <field name="model">hr.leave.encash</field>
            <field name="arch" type="xml">
                <form string="Leave Encashment">
                    <header>
                        <button name="action_draft" string="Draft" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_paid" string="Paid" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'approve')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate,post,done"/>
                    </header>
                    <sheet>
                         <field name="company_id" invisible="1"/>
                        <field name="leave_type_request_unit" invisible="1"/>
                        <field name="validation_type" invisible="1"/>
                        <div name="button_box" class="oe_button_box">
                            <button name="action_journal_entry" type="object"
                                    class="oe_stat_button" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="journal_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Journal Entry
                                    </span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <span class="o_form_label" >Request for Leave Encashment </span>
                            <h1 class="d-flex">
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" context="{'default_company_id': company_id}" widget="many2one_avatar_employee"/>
                                <field name="holiday_status_id" force_save="1" domain="['|', ('requires_allocation', '=', 'no'), '&amp;', ('has_valid_allocation', '=', True), '&amp;', ('virtual_remaining_leaves', '&gt;', 0), ('max_leaves', '&gt;', '0')]" context="{'employee_id':employee_id}" options="{'no_create': True, 'no_open': True, 'request_type':'leave'}"/>

                                <field name="date"/>
                                <field name="currency_id"/>
                                <field name="number_of_days" invisible="1"/>
                                <div class="o_td_label">
                                    <label for="number_of_days_display" string="Duration" attrs="{'readonly': [('allocation_type', '=', 'accrual'), ('state', 'not in', ('draft', 'confirm'))]}"/>
                                </div>
                                <div name="duration_display">
                                    <field name="number_of_days_display" nolabel="1" style="width: 5rem;" attrs="{'readonly': ['|', '|', ('type_request_unit', '=', 'hour'), ('state', 'not in', ('draft', 'confirm')), ('allocation_type', '=', 'accrual')], 'invisible': [('type_request_unit', '=', 'hour')]}"/>
                                    <field name="number_of_hours_display" nolabel="1" style="width: 5rem;" attrs="{'readonly': ['|', '|', ('type_request_unit', '!=', 'hour'), ('state', 'not in', ('draft', 'confirm')), ('allocation_type', '=', 'accrual')], 'invisible': [('type_request_unit', '!=', 'hour')]}"/>
                                    <span class="ml8" attrs="{'invisible': [('type_request_unit', '=', 'hour')]}">Days</span>
                                    <span class="ml8" attrs="{'invisible': [('type_request_unit', '!=', 'hour')]}">Hours</span>
                                </div>
                                
                                <field name="amount_total"/>
                                
                                <field name="department_id" context="{'default_company_id': company_id}"/>
                                <field name="job_id" context="{'default_company_id': company_id}"/>
                                <field name="contract_id" context="{'default_company_id': company_id}"/>
                                
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="accounting_date" groups="account.group_account_invoice,account.group_account_readonly" />
                                <field name="journal_id" groups="account.group_account_invoice,account.group_account_readonly" options="{'no_open': True, 'no_create': True}" context="{'default_company_id': company_id}"/>
                                <field name="address_id" invisible="1" context="{'default_company_id': company_id}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_leave_encashment_list">
            <field name="name">Leave Enchasement List</field>
            <field name="model">hr.leave.encash</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="contract_id"/>
                    <field name="date"/>
                    <field name="amount_total"/>
                </tree>
            </field>
        </record>

        <!-- Leave Encashment Action -->
        <record id="action_leave_encashment" model="ir.actions.act_window">
            <field name="name">Leave Enchasement</field>
            <field name="res_model">hr.leave.encash</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_hr_leave_encashment"
                name="My Leave Encash Request"
                action="action_leave_encashment"
                parent="hr_holidays.menu_hr_holidays_my_leaves"
                sequence="20"/>

    </data>
</odoo>
