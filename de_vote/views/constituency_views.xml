<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="action_constituency_type_tree_view" model="ir.ui.view">
			<field name="name">action.constituency.type.tree.view</field>
			<field name="model">vote.const.type</field>
			<field name="arch" type="xml">
				<tree string="Constituency Type" editable="bottom" edit="1">
                    <field name="name"/>
                    <field name="code" />
				</tree>
			</field>
		</record>
        
        <record id="action_constituency_type" model="ir.actions.act_window">
            <field name="name">Constituency Type</field>
            <field name="res_model">vote.const.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Constituency
                </p>
            </field>
        </record>
        
        <menuitem name="Const Type" id="menu_main_config_constituency_type"
                    parent="menu_main_config" action="action_constituency_type"
                    groups="group_vote_manager" sequence="1"/>
        
        <!-- constituency -->
        <record id="vote_constituency_tree_view" model="ir.ui.view">
			<field name="name">vote.constituency.tree.view</field>
			<field name="model">vote.const</field>
			<field name="arch" type="xml">
				<tree string="Constituency">
					<field name="display_name"/>
                    <field name="company_id" />
                    <field name="parent_id"/>
                    <field name="const_type_id"/>
				</tree>
			</field>
		</record>
		<record id="vote_constituency_form_view" model="ir.ui.view">
			<field name="name">vote.constituency.form.view</field>
			<field name="model">vote.const</field>
			<field name="arch" type="xml">
				<form string="Constituency">
					<sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. NA 1"/></h1>
                            <label for="parent_id"/>
                            <h2><field name="parent_id" /></h2>
                        </div>
                        <group >
                            <group>
                                <field name="code" />
                                <field name="const_type_id" options="{'no_create': True,'no_open': True}" />
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="company_id" options="{'no_create': True}" />
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
        
        <record id="view_constituency_filter" model="ir.ui.view">
            <field name="name">constituency.search</field>
            <field name="model">vote.const</field>
            <field name="arch" type="xml">
                <search string="Constituency">
                    <field name="name" string="Constituency"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
             </field>
        </record>
        
        <record id="action_constituency" model="ir.actions.act_window">
            <field name="name">Constituency</field>
            <field name="res_model">vote.const</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_constituency_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Constituency
                </p>
            </field>
        </record>
        
        <menuitem name="Constituency" id="menu_main_config_constituency"
                    parent="menu_main_config" action="action_constituency"
                    groups="group_vote_manager" sequence="2"/>
        
        
        
    </data>
</odoo>