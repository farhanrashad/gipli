<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Page : Find Candidate -->
        <template id="website_candidate" inherit_id="website.layout" name="Header Candidate" priority="17">
            <xpath expr="//t[@t-foreach='website.menu_id.child_id']" position="after">
                <t t-set="lnk" t-value="'/'+ request.httprequest.url.replace( request.httprequest.host_url,'')"/>
                <li id="web_faq" t-attf-class="nav-item #{'active' if lnk == '/web/faq' else ''}">
                    <a role="menuitem" href="/candidate/form" class="nav-link">Candidate</a>
                </li>
            </xpath>
        </template>
        
        <template id="find_candidate_form" name="Find a Candidate">
            <t t-call="website.layout">
                <t t-set="additional_title">Find a Candidate</t>
                <div class="container">
                    <h2 class="text-muted">
                        Select Constituency
                    </h2>
                    <div class="oe_structure" id="oe_structure_whelpdesk_form_1"/>
                    <span class="hidden" data-for="helpdesk_ticket_form" t-att-data-values="{'team_id': team and team.id or ''}" />
                    <div id="helpdesk_section">
                    </div>
                </div>
            </t>
        </template>
        
    </data>
</odoo>