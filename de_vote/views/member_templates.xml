<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Page : Find Candidate -->
        <template id="website_candidate" inherit_id="website.layout" name="Header Candidate" priority="17">
            <xpath expr="//t[@t-foreach='website.menu_id.child_id']" position="after">
                <t t-set="lnk" t-value="'/'+ request.httprequest.url.replace( request.httprequest.host_url,'')"/>
                <li id="candidate_form" >
                    <a role="menuitem" href="/search/candidate" class="nav-link">Candidate</a>
                </li>
            </xpath>
        </template>
        
        <template id="search_candidate_form" name="search_candidate_form">
             <t t-call="website.layout">
                <form action="/search/candidate/list" method="post" enctype="multipart/form-data" class="o_mark_required row" data-mark="*" data-success-page="">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="s_website_form_rows container mb64 s_col_no_bgcolor">
                        <div class="form-group s_website_form_field col-12 " data-type="char" data-name="Field">
                            <t t-raw="search_form_code"/>
                        </div>
                    </div>
                </form> 
            </t>
        </template>
        <template id="candidate_list" name="candidate_list">
             <t t-call="website.layout">
                 <t t-raw="search_form_code"/>

                 <!-- Section Start -->
                <section class="pt16">
                    <div class="container">
                        <div class="row align-items-center">
                            <h3>Member's List of <span t-esc="const_name"/></h3>
                            <t t-foreach="members" t-as="member">
                                <div class="col-lg-6 o_colored_level" style="border:1px solid #ebebeb;">
                                    <div class="container">
                                        <div class="row align-items-center">
                                            <div class="col-lg-5 pt0 pb0" style="padding:0px;vertical-align: text-top;">
                                                <img t-attf-src="data:image/jpg;base64,{{ member.image_1920 }}" style="width:200px;height:auto;"/>
                                            </div>
                                            <div class="col-lg-7 ">
                                                <h4>
                                                    <span t-esc="member.contact_name"/>
                                                </h4>
                                                <h5><span t-esc="member.pol_partner_id.name"/></h5>
                                                <p>
                                                    <img t-attf-src="data:image/jpg;base64,{{ member.pol_partner_id.image_1920 }}" style="width:95px;height:auto;"/>

                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
                 <!-- Section End -->
                 <!--
                 <t t-foreach="members" t-as="member">
                     <img t-attf-src="data:image/jpg;base64,{{ member.image_1920 }}" style="width:95px; height:95px;margin-left:55px;"/>
                 </t>
                 -->
             </t>
        </template>
    </data>
</odoo>