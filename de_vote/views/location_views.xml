<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Location -->
        <record id="vote_location_tree_view" model="ir.ui.view">
			<field name="name">vote.location.tree.view</field>
			<field name="model">vote.location</field>
			<field name="arch" type="xml">
				<tree string="Location">
					<field name="display_name"/>
                    <field name="company_id" />
                    <field name="parent_id"/>
				</tree>
			</field>
		</record>
		<record id="vote_location_form_view" model="ir.ui.view">
			<field name="name">vote.location.form.view</field>
			<field name="model">vote.location</field>
			<field name="arch" type="xml">
				<form string="Location">
					<sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. Master in Business Administration"/></h1>
                            <label for="parent_id"/>
                            <h2><field name="parent_id" /></h2>
                        </div>
                        <group >
                            <group>
                                <field name="code" />
                                <field name="sequence_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="company_id" options="{'no_create': True}" />
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
        
        <record id="view_location_filter" model="ir.ui.view">
            <field name="name">location.search</field>
            <field name="model">vote.location</field>
            <field name="arch" type="xml">
                <search string="Locations">
                    <field name="name" string="Locations"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
             </field>
        </record>
        
        <record id="action_location" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">vote.location</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_location_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new location
                </p>
            </field>
        </record>
        
        <menuitem name="Locations" id="menu_main_config_location"
                    parent="menu_main_config" action="action_location"
                    groups="group_vote_manager" sequence="1"/>
        
        
        
    </data>
</odoo>