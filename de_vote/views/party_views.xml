<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>       
        <record id="parties_primary_form_view" model="ir.ui.view">
            <field name="name">member.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="de_vote.view_partner_form_inherit_member"/>
            <field name="mode">primary</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]" position="attributes">
                    <attribute name="string">Address</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]" position="attributes">
                    <attribute name="string">Contact Info</attribute>
                </xpath>
                
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/group[1]" position="before">
                    <group>
                        <group string="Electoral Sign">
                            <field name="vote_sign_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                </xpath>
                
                <xpath expr="//page[1]" position='after'>
                    <page name='demographic_info' string="Demographic Info" attrs="{'invisible': [('is_member', '!=', True)]}">
                        <group>
                            <group>
                                <field name="date_birth" />
                                <field name="gender" />
                                <field name="merital_status"/>
                            </group>
                            <group>
                                <field name="country_birth" placeholder="Country of Birth" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                <field name="country_nationality" placeholder="Nationality" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </group>
                        </group>
                    </page>
                    
                </xpath>
            </field>
        </record>
        
        <!-- Member Tree View -->
        <record id="partner_parties_tree_view" model="ir.ui.view">
            <field name="name">res.partner.student.tree.view</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Students" sample="1" multi_edit="1">
                    <field name="display_name" string="Name"/>
                    <field name="image_1920" optional="show" options="{&quot;size&quot;:[0,50]}" widget="image"/>
                    <field name="function" invisible="1"/>
                    <field name="ref" optional="hide" />
                    <field name="phone" class="o_force_ltr" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="user_id" optional="hide" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="hide" readonly="1"/>
                    <field name="country_id" optional="show" readonly="1"/>
                    <field name="category_id" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="company_id" string="School" groups="base.group_multi_company" readonly="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="parent_id" invisible="1" readonly="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        
        <record id="action_res_partner_parties" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <!--
            <field name="search_view_id" ref="rental_order_view_search"/>
            -->
            <field name="context">{'default_is_pol_party':'True', 'default_company_type':'company'}</field>
            <field name="domain">[('is_pol_party','=',True)]</field>
            <field name="view_ids"
				eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('base.res_partner_kanban_view')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('partner_parties_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('parties_primary_form_view')})]" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Political Party
                  </p><p>
                
                </p>
            </field>
        </record>

        
        <menuitem name="Parties" id="menu_main_members_parties" sequence="2" parent="menu_main_members" action="action_res_partner_parties" />
        
    </data>
</odoo>