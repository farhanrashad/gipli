<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Location -->
        <record id="vote_sign_tree_view" model="ir.ui.view">
			<field name="name">vote.sign.tree.view</field>
			<field name="model">vote.sign</field>
			<field name="arch" type="xml">
				<tree string="Vote Sign">
					<field name="display_name"/>
                    <field name="code" />
                    <field name="image_128" optional="show" options="{&quot;size&quot;:[0,50]}" widget="image"/>
				</tree>
			</field>
		</record>
		<record id="vote_sign_form_view" model="ir.ui.view">
			<field name="name">vote.sign.form.view</field>
			<field name="model">vote.sign</field>
			<field name="arch" type="xml">
				<form string="Vote Sign">
                    <field name="avatar_128" invisible="1"/>
                    
					<sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="e.g. BAT"/></h1>
                        </div>
                        <group >
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
        
        <record id="view_vote_sign_filter" model="ir.ui.view">
            <field name="name">location.sign.search</field>
            <field name="model">vote.sign</field>
            <field name="arch" type="xml">
                <search string="Signs">
                    <field name="name" string="Locations"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
             </field>
        </record>
        
        <record id="action_vote_sign" model="ir.actions.act_window">
            <field name="name">Symbols</field>
            <field name="res_model">vote.sign</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vote_sign_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new symbol
                </p>
            </field>
        </record>
        
        <menuitem name="Symbols" id="menu_main_config_vote_sign"
                    parent="menu_main_config" action="action_vote_sign"
                    groups="group_vote_manager" sequence="2"/>
        
    </data>
</odoo>