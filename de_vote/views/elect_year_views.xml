<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="election_yearadmission_register_search" model="ir.ui.view">
        <field name="name">Election Year - Search</field>
        <field name="model">vote.elect.year</field>
        <field name="arch" type="xml">
            <search string="Register Search">
                <field name="name"/>
                <separator/>
                <filter string="Open" name="open_register"
                    domain="[('state', '=', 'progress')]"
                />
                <filter string="Closed" name="close_register"
                    domain="[('state', '=', 'close')]"
                />
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By" colspan="16">
                        <filter name="stage" string="Stage" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Election Year TREE VIEW + MUTI_EDIT -->
    <record id="election_year_tree_view" model="ir.ui.view">
        <field name="name">election.year.tree.view</field>
        <field name="model">vote.elect.year</field>
        <field name="arch" type="xml">
            <tree string="Election Year" >
                <field name="name"/>
                <field name="date_start" />
                <field name="date_start" />
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'progress'" decoration-muted="state == 'close' or state == 'cancel'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record id="election_year_form_view" model="ir.ui.view">
        <field name="name">election.year.form.view</field>
        <field name="model">vote.elect.year</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Election Year">
                <header>
                    <button name="button_draft" states="cancel" string="Set to Draft" type="object" data-hotkey="n"/>
                    <button name="button_open" states="draft" string="Open" type="object" class="oe_highlight" data-hotkey="o" />
                    <button name="button_cancel" states="draft" string="Cancel" type="object" data-hotkey="x" />
                    <button name="button_close" type="object" string="Close Election" states="progress" data-hotkey="l"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,progress,close" readonly="1"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Fall 2023"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            
                            <label for="date_start" string="Dates"/>
                            <div name="dates" class="o_row">
                                <field name="date_start" />
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_end" />
                            </div>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description" type="html" options="{'collaborative': true, 'resizable': false}" placeholder="Election details..."/>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_elect_year" model="ir.actions.act_window">
        <field name="name">Election Year</field>
        <field name="res_model">vote.elect.year</field>
        <field name="view_id" ref="election_year_tree_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Set a new stage in your election pipeline
          </p><p>
            Stages allow election persons to easily track how a specific application
            is positioned in the election cycle.
          </p>
        </field>
    </record>
    
    <menuitem
        id="menu_main_config_elect_year"
        name="Year"
        parent="menu_main_config_elect"
        action="action_elect_year"
        sequence="1"/>

   
</odoo>
