<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="social_channel_kanban_view" model="ir.ui.view">
        <field name="name">social.channel.kanban.view</field>
        <field name="model">sm.channel</field>
        <field name="arch" type="xml">
                <kanban create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="name_handle"/>
                    <field name="social_media_id"/>
                    <field name="color"/>
                    <templates>
                        <!-- Kanban menu -->
                        <t t-name="kanban-menu" groups="base.group_user">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6 o_kanban_card_manage_section ">
                                        <t name="first_options"/>
                                    </div>
                                    <div class="col-6 o_kanban_card_manage_section">
                                        <t name="second_options"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_settings row">
                                    <div role="menuitem" aria-haspopup="true" class="col-6" groups="de_social.group_sm_manager">
                                        <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                                    </div>
                                    <div role="menuitem" class="col-6" groups="de_social.group_sm_manager">
                                        <a class="dropdown-item" role="menuitem" type="edit">Settings</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                        <!-- end Kanban menu -->
                        <!-- Kanban box -->
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card">
                                <div class="o_social_kanban_main d-flex align-items-baseline gap-1">
                                    <div class="o_kanban_card_content">
                                        <div class="o_kanban_image">
                                            <img type="open" height="70" t-att-src="kanban_image('sm.channel', 'image', record.id.raw_value)" alt="Social Channel"/>
                                        </div>
                                        <div class="mb-2">
                                            <h3 class="mt4"><t t-esc="record.name.value"/></h3>
                                            <t t-esc="record.name_handle.value"/>
                                        </div>
                                    </div>
                                </div>
                                <!-- Footer/bottom -->
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_project_kanban_boxes d-flex align-items-baseline">
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img type="open" height="20" t-att-src="kanban_image('sm.media', 'image', record.id.raw_value)" alt="Social Media"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <!-- end Kanban box -->        
                    </templates>
                </kanban>
        </field>
    </record>
    <record id="action_social_dashboard" model="ir.actions.act_window">
        <field name="name">Social Channel</field>
        <field name="res_model">sm.channel</field>
        <field name="view_mode">kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                no social channel found.
            </p>
        </field>
    </record>

    <menuitem name="Channels" id="menu_social_root_dashboard"
        parent="menu_social_root" 
        action="action_social_dashboard"
        sequence="1"
    />
    
</odoo>