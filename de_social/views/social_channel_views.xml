<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sm_channel_form_view" model="ir.ui.view">
        <field name="name">sm.channel.form.view</field>
        <field name="model">sm.channel</field>
        <field name="arch" type="xml">
            <form string="Social Channel">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'image_preview': 'image_128'}"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g MyChannel01" class="d-block"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name_handle" />
                            <field name="social_media_id" options="{'no_create': True}" />
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sm_channel_tree_view" model="ir.ui.view">
      <field name="name">sm.channel.tree.view</field>
      <field name="model">sm.channel</field>
      <field name="arch" type="xml">
        <tree sample="1" >
            <field name="name" />
            <field name="name_handle" />
            <field name="social_media_id" options="{'no_create': True}" />
            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
        </tree>
      </field>
    </record>

    
    <record id="action_social_channel" model="ir.actions.act_window">
        <field name="name">Social Channel</field>
        <field name="res_model">sm.channel</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                no social channel found.
            </p>
        </field>
    </record>

    <menuitem name="Channels" id="menu_social_config_social_channels"
                    parent="menu_social_config" action="action_social_channel"
                   sequence="3"/>
    
</odoo>