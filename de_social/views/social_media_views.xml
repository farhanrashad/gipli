<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sm_media_form_view" model="ir.ui.view">
        <field name="name">sm.media.form.view</field>
        <field name="model">sm.media</field>
        <field name="arch" type="xml">
            <form string="Social media">
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'image_preview': 'image_128'}"/>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g Facebook" class="d-block"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="limit_post_length" />
                        </group>
                        <group>
                            
                        </group>
                    </group>
                    <div name="description">
                        <span class="ml8">
                            <field name="description" 
                                placeholder="description"
                                nolabel="1"
                            />
                        </span>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sm_media_tree_view" model="ir.ui.view">
      <field name="name">sm.media.tree.view</field>
      <field name="model">sm.media</field>
      <field name="arch" type="xml">
        <tree sample="1" >
          <field name="name" />
        </tree>
      </field>
    </record>
    
    <record id="social_media_kanban_view" model="ir.ui.view">
        <field name="name">social.media.kanban.view</field>
            <field name="model">sm.media</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="channel_ids"/>
                    <field name="color"/>
                    <templates>
                        <!-- Kanban menu -->
                        <t t-name="kanban-menu" groups="base.group_user">
                            <div class="container">
                                <div class="o_kanban_card_manage_settings row">
                                    <div role="menuitem" aria-haspopup="true" class="col-6" groups="de_social.group_sm_manager">
                                        <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                                    </div>
                                    <div role="menuitem" class="col-6" groups="de_social.group_sm_manager">
                                        <a class="dropdown-item" role="menuitem" type="edit">Settings</a>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                        <!-- end Kanban menu -->
                        <!-- Kanban box -->
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card">
                                <div class="o_social_kanban_main d-flex align-items-baseline gap-1">
                                    <div class="o_kanban_card_content">
                                        <div class="o_kanban_image">
                                            <img type="open" t-att-src="kanban_image('sm.media', 'image', record.id.raw_value)" alt="Social Media"/>
                                        </div>
                                        <div class="mb-2">
                                            <h3 class="mt4"><t t-esc="record.name.value"/></h3>
                                            <t t-esc="record.description.value"/>
                                        </div>
                                    </div>
                                </div>
                                <!-- Footer/bottom -->
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <div class="o_project_kanban_boxes d-flex align-items-baseline">
                                            <button type="object" class="btn btn-primary" name="action_add_channel">Add Channel</button>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-foreach="record.channel_ids.raw_value" t-as="channel_id" t-key="channel_id_index">
                                            <t>
                                                <img class="img me-1" height="20" t-att-title="title" t-attf-src="/web/image/sm.channel/#{channel_id}/image/20x20" alt="Media"/>
                                            </t>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <!-- end Kanban box -->
                        
                    </templates>
                </kanban>
            </field>
        </record>
    
    <record id="action_social_media" model="ir.actions.act_window">
        <field name="name">Social Media</field>
        <field name="res_model">sm.media</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new social media
            </p>
        </field>
    </record>

    <menuitem name="Social Media" id="menu_social_config_social_media"
                    parent="menu_social_config" action="action_social_media"
                   sequence="2"/>
    
</odoo>