<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="social_post_form_view" model="ir.ui.view">
        <field name="name">sm.post.form.view</field>
        <field name="model">sm.post</field>
        <field name="arch" type="xml">
            <form string="Social Post">
                <header>
                    <button name="action_post" string="Post Now" type="object" class="oe_highlight"
                            invisible="state != 'draft' or method_publish != 'now' "
                    />
                    
                    <button name="action_schedule" string="Schedule" type="object" class="oe_highlight"
                            invisible="state != 'draft' or method_publish != 'scheduled'"
                            data-hotkey="q" 
                    />
                    <button name="action_draft" string="Set to Draft" type="object" 
                            invisible="state != 'scheduled' "
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="channel_allowed_ids" invisible="1" />
                    
                    <group>
                        <group>
                            <field name="channel_ids" 
                                options="{'no_create': True}" 
                                string="Post on" 
                                widget="many2many_checkboxes"
                                readonly="state != 'draft'"
                            />
                            <field name="message" widget="text_emojis" 
                                readonly="state != 'draft'"
                            />
                            <field name="image_ids" 
                                widget="many2many_binary" 
                                class="o_social_post_form_attachments"
                                readonly="state != 'draft'"
                            />
                            <field name="method_publish" widget="radio" 
                                readonly="state != 'draft'"
                            />
                            <field name="date_scheduled"
                                invisible="method_publish != 'scheduled'"
                                required="method_publish == 'scheduled'"
                            />
                            <field name="company_id" 
                                options="{'no_create': True}" 
                                groups="base.group_multi_company"
                                readonly="state != 'draft'"
                            />
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="social_post_tree_view" model="ir.ui.view">
      <field name="name">social.post.tree.view</field>
      <field name="model">sm.post</field>
      <field name="arch" type="xml">
        <tree sample="1" >
            <field name="state" />
        </tree>
      </field>
    </record>
    
    <record id="social_post_calendar_view" model="ir.ui.view">
        <field name="name">social.post.calendar.view</field>
        <field name="model">sm.post</field>
        <field name="arch" type="xml">
            <calendar string="Social Posts" date_start="date_scheduled" color="channel_ids" quick_create="1" mode="month">
                <field name="message"/>
            </calendar>
        </field>
    </record>

    <record id="social_post_view_kanban" model="ir.ui.view">
        <field name="name">social.post.view.kanban</field>
        <field name="model">sm.post</field>
        <field name="arch" type="xml">
            <kanban js_class="social_post_kanban_view" sample="1">
                <field name="message"/>
                <field name="create_uid"/>
                <field name="image_ids" widget="many2many_binary"/>
                <field name="date_published"/>
                <field name="method_publish"/>
                <field name="date_scheduled"/>
                <field name="state"/>
                <field name="social_media_ids"/>
                <field name="channel_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_social_post_kanban d-flex flex-column p-0">
                            <div class="o_social_post_header d-flex justify-content-between border-bottom py-2 px-3">
                                <div class="o_social_post_media d-flex align-items-center">
                                    <t t-foreach="record.social_media_ids.raw_value" t-as="social_media_id" t-key="media_id_index">
                                        <t > <!-- unset in sample mode -->
                                            <img class="img me-1" height="20" t-att-title="title" t-attf-src="/web/image/sm.media/#{social_media_id}/image/20x20" alt="Media"/>
                                        </t>
                                    </t>
                                </div>
                                <div>
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'scheduled': 'primary', 'posted': 'success'}}"/>

                                </div>
                            </div>

                            <t t-set="has_attachments" t-value="record.image_ids.raw_value.length !== 0"/>
                            <div t-attf-class="o_social_stream_post_message_body flex-grow-1 py-2 px-3 border-bottom #{has_attachments ? 'o_social_stream_post_with_attachments' : ''}">
                                <div name="o_social_stream_post_message_text"
                                     t-attf-class="o_social_stream_post_message_text overflow-hidden #{has_attachments ? 'mb-2' : ''}">
                                    <field name="message" widget="social_post_formatter"/>
                                </div>

                                
                            </div>
                            
                            <div class="d-flex flex-grow-0 align-items-center px-3 py-2 " style="background-color: #f8f9fa; color: #000;">
                                <time class="flex-grow-1 small fw-bold">
                                    <t t-set="state" t-value="record.state.raw_value"/>
                                    <t t-if="state === 'posted'">
                                        <i class="fa fa-calendar-check-o me-1" />
                                        <t t-esc="record.date_published.value"/>
                                    </t>
                                    <t t-if="state === 'scheduled'">
                                        <i class="fa fa-calendar me-1" />
                                        <t t-esc="record.date_scheduled.value"/>
                                    </t>
                                </time>

                                <field name="create_uid" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="social_post_search_view" model="ir.ui.view">
        <field name="name">social.post.search.view</field>
        <field name="model">sm.post</field>
        <field name="arch" type="xml">
            <search>
                <field name="message" string="Post Message"/>
                <field name="create_uid" string="Published By"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter name="filter_my_posts" string="My Posts" domain="[('create_uid','=',uid)]"/>
                <searchpanel>
                    <field name="state" icon="fa-tasks" enable_counters="1"/>
                    <field name="channel_ids" select="multi" icon="fa-share-alt" enable_counters="1"/>
                </searchpanel>
                <group expand="1" string="Group By">
                    <filter string="Publish Date" name="filter_publish_date" context="{'group_by':'date_published'}"/>
                    <filter string="Company" name="filter_company_id" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_social_post" model="ir.actions.act_window">
        <field name="name">Social Post</field>
        <field name="res_model">sm.post</field>
        <field name="view_mode">kanban,tree,calendar,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new social post
            </p>
        </field>
    </record>

    <menuitem name="Posts" id="menu_social_publishing_posts"
                    parent="menu_social_publishing" action="action_social_post"
                   sequence="1"/>
    
</odoo>