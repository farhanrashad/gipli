<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record model="ir.module.category" id="module_category_social">
        <field name="name">School</field>
        <field name="description">Helps you handle your social media account.</field>
        <field name="sequence">7</field>
    </record>
    
    <record id="group_sm_user" model="res.groups">
        <field name="name">Social Media User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_social"/>
    </record>

    <record id="group_sm_manager" model="res.groups">
        <field name="name">Social Media Manager</field>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        <field name="category_id" ref="base.module_category_social"/>
        <field name="implied_ids" eval="[(4, ref('group_sm_user'))]"/>
    </record>

    
    
</odoo>
