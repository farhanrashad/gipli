<odoo>
   <data>
         <record id="employee_shift_alloc_form_view" model="ir.ui.view">
            <field name="name">employee.shift.alloc.form_view</field>
            <field name="model">employee.shift.alloc</field>
            <field name="arch" type="xml">
                <form string="Employee Shift Allocation">
                   <header>
                       <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                   </header>
                   <sheet>
                       <h1>
                           <field name="name" />
                        </h1>
                      <group>
                            <group>
                                <field name="shift_id"/>
                                <field name="date_from"/>
                                <field name="employee_id"/>
                                
                            </group>
                            
                            <group>
                                <field name="shift_type_id"/>
                                <field name="date_to"/>
                                <field name="company_id"/>
                            </group>
                        </group>     
                   </sheet>
                   
                   <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                   </div>
                </form>
            </field>
        </record>
        
           <record id="employee_shift_alloc_tree_view" model="ir.ui.view">
            <field name="name">emp shift alloc tree view</field>
            <field name="model">employee.shift.alloc</field>
            <field name="arch" type="xml">
                <tree string="Employee Shift Allocation">
                    <field name="name"/> 
                    <field name="shift_id"/>
                    <field name="employee_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
         
         <record id="emp_shift_alloc_calendar_view" model="ir.ui.view">
            <field name="name">emp.shift.alloc.calendar.view</field>
            <field name="model">employee.shift.alloc</field>
            <field name="arch" type="xml">
                <calendar
                    string="Employee Shifts"
                    date_start="date_from"
                    date_stop="date_to"
                    mode="month"
                    quick_add="False"
                    color="employee_id"
                   
                   
                    >
                     <!-- js_class="time_off_calendar" -->
                      <!-- event_open_popup="True" -->
                    <field name="name"/>
                    <field name="employee_id" filters="1" />
                    <field name="shift_type_id"/>
                </calendar>
            </field>
       </record>
          <record id="action_emp_shift_alloc" model="ir.actions.act_window">
            <field name="name">Employee shift Allocation</field>
            <field name="res_model">employee.shift.alloc</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="view_id" ref="employee_shift_alloc_tree_view"/>
            
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new record
                </p>
            </field>
        </record>  
        
        
         <menuitem id="menu_emp_shift_alloc" name="Employee Shift Allocations" action="action_emp_shift_alloc" parent="emp_shift_mangement_menu_root" groups="hr.group_hr_user,hr.group_hr_manager"/>
   </data>
</odoo>