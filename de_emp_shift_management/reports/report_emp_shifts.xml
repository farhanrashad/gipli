<odoo>
    <data>
    
      <record id="action_report_emp_shift_xlsx" model="ir.actions.report">
            <field name="name">Employee shifts xlsx report</field>
            <field name="model">employee.shift.alloc</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">de_emp_shift_management.employee_shift_report_xlsx</field>
            <field name="report_file">de_emp_shift_management.employee_shift_report_xlsx</field>
        </record>
    
    
    
    
    
    
    
       <record id="action_report_emp_shift_pdf" model="ir.actions.report">
            <field name="name">Employee shifts pdf report</field>
            <field name="model">employee.shift.alloc</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_emp_shift_management.employee_shift_report_pdf</field>
            <field name="report_file">de_emp_shift_management.employee_shift_report_pdf</field>
        </record>
        
        
        <template id="employee_shift_report_pdf">
        <!-- <t t-set="data_report_landscape" t-value="True"/>
        <t t-set="full_width" t-value="True"/> -->
            <t t-call="web.html_container">
               <div class="page">
                    <div class="text-center" style="font-size:20px;">
                        <strong>Employee Shift Allocation</strong>
                    </div>
                    <br/>
                    <div class= "row">
                    <table style="border-collapse: collapse;" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th  class="text-center" style="border-left:1px solid black;border-top:1px solid black;"><span>Name</span></th>
                                    <th  class="text-center" style="border-left:1px solid black;border-top:1px solid black;"><span>Employee</span></th>
                                    <th  class="text-left" style="border-left:1px solid black;border-top:1px solid black;"><span>Date from</span></th>
                                    <th  class="text-center" style="border-left:1px solid black;border-top:1px solid black;"><span>Date to</span></th>
                                    <th  class="text-center" style="border-left:1px solid black;border-top:1px solid black;border-right:1px solid black;"><span>Shift</span></th>
                                    <th  class="text-center" style="border:1px solid black;"><span>State</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="emp_recs" t-as="emp_rec">
                                   <tr>
                                       <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.name"/></td>
                                        
                                        <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.employee_id.name"/></td>
                                        <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.date_from"/></td>
                                        <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.date_to"/></td>
                                        <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.shift_id.name"/></td>
                                        <td class="text-left" style="border:1px solid black;"><span t-esc="emp_rec.state"/></td>
                                    </tr>    
                                </t>   
                            </tbody>
                        </table>    
                     </div>    
                </div>
            </t>
        </template>               
                       

    </data>
</odoo>