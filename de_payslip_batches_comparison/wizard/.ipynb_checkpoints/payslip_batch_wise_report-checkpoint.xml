<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data>
        <record id="pay_slip_report_wizard_view" model="ir.ui.view">
            <field name="name">pay.slip.report.wizard.form</field>
            <field name="model">pay.slip.report.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group col="4">
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <group>
                                <field name="from_batch_id" required="1" domain="[('company_id','=',company_id)]"/>
                            </group>
                            <group>
                                <field name="to_batch_id" required="1" domain="[('company_id','=',company_id)]"/>
                            </group>
                        </group>
                        <footer>
                            <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                            <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pay_slip_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Batch Wise Payroll Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pay.slip.report.wizard</field>
            <field name="view_mode">form,list</field>
            <field name="view_id" ref="pay_slip_report_wizard_view"/>
            <field name="target">new</field>
            <field name="binding_view_types">form,list</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
        </record>

        <menuitem
                id="menu_hr_batch_wise_report"
                name="Batch Reconciliation Report"
                action="pay_slip_report_wizard_action"
                sequence="50"
                parent="hr_payroll.menu_hr_payroll_report"/>
    </data>
</odoo>