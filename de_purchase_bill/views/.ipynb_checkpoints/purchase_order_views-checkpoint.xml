<odoo>
  <data>
  <record id="view_purchase_order_form_down_payment" model="ir.ui.view">
        <field name="name">purchase.order.down.payment</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@name='action_create_invoice']" position="replace">
                <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                        type="action" class="btn-primary"
                        attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"/>
                
                <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'purchase')]}"/>
                
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree" position="inside">
                <field name="is_downpayment"  invisible="1"/>
            </xpath>
            <xpath expr="//header//button[@name='action_create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
      
  </data>
</odoo>