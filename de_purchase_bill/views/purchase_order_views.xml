<odoo>
  <data>
  <record id="view_purchase_order_form_down_payment" model="ir.ui.view">
        <field name="name">purchase.order.down.payment</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//button[@name='action_create_invoice']" position="replace">
                <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                    type="action" class="btn-primary"
                    invisible="invoice_status != 'to invoice'"
                />
                
                <button name="%(de_purchase_bill.action_view_purchase_advance_payment_inv)d" string="Create Bill"
                    type="action" context="{'default_advance_payment_method': 'percentage'}"
                    invisible="invoice_status != 'no' or state != 'purchase'"
                />
                
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree" position="inside">
                <field name="is_downpayment" column_invisible="True"/>
            </xpath>
            <xpath expr="//header//button[@name='action_create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook//field[@name='order_line']//tree//field[@name='product_qty']" position="attributes">
                <attribute name="readonly">is_downpayment</attribute>
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree//field[@name='qty_received']" position="attributes">
                <attribute name="readonly">is_downpayment</attribute>
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree//field[@name='taxes_id']" position="attributes">
                <attribute name="readonly">is_downpayment</attribute>
            </xpath>
            

            <xpath expr="//notebook//field[@name='order_line']//tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">is_downpayment</attribute>
            </xpath>
            <xpath expr="//notebook//field[@name='order_line']//tree//field[@name='price_total']" position="attributes">
                <attribute name="invisible">is_downpayment</attribute>
            </xpath>
            

        </field>
    </record>
      
  </data>
</odoo>