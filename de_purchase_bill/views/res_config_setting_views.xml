<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_purchase_down_payment" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='purchase']" position="inside">
                <block id="downpayment" title="Down Payment">
                    <setting id="downpayment" title="Allows you to use default journal in payment run." groups="purchase.group_purchase_manager" help="The default product for down payment on purchase orders."
                    >
                        <field name="purchase_down_payment_product_id" context="{'default_type': 'service'}"/>
                    </setting>
                </block>
            </xpath>
            
        </field>
    </record>
</odoo>