<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Form view -->
        <record model="ir.ui.view" id="hotel_information_form_view">
            <field name="name">hotel.information.form</field>
            <field name="model">hotel.information</field>
            <field name="arch" type="xml">
                <form string="Hotel Information">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                        <button name="confirm_info" type="object" string="Confirm"/>
                    </header>
                    <group>
                        <group>
                            <field name="hotel_partner_id"/>
                        </group>
                        <group>
                            <field name="hotel_type_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Room Information">
                            <field name="room_info_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="room_type_id"/>
                                    <field name="name"/>
                                    <field name="cost_price"/>
                                    <field name="sale_price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Service Information">
                            <field name="hotel_service_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="service_id"/>
                                    <field name="name"/>
                                    <field name="cost_price"/>
                                    <field name="product_uom"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Accounting Information">
                            <group>
                                <group>
                                    <field name="rcv_account_id"/>
                                </group>
                                <group>
                                    <field name="pay_account_id"/>
                                </group>
                            </group>
                            <group>
                                <group col="4">
                                    <field name="hotel_image_1" widget="image"/>
                                </group>
                                <group col="4">
                                    <field name="hotel_image_2" widget="image"/>
                                </group>
                                <group col="4">
                                    <field name="hotel_image_3" widget="image"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record model="ir.ui.view" id="hotel_information_list_view">
            <field name="name">hotel.information.list</field>
            <field name="model">hotel.information</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="hotel_partner_id"/>
                    <field name="hotel_type_id"/>
                    <field name="rcv_account_id"/>
                    <field name="pay_account_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->

        <record id="hotel_information_action" model="ir.actions.act_window">
            <field name="name">Hotel Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.information</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>