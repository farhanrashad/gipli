<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tour_deduction_policy_form_view" model="ir.ui.view">
        <field name="name">tour.deduction.policy.form</field>
        <field name="model">tour.deduction.policy</field>
        <field name="arch" type="xml">
            <form string="Tour Deduction Policy">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="deduction_percentage"/>
                        </group>
                        <group>
                            <field name="max_limit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tour_deduction_policy_list_view" model="ir.ui.view">
        <field name="name">tour.deduction.policy.list</field>
        <field name="model">tour.deduction.policy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="max_limit"/>
                <field name="deduction_percentage"/>
            </tree>
        </field>
    </record>
    <record id="action_tour_deduction_policy_list" model="ir.actions.act_window">
        <field name="name">Tour Deduction Policy List</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tour.deduction.policy</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>