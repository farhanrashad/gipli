<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="travel_planner_details_form_view">
        <field name="name">travel.planner.details.form</field>
        <field name="model">travel.planner.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="transport_type_id"/>
                            <field name="from_dest_id"/>
                            <field name="sale_price_adult"/>
                            <field name="total_sale_price_adult"/>
                            <field name="pur_bol"/>
                            <field name="pur_bol"/>
                        </group>
                        <group>
                            <field name="transport_id"/>
                            <field name="transport_carrier_id"/>
                            <field name="travel_class_id"/>
                            <field name="to_dest_id"/>
                            <field name="sale_price_child"/>
                            <field name="total_sale_price_child"/>
                        </group>
                    </group>
                    <group>
                        <field name="sale_tax_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <group class="oe_subtotal_footer oe_right">
                    <field name="sale_tax_amount_trvl" widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="travel_pln_sale" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </form>
        </field>
    </record>
    <!-- Define the list view -->
    <record model="ir.ui.view" id="travel_planner_details_tree_view">
        <field name="name">travel.planner.details.tree</field>
        <field name="model">travel.planner.details</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Define the columns to display -->
                <field name="name"/>
                <field name="transport_id"/>
                <field name="date"/>
                <field name="transport_carrier_id"/>
                <field name="transport_type_id"/>
                <field name="travel_class_id"/>
                <field name="from_dest_id"/>
                <field name="to_dest_id"/>
                <field name="sale_price_adult"/>
                <field name="sale_price_child"/>
                <field name="total_sale_price_adult" readonly="1"/>
                <field name="total_sale_price_child" readonly="1"/>
            </tree>
        </field>
    </record>
    <!-- Define the action for the list view -->
    <record model="ir.actions.act_window" id="travel_planner_details_action">
        <field name="name">Travel Planner Details</field>
        <field name="res_model">travel.planner.details</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
