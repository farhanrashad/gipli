<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_travel_class_form" model="ir.ui.view">
        <field name="name">travel.class.form</field>
        <field name="model">travel.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="transport_type_id"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_travel_class_list" model="ir.ui.view">
        <field name="name">travel.class.list</field>
        <field name="model">travel.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="transport_type_id"/>
            </tree>
        </field>
    </record>
    <record id="action_travel_class" model="ir.actions.act_window">
        <field name="name">Travel Class</field>
        <field name="res_model">travel.class</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click the Create button to add a new Travel Class.
            </p>
        </field>
    </record>
</odoo>
