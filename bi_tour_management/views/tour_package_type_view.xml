<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view -->
        <record id="tour_package_type_form_view" model="ir.ui.view">
            <field name="name">tour.package.type.form</field>
            <field name="model">tour.package.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view -->
        <record id="tour_package_type_list_view" model="ir.ui.view">
            <field name="name">tour.package.type.list</field>
            <field name="model">tour.package.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="action_tour_package_type" model="ir.actions.act_window">
            <field name="name">Tour Package Type</field>
            <field name="res_model">tour.package.type</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
