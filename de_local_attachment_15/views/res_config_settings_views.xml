<odoo>
  <data>
      <record id="res_config_settings_view_form_local_attachment" model="ir.ui.view">
            <field name="name">res.config.settings.local.attachment</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="41"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Local Attachment Folder" string="Local Attachment Folder" data-key="base-setting">
                        <h2>Attachment Folder</h2>
                        <div class="row mt16 o_settings_container" name="catalog_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="local_attachment_folder">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Local Attachment Folder Location</span>
                                    <div class="text-muted">
                                        Local Attachment Folder Location
                                    </div>
                                    <div class="text-muted">
                                        <field name="attachment_folder" context="{'default_type': 'general'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
          </field>
      </record>
  </data>
</odoo>