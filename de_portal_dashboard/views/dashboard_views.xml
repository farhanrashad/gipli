<odoo>
  <data>

      <record model="ir.ui.view" id="base_dashboard_item_form_view">
            <field name="name">base.dashboard.item.form.view</field>
            <field name="model">base.dashboard.item</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="model_id" />
                                <field name="model_name" invisible="1" />
                                <field name="filter_field_id" domain="[('model_id', '=', model_id),('relation','=','res.partner')]"/>

                                <field name="filter_domain" widget="domain" string="Filter Domain" options="{'model': 'model_name', 'in_dialog': True}"/>
                                
                            </group>
                            <group>
                                

                                <field name="view_type" />
                                <field name="field_ids" 
                                    widget="many2many_tags"
                                    attrs="{'invisible': [('view_type', '!=', 'list')], 'required': [('view_type', '=', 'list')]}"
                                />
                                <field name="detail_field_ids" 
                                    widget="many2many_tags"
                                    attrs="{'invisible': [('view_type', '!=', 'list')], 'required': [('view_type', '=', 'list')]}"
                                />
                                <field name="graph_label_field_id" 
                                    attrs="{'invisible': [('view_type', '!=', 'graph')], 'required': [('view_type', '=', 'graph')]}"
                                />
                                <field name="graph_data_field_id" 
                                    attrs="{'invisible': [('view_type', '!=', 'graph')], 'required': [('view_type', '=', 'graph')]}"
                                />
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines" name="lines"
                                attrs="{'invisible': [('view_type', '!=', 'list')]}">
                                <field name="dash_item_line" >
                                    <tree string="Dash Item Lines" editable="bottom">
                                        <field name="dash_item_id" invisible="1" />
                                        <field name="header_model_id" invisible="1" />
                                        <field name="relational_field_id" domain="[('model_id', '=', header_model_id),('ttype','=','one2many')]" />
                                        <field name="line_model_id" />
                                        <field name="field_ids" 
                                            widget="many2many_tags"
                                            required="1"
                                        />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


      
      <record model="ir.ui.view" id="base_dashboard_item_tree_view">
            <field name="name">base.dashboard.item.tree.view</field>
            <field name="model">base.dashboard.item</field>
            <field name="arch" type="xml">
                <tree string="Dashboard" >
                    <field name="name"/>
                </tree>
            </field>
        </record>
      
     <record id="action_dashboard_config" model="ir.actions.act_window">
            <field name="name">Dsahboard</field>
            <field name="res_model">base.dashboard.item</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No dashboard item found. Let's create one!
              </p>
            </field>
        </record>        
        
        <menuitem action="action_dashboard_config" 
            name="Dashbord Config" 
            id="dashboard_menu_root_main_dashboard_config"
            parent="dashboard_menu_root_main" 
            sequence="2"
        />
  </data>
</odoo>