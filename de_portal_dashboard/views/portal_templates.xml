<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_services_dashboard_menu" name="Dashboard" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between" t-attf-href="/my/services/dashboard" title="Invoices &amp; Bills">
                <span>Dashboard</span>
            </a>
        </xpath>
        
    </template>
    <template id="portal_my_home" name="Show Projects / Tasks" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Dashboard</t>
                <t t-set="url" t-value="'/my/tasks'"/>
            </t>
        </xpath>
    </template>


    <template id="portal_services_dashboard" name="My Services Dashboard">
            <t t-call="portal.portal_layout">
                <h3>Portal Dashboard</h3>
                <span t-raw="output_html"/>
            </t>
    </template>
    
</odoo>