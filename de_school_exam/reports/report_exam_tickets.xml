<odoo>
    <data>
        <template id="exam_session_exam_tickets_report_view">
            <t t-call="web.external_layout">
                <t t-set="students" t-value="env['res.partner'].search([('is_student','=',True),('course_id','=',o.course_id.id)])"/>
                <t t-foreach="students" t-as="student">
                    <div class="page">
                        <div class="row mt-4 mb-16 text-center" id="exam_center">
                            <h2 class="">
                                <span>Examination Hall Ticket</span>
                            </h2>
                        </div>
                        <br/><br/>
                        
                        <div class="row">
                            <div class="col-8">
                                <div class="row" id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Course:</strong>
                                    </div>
                                    <div class="col-auto col-8">
                                        <span t-field="o.course_id.code"/> - 
                                    
                                        
                                        <span t-field="o.course_id"/>
                                    </div>
                                </div>
                                <div class="row " id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Candidate:</strong>
                                    </div>
                                    <div class="col-auto col-8 ">
                                        <p class="m-0" t-field="student.name"/>
                                    </div>
                                </div>
                                <div class="row " id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Roll Number:</strong>
                                    </div>
                                    <div class="col-auto col-8 ">
                                        <p class="m-0" t-field="student.roll_no"/>
                                    </div>
                                </div>
                                <div class="row " id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Admission Number:</strong>
                                    </div>
                                    <div class="col-auto col-8 ">
                                        <p class="m-0" t-field="student.admission_no"/>
                                    </div>
                                </div>
                                <div class="row " id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Guardian:</strong>
                                    </div>
                                    <div class="col-auto col-8 ">
                                        <p class="m-0" t-field="student.guardian_name"/>
                                    </div>
                                </div>
                                <div class="row " id="exam_center">
                                    <div class="col-auto col-4 ">
                                        <strong>Seat No:</strong>
                                    </div>
                                    <div class="col-auto col-8 ">
                                        <p class="m-0" t-field="student.name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="text-left col-4">
                                <span t-field="student.image_medium" t-options="{'widget': 'image'}"/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <t t-set="serial_number" t-value="0"/>
                        <table class="table table-sm o_main_table mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th class="text-center">Sr.No</th>
                                    <th class="text-center">Batch</th>
                                    <th class="text-center">Subject</th>
                                    <th class="text-center">Schedule</th>
                                    <th class="text-center">Total Duration</th>
                                    <th class="text-center">Venue</th>
                                </tr>
                            </thead>
                            <tbody class="consumed_tbody">
                                <t t-foreach="o.exam_line.exam_result_line.filtered(lambda x:x.student_id.id == student.id and x.exam_id.batch_id.id == student.batch_id.id)" t-as="line">
                                    <t t-set="serial_number" t-value="serial_number + 1"/>
                                    <tr>
                                        <td>
                                            <t t-esc="serial_number"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.batch_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.exam_id.subject_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.exam_id.date_start"/> - 
                                            <span t-field="line.exam_id.date_end"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.exam_id.exam_hours"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.exam_id.address_id"/>, 
                                            <span t-field="line.exam_id.exam_location_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div style="page-break-after: always;"/>
                </t>
            </t>
        </template>
        <template id="exam_session_exam_tickets_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="de_school_exam.exam_session_exam_tickets_report_view" />
                </t>
            </t>
        </template>
        <!--  Student Hall Ticket Report  -->
        <record id="exam_session_ticket_report" model="ir.actions.report">
            <field name="name">Print Hall Ticket</field>
            <field name="model">oe.exam.session</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">de_school_exam.exam_session_exam_tickets_report_template</field>
            <field name="report_file">de_school_exam.exam_session_exam_tickets_report_template</field>
            <field name="print_report_name">'Exam Details'</field>
            <field name="binding_model_id" ref="de_school_exam.model_oe_exam_session"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>