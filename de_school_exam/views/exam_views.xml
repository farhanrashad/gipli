<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <!-- Exam -->
        <record id="exam_tree_view" model="ir.ui.view">
			<field name="name">exam.tree.view</field>
			<field name="model">oe.exam</field>
			<field name="arch" type="xml">
				<tree string="Exam " >
                    <field name="batch_id"/>
					<field name="subject_id"/>
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="state" />
				</tree>
			</field>
		</record>

        <record id="exam_form_view" model="ir.ui.view">
            <field name="name">exam.form.view</field>
            <field name="model">oe.exam</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Exam">
                    <header>
                        <button name="button_draft" states="cancel" string="Set to Draft" type="object" data-hotkey="n"/>
                        <button name="button_open" states="draft" string="Start Exam" type="object" class="oe_highlight" data-hotkey="o" />
                        <button name="button_cancel" states="draft" string="Cancel" type="object" data-hotkey="x" />
                        <button name="button_close" type="object" string="Close Exam" states="progress" data-hotkey="l"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,progress,close" readonly="1"/>
                    </header>
                    <sheet>
                        <field name="company_id" invisible="1" />
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_exam_results"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-trophy"
                            >
                                <field name="exam_result_count" widget="statinfo" string="Results"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="batch_id" options="{'no_open':True,'no_create':True}"/>
                                <field name="subject_id" options="{'no_open':True,'no_create':True}"/>
                                <label for="date_start" string="Schedule"/>
                                <div name="dates" class="o_row">
                                    <field name="date_start" />
                                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_end" />
                                </div>
                                <field name="exam_hours" />
                                <separator string="Exam Venue" />
                                <field name="address_id" options="{'no_create':True}"/>
                                <field name="exam_location_id" options="{'no_create':True}"/>
                            </group>
                            <group>
                                <field name="marks_min" />
                                <field name="marks_max" />
                                <field name="company_id" groups="base.group_multi_company" options="{'no_open':True,'no_create':True}"/>
                            </group>y
                        </group>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="exam_search_view" model="ir.ui.view">
            <field name="name">exam.search.view</field>
            <field name="model">oe.exam</field>
            <field name="arch" type="xml">
                <search string="Exam">
                    <field name="batch_id" string="Exam Reference"/>
                </search>
             </field>
        </record>
        
        <record id="action_exam" model="ir.actions.act_window">
            <field name="name">Exam</field>
            <field name="res_model">oe.exam</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="exam_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new exam
                </p>
            </field>
        </record>
        
        <menuitem name="Exams" id="menu_exam_config_main_exam"
            parent="menu_exam_main" 
            action="action_exam"
            groups="de_school_exam.group_exam_user" 
            sequence="20"
        />
        
    </data>
</odoo>