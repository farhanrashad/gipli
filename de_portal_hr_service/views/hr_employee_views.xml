<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="employee_form_view_inherit_portal_user" model="ir.ui.view">
        <field name="name">employee.form.view.inherit.portal.user</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='hr_settings']/group[1]/group[@name='active_group']/field[@name='user_id']" position="replace">
                <field name="user_id" string="Related User" context="{'allow_create_employee': False, 'default_create_employee': False}"/>
                </xpath>

        </field>
    </record>

    
</odoo>