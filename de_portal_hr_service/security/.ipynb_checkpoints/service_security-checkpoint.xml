<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_hr_service">
        <field name="name">HR Self Service</field>
        <field name="description">Helps you manage employee self service.</field>
        <field name="sequence">12</field>
    </record>
    
    <record id="group_hr_service_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_hr_service"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('base.user_admin'))]"/>
    </record>
    
    <record id="group_hr_service_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_hr_service"/>
        <field name="implied_ids" eval="[(4, ref('group_hr_service_user'))]"/>
    </record>
</odoo>